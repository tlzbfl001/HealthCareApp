<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:color="#EEEEEE" android:width="1dp" />
                    <corners android:radius="3dp" />
                    <solid android:color="#ffffff" />
                </shape>
            </item>
            <item android:drawable="@drawable/drug_check_item_gray"
                android:top="3dp"
                android:right="2dp"
                android:bottom="3dp"
                android:left="2dp"/>
        </layer-list>
    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#999999" />
                </shape>
            </item>
            <item android:drawable="@drawable/drug_check_item_white"
                android:top="3dp"
                android:right="2dp"
                android:bottom="3dp"
                android:left="2dp"/>
        </layer-list>
    </item>
</selector>