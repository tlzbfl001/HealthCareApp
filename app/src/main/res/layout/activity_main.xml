<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white"
   tools:context=".view.init.MainActivity">
   <FrameLayout
      android:id="@+id/mainFrame"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/navigation"/>
   <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/navigation"
      android:layout_width="match_parent"
      android:layout_height="68dp"
      android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
      app:menu="@menu/menu_bottom"
      app:background="@color/white"
      app:itemIconTint="@drawable/nav_bottom_icon"
      app:itemTextColor="@drawable/nav_bottom_icon"
      app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
      app:itemTextAppearanceInactive="@style/BottomNavigationView"
      app:itemIconSize="23dp"
      app:itemPaddingTop="14dp"
      app:itemPaddingBottom="14dp"
      app:labelVisibilityMode="labeled"
      app:layout_constraintTop_toBottomOf="@id/mainFrame"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
