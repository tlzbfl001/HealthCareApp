<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/transparent">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#EEEEEE"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <ImageView
         android:id="@+id/ivX"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:src="@drawable/x1"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="20dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"/>
      <TextView
         android:id="@+id/tvTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="직접 등록하기"
         android:textSize="16dp"
         android:textColor="@color/black"
         app:layout_constraintTop_toTopOf="@id/ivX"
         app:layout_constraintBottom_toBottomOf="@id/ivX"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>
      <TextView
         android:id="@+id/tv1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="분류명"
         android:textAlignment="textEnd"
         android:textSize="16dp"
         android:textColor="@color/black"
         app:layout_constraintTop_toTopOf="@id/et"
         app:layout_constraintBottom_toBottomOf="@id/et"
         app:layout_constraintStart_toStartOf="@id/ivX"/>
      <EditText
         android:id="@+id/et"
         android:layout_width="170dp"
         android:layout_height="wrap_content"
         android:background="@drawable/rec_border_black1"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         android:layout_marginTop="45dp"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="45dp"
         android:textColor="@color/black"
          android:textSize="14dp"
         app:layout_constraintBottom_toTopOf="@id/tvConfirm"
         app:layout_constraintTop_toBottomOf="@id/tvTitle"
         app:layout_constraintStart_toEndOf="@id/tv1"
         app:layout_constraintEnd_toStartOf="@id/iv"/>
      <ImageView
         android:id="@+id/iv"
         android:layout_width="23dp"
         android:layout_height="23dp"
         android:src="@drawable/x2"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="20dp"
         app:layout_constraintStart_toEndOf="@id/et"
         app:layout_constraintTop_toTopOf="@id/et"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="@id/et"/>
      <TextView
         android:id="@+id/tvConfirm"
         android:layout_width="0dp"
         android:layout_height="45dp"
         android:gravity="center"
         android:background="#888888"
         android:text="완료"
         android:textSize="16dp"
         android:textColor="@color/white"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>