<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/transparent">
   <com.google.android.material.card.MaterialCardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/white"
      app:cardElevation="0dp"
      app:cardCornerRadius="20dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:padding="20dp">
         <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="물섭취 입력"
            android:textSize="16dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
         <TextView
            android:id="@+id/tv1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="컵 사이즈"
            android:textAlignment="textEnd"
            android:textSize="14dp"
            android:textColor="#BBB4B4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/etVolume"
            app:layout_constraintBottom_toBottomOf="@id/etVolume"/>
         <EditText
            android:id="@+id/etVolume"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_border_gray"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toEndOf="@id/tv1"/>
         <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="ml"
            android:textSize="14dp"
            android:textColor="#BBB4B4"
            app:layout_constraintTop_toTopOf="@id/etVolume"
            app:layout_constraintBottom_toBottomOf="@id/etVolume"
            app:layout_constraintStart_toEndOf="@id/etVolume"/>
         <TextView
            android:id="@+id/tv3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="목표 섭취물"
            android:textAlignment="textEnd"
            android:textSize="14dp"
            android:textColor="#BBB4B4"
            app:layout_constraintTop_toTopOf="@id/etGoal"
            app:layout_constraintBottom_toBottomOf="@id/etGoal"
            app:layout_constraintStart_toStartOf="parent" />
         <EditText
            android:id="@+id/etGoal"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_border_gray"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@id/tv3"
            app:layout_constraintTop_toBottomOf="@id/etVolume"/>
         <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="잔"
            android:textSize="14dp"
            android:textColor="#BBB4B4"
            app:layout_constraintTop_toTopOf="@id/etGoal"
            app:layout_constraintBottom_toBottomOf="@id/etGoal"
            app:layout_constraintStart_toEndOf="@id/etGoal"/>
         <androidx.cardview.widget.CardView
            android:id="@+id/btnSave"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#41C6FF"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/etGoal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text="저장"
               android:textSize="14dp"
               android:textColor="@color/white"/>
         </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>