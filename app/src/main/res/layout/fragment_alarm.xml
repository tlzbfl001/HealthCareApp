<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:id="@+id/mainLayout"
   android:background="@color/light_grey_black">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      app:layout_constraintTop_toTopOf="@id/tvTitle"
      app:layout_constraintBottom_toBottomOf="@id/tvTitle"
      app:layout_constraintStart_toStartOf="parent">
      <ImageView
         android:layout_width="12dp"
         android:layout_height="24dp"
         android:src="@drawable/arrow_back"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:tint="@color/black_white" />
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:text="알림 설정"
      android:textSize="18dp"
      android:textColor="@color/black_white"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="@id/clBack"
      app:layout_constraintEnd_toEndOf="parent"/>
   <androidx.cardview.widget.CardView
      android:id="@+id/cv1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="25dp"
      android:layout_marginRight="25dp"
      app:cardCornerRadius="15dp"
      app:cardElevation="3dp"
      app:cardBackgroundColor="@color/white_grey"
      app:layout_constraintTop_toBottomOf="@id/tvTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingTop="20dp"
         android:paddingBottom="20dp"
         android:paddingLeft="15dp"
         android:paddingRight="15dp">
         <TextView
            android:id="@+id/tvAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앱 알림 설정"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tvPerm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="꺼짐"
            android:textSize="15dp"
            android:textColor="@color/grey_white"
            app:layout_constraintTop_toTopOf="@+id/tvAlarm"
            app:layout_constraintBottom_toBottomOf="@id/tvAlarm"
            app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
      android:id="@+id/cv2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="25dp"
      android:layout_marginRight="25dp"
      app:cardCornerRadius="15dp"
      app:cardElevation="3dp"
      app:cardBackgroundColor="@color/white_grey"
      app:layout_constraintTop_toBottomOf="@id/cv1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingTop="20dp"
         android:paddingBottom="20dp"
         android:paddingLeft="15dp"
         android:paddingRight="15dp">
         <TextView
            android:id="@+id/tvReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람 및 리마인더 설정"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tvPerm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="꺼짐"
            android:textSize="15dp"
            android:textColor="@color/grey_white"
            app:layout_constraintTop_toTopOf="@+id/tvReminder"
            app:layout_constraintBottom_toBottomOf="@id/tvReminder"
            app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>