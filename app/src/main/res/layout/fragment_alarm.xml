<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/mainLayout"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white_black">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="10dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clBack"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingLeft="25dp"
         android:paddingRight="10dp"
         app:layout_constraintTop_toTopOf="@id/tvDate"
         app:layout_constraintBottom_toBottomOf="@id/tvDate"
         app:layout_constraintStart_toStartOf="parent">
         <ImageView
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/black_white" />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <TextView
         android:id="@+id/tvDate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:text="알림 설정"
         android:gravity="center_vertical"
         android:textColor="@color/black_white"
         android:textSize="18dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvPerm1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="권한 미설정"
      android:textColor="@color/grey_white"
      android:textSize="16dp"
      android:layout_marginTop="25dp"
      android:layout_marginLeft="25dp"
      app:layout_constraintTop_toBottomOf="@id/cl"
      app:layout_constraintStart_toStartOf="parent"/>
   <androidx.cardview.widget.CardView
      android:id="@+id/cvPerm1"
      android:layout_width="155dp"
      android:layout_height="wrap_content"
      app:cardBackgroundColor="@color/grey_dark_grey"
      app:cardCornerRadius="10dp"
      android:layout_marginRight="25dp"
      app:layout_constraintTop_toTopOf="@id/tvPerm1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/tvPerm1">
      <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="9dp"
         android:layout_marginBottom="9dp"
         android:text="알람 권한 설정"
         android:textSize="16dp"
         android:textColor="#FFFFFF"
         android:textAlignment="center"/>
   </androidx.cardview.widget.CardView>
   <TextView
      android:id="@+id/tvPerm2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      android:text="권한 미설정"
      android:textColor="@color/grey_white"
      android:textSize="16dp"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="25dp"
      app:layout_constraintTop_toBottomOf="@id/cvPerm1"
      app:layout_constraintStart_toStartOf="parent"/>
   <androidx.cardview.widget.CardView
      android:id="@+id/cvPerm2"
      android:layout_width="155dp"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:cardBackgroundColor="@color/grey_dark_grey"
      app:cardCornerRadius="10dp"
      android:layout_marginRight="25dp"
      app:layout_constraintTop_toTopOf="@id/tvPerm2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/tvPerm2">
      <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:text="알람 및 리마인더 설정"
         android:textSize="15dp"
         android:textColor="#FFFFFF"
         android:textAlignment="center"/>
   </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>