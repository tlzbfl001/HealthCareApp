<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_black"
    android:id="@+id/mainLayout">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="20dp"
      android:paddingRight="30dp"
      app:layout_constraintBottom_toBottomOf="@id/tvTitle"
      app:layout_constraintTop_toTopOf="@id/tvTitle"
      app:layout_constraintStart_toStartOf="parent">
      <ImageView
         android:layout_width="12dp"
         android:layout_height="24dp"
         android:src="@drawable/arrow_back"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"
         app:tint="@color/black_white"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:text="나의 신체 정보 기록"
      android:textSize="17dp"
      android:textColor="@color/black_white"
      android:fontFamily="@font/noto"
      android:includeFontPadding="false"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="@id/clBack"
      app:layout_constraintEnd_toEndOf="parent"/>
   <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/clBack"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent" >
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/constraint"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/white_grey"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
               <TextView
                  android:id="@+id/tv1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="기본 정보"
                  android:textSize="17dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto_bold"
                  android:includeFontPadding="false"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>
               <TextView
                  android:id="@+id/tv2"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="18dp"
                  android:text="BMI"
                  android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/tv1"/>
               <EditText
                   android:id="@+id/etBmi"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="@color/grey_white"
                   android:textSize="16dp"
                   android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   android:singleLine="true"
                   android:inputType="numberDecimal"
                   android:maxLength="4"
                   app:layout_constraintStart_toEndOf="@id/tv2"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@id/tv2"
                   app:layout_constraintBottom_toBottomOf="@id/tv2"/>
               <TextView
                   android:id="@+id/tv3"
                   android:layout_width="90dp"
                   android:layout_height="wrap_content"
                  android:layout_marginTop="18dp"
                   android:text="체지방율"
                   android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/tv2"/>
               <EditText
                  android:id="@+id/etFat"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:paddingRight="20dp"
                  android:backgroundTint="@color/grey_white"
                  android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  android:singleLine="true"
                  android:inputType="numberDecimal"
                  android:maxLength="4"
                  app:layout_constraintStart_toEndOf="@id/tv3"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="@id/tv3"
                  app:layout_constraintBottom_toBottomOf="@id/tv3"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_marginRight="5dp"
                   android:text="%"
                   android:textSize="15dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="@id/etFat"/>
               <TextView
                   android:id="@+id/tv4"
                   android:layout_width="90dp"
                   android:layout_height="wrap_content"
                  android:layout_marginTop="18dp"
                   android:text="골격근량"
                   android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/tv3"/>
               <EditText
                  android:id="@+id/etMuscle"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:paddingRight="20dp"
                  android:backgroundTint="@color/grey_white"
                  android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  android:singleLine="true"
                  android:inputType="numberDecimal"
                  android:maxLength="4"
                  app:layout_constraintStart_toEndOf="@id/tv4"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="@id/tv4"
                  app:layout_constraintBottom_toBottomOf="@id/tv4"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_marginRight="5dp"
                   android:text="kg"
                   android:textSize="14dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="@id/etMuscle"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/white_grey"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/cv1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="15dp">
               <TextView
                  android:id="@+id/tv5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="기초대사량 구하기"
                  android:textSize="17dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto_bold"
                  android:includeFontPadding="false"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>
               <TextView
                  android:id="@+id/tv6"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="22dp"
                  android:text="Step 1."
                  android:textSize="16dp"
                  android:textColor="#9FB684"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/tv5"/>
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:text="내 신체 정보 입력"
                  android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  app:layout_constraintTop_toTopOf="@id/tv6"
                  app:layout_constraintBottom_toBottomOf="@id/tv6"
                  app:layout_constraintStart_toEndOf="@id/tv6"/>
               <TextView
                   android:id="@+id/tv7"
                   android:layout_width="90dp"
                   android:layout_height="wrap_content"
                   android:text="키"
                   android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="@id/etHeight"
                   app:layout_constraintBottom_toBottomOf="@id/etHeight"/>
               <EditText
                  android:id="@+id/etHeight"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:backgroundTint="@color/grey_white"
                  android:layout_marginTop="10dp"
                  android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  android:singleLine="true"
                  android:inputType="numberDecimal"
                  android:maxLength="5"
                  app:layout_constraintStart_toEndOf="@id/tv7"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/tv6"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_marginRight="5dp"
                   android:text="cm"
                   android:textSize="14dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="@id/etHeight"/>
               <TextView
                   android:id="@+id/tv8"
                   android:layout_width="90dp"
                   android:layout_height="wrap_content"
                   android:text="몸무게"
                   android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="@id/etWeight"
                   app:layout_constraintBottom_toBottomOf="@id/etWeight"/>
               <EditText
                  android:id="@+id/etWeight"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:backgroundTint="@color/grey_white"
                  android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  android:singleLine="true"
                  android:inputType="numberDecimal"
                  android:maxLength="5"
                  app:layout_constraintStart_toEndOf="@id/tv8"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/etHeight"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_marginRight="5dp"
                   android:text="kg"
                   android:textSize="14dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="@id/etWeight"/>
               <TextView
                   android:id="@+id/tv11"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="22dp"
                   android:text="Step 1."
                   android:textSize="16dp"
                   android:textColor="#9FB684"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/etWeight"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:text="내 신체 정보 입력"
                   android:textSize="16dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                   app:layout_constraintTop_toTopOf="@id/tv11"
                   app:layout_constraintBottom_toBottomOf="@id/tv11"
                   app:layout_constraintStart_toEndOf="@id/tv11"/>
               <RadioGroup
                   android:id="@+id/radioGroup"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="12dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/tv11">
                  <com.google.android.material.radiobutton.MaterialRadioButton
                      android:id="@+id/radioBtn1"
                      android:layout_width="wrap_content"
                      android:layout_height="25dp"
                      android:background="@null"
                      android:button="@null"
                      android:drawableStart="@drawable/radio_btn_custom"
                      android:drawablePadding="8dp"
                      android:checked="true"
                      android:text="활동 안함 : 전혀 운동을 하지 않음"
                      android:textSize="12dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"/>
                  <com.google.android.material.radiobutton.MaterialRadioButton
                      android:id="@+id/radioBtn2"
                      android:layout_width="wrap_content"
                      android:layout_height="25dp"
                      android:background="@null"
                      android:button="@null"
                      android:drawableStart="@drawable/radio_btn_custom"
                      android:drawablePadding="8dp"
                      android:text="가벼운 활동 : 가벼운 운동이나 스포츠 1~3일"
                      android:textSize="12dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"/>
                  <com.google.android.material.radiobutton.MaterialRadioButton
                      android:id="@+id/radioBtn3"
                      android:layout_width="wrap_content"
                      android:layout_height="25dp"
                      android:background="@null"
                      android:button="@null"
                      android:drawableStart="@drawable/radio_btn_custom"
                      android:drawablePadding="8dp"
                      android:text="보통 활동 : 적당한 운동이나 스포츠 3~5일"
                      android:textSize="12dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"/>
                  <com.google.android.material.radiobutton.MaterialRadioButton
                      android:id="@+id/radioBtn4"
                      android:layout_width="wrap_content"
                      android:layout_height="25dp"
                      android:background="@null"
                      android:button="@null"
                      android:drawableStart="@drawable/radio_btn_custom"
                      android:drawablePadding="8dp"
                      android:text="매우 활동 : 강렬한 운동이나 스포츠 6~7일"
                      android:textSize="12dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"/>
                  <com.google.android.material.radiobutton.MaterialRadioButton
                      android:id="@+id/radioBtn5"
                      android:layout_width="wrap_content"
                      android:layout_height="25dp"
                      android:background="@null"
                      android:button="@null"
                      android:drawableStart="@drawable/radio_btn_custom"
                      android:drawablePadding="8dp"
                      android:text="심한 활동 : 매우 심한 운동이나 물리적 작업"
                      android:textSize="12dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"/>
               </RadioGroup>
               <androidx.cardview.widget.CardView
                   android:id="@+id/cvResult"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="33dp"
                   android:backgroundTint="@color/purple"
                   app:cardCornerRadius="50dp"
                   app:cardElevation="0dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/radioGroup">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:paddingLeft="32dp"
                      android:layout_marginTop="8dp"
                      android:paddingRight="32dp"
                      android:layout_marginBottom="9dp"
                      android:text="결과보기"
                      android:textColor="@color/white"
                      android:textSize="15dp"
                     android:fontFamily="@font/noto_bold"
                     android:includeFontPadding="false"/>
               </androidx.cardview.widget.CardView>
               <View
                  android:id="@+id/view"
                  android:layout_width="match_parent"
                  android:layout_height="18dp"
                  app:layout_constraintTop_toBottomOf="@id/cvResult"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/clResult"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:visibility="gone"
                  app:layout_constraintTop_toBottomOf="@id/view"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent">
                  <TextView
                     android:id="@+id/tvBmrText"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="나의 기초대사량:"
                     android:textSize="14dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"/>
                  <TextView
                     android:id="@+id/tvBmr"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:layout_marginBottom="2dp"
                     android:text="0"
                     android:textSize="15dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto_bold"
                     android:includeFontPadding="false"
                     app:layout_constraintBottom_toBottomOf="@id/tvBmrText"
                     app:layout_constraintStart_toEndOf="@id/tvBmrText"/>
                  <TextView
                     android:id="@+id/tvTotalText"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:text="나의 하루 에너지소비량:"
                     android:textSize="14dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     android:textColor="@color/black_white"
                     app:layout_constraintTop_toBottomOf="@id/tvBmrText"
                     app:layout_constraintStart_toStartOf="parent"/>
                  <TextView
                     android:id="@+id/tvTotal"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:layout_marginBottom="2dp"
                     android:text="0"
                     android:textSize="16dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto_bold"
                     android:includeFontPadding="false"
                     app:layout_constraintBottom_toBottomOf="@id/tvTotalText"
                     app:layout_constraintStart_toEndOf="@id/tvTotalText"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
            android:id="@+id/cvSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:cardBackgroundColor="@color/main_button"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/cv2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                  android:id="@+id/tvStart"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="저장"
                  android:textColor="@color/white"
                  android:textSize="16dp"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>