<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white">
   <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/tvSave"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
               android:id="@+id/ivBack"
               android:layout_width="15dp"
               android:layout_height="25dp"
               android:src="@drawable/arrow_left"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="25dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
            <TextView
               android:id="@+id/tvTitle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:text="나의 신체 밸런스 관리"
               android:textSize="20dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <LinearLayout
            android:id="@+id/cl1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/cl2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <TextView
                  android:id="@+id/tv1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="기본정보"
                  android:textSize="18dp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>
               <com.google.android.material.card.MaterialCardView
                  android:id="@+id/cvBmi"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#969696"
                  android:layout_marginTop="14dp"
                  app:cardElevation="0dp"
                  app:cardCornerRadius="5dp"
                  app:layout_constraintTop_toBottomOf="@id/tv1"
                  app:layout_constraintStart_toStartOf="parent">
                  <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginTop="3dp"
                     android:layout_marginBottom="3dp"
                     android:text="BMI"
                     android:textSize="14dp"
                     android:textColor="@color/white"/>
               </com.google.android.material.card.MaterialCardView>
               <EditText
                  android:id="@+id/etBmi"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#969696"
                  android:layout_marginLeft="12dp"
                  android:textColor="#969696"
                  android:textSize="14dp"
                  android:inputType="numberDecimal"
                  app:layout_constraintTop_toTopOf="@id/cvBmi"
                  app:layout_constraintBottom_toBottomOf="@id/cvBmi"
                  app:layout_constraintStart_toEndOf="@id/cvBmi"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <com.google.android.material.card.MaterialCardView
                  android:id="@+id/cvFat"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#969696"
                  android:layout_marginTop="10dp"
                  app:cardElevation="0dp"
                  app:cardCornerRadius="5dp"
                  app:layout_constraintTop_toBottomOf="@id/cvBmi"
                  app:layout_constraintStart_toStartOf="parent">
                  <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                      android:layout_marginTop="3dp"
                      android:layout_marginBottom="3dp"
                     android:text="체지방율"
                     android:textSize="14dp"
                     android:textColor="@color/white"
                     android:inputType="numberDecimal" />
               </com.google.android.material.card.MaterialCardView>
               <EditText
                  android:id="@+id/etFat"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#969696"
                  android:layout_marginLeft="12dp"
                  android:textColor="#969696"
                  android:textSize="14dp"
                  android:inputType="numberDecimal"
                  app:layout_constraintTop_toTopOf="@id/cvFat"
                  app:layout_constraintBottom_toBottomOf="@id/cvFat"
                  app:layout_constraintStart_toEndOf="@id/cvFat"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <com.google.android.material.card.MaterialCardView
                  android:id="@+id/cvMuscle"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#969696"
                  android:layout_marginTop="10dp"
                  app:cardElevation="0dp"
                  app:cardCornerRadius="5dp"
                  app:layout_constraintTop_toBottomOf="@id/cvFat"
                  app:layout_constraintStart_toStartOf="parent">
                  <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                      android:layout_marginTop="3dp"
                      android:layout_marginBottom="3dp"
                     android:text="골격근량"
                     android:textSize="14dp"
                     android:textColor="@color/white"
                     android:inputType="numberDecimal"/>
               </com.google.android.material.card.MaterialCardView>
               <EditText
                  android:id="@+id/etMuscle"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#969696"
                  android:layout_marginLeft="12dp"
                  android:textColor="#969696"
                  android:textSize="14dp"
                  android:inputType="numberDecimal"
                  app:layout_constraintTop_toTopOf="@id/cvMuscle"
                  app:layout_constraintBottom_toBottomOf="@id/cvMuscle"
                  app:layout_constraintStart_toEndOf="@id/cvMuscle"
                  app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#EEEEEE">
               <TextView
                   android:id="@+id/tv2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="25dp"
                   android:text="기초대사량 구하기"
                   android:textColor="@color/black"
                   android:textSize="18dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />
               <TextView
                   android:id="@+id/tv3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="25dp"
                   android:text="step1."
                   android:textColor="@color/black"
                   android:textSize="12dp"
                   app:layout_constraintBottom_toBottomOf="@id/tvInputTitle2"
                   app:layout_constraintStart_toStartOf="parent" />
               <TextView
                   android:id="@+id/tvInputTitle2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="4dp"
                   android:layout_marginTop="20dp"
                   android:text="내 신체 정보 입력"
                   android:textColor="@color/black"
                   android:textSize="14dp"
                   app:layout_constraintTop_toBottomOf="@id/tv2"
                   app:layout_constraintStart_toEndOf="@id/tv3" />
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/cvHeight"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="35dp"
                   android:layout_marginTop="10dp"
                   android:backgroundTint="#969696"
                   app:cardCornerRadius="5dp"
                   app:cardElevation="0dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/tv3">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="3dp"
                      android:layout_marginBottom="3dp"
                      android:text="키"
                      android:textColor="@color/white"
                      android:textSize="14dp"
                      android:inputType="number"/>
               </com.google.android.material.card.MaterialCardView>
               <EditText
                   android:id="@+id/etHeight"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="12dp"
                   android:layout_marginRight="25dp"
                   android:layout_weight="1"
                   android:backgroundTint="#969696"
                   android:inputType="numberDecimal"
                   android:textColor="#969696"
                   android:textSize="14dp"
                   app:layout_constraintBottom_toBottomOf="@id/cvHeight"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.324"
                   app:layout_constraintStart_toEndOf="@id/cvHeight"
                   app:layout_constraintTop_toTopOf="@id/cvHeight"
                   app:layout_constraintVertical_bias="0.692" />
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/cvWeight"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="35dp"
                   android:layout_marginTop="10dp"
                   android:backgroundTint="#969696"
                   app:cardCornerRadius="5dp"
                   app:cardElevation="0dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cvHeight">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="3dp"
                      android:layout_marginBottom="3dp"
                      android:text="체중"
                      android:textColor="@color/white"
                      android:textSize="14dp"
                      android:inputType="number"/>
               </com.google.android.material.card.MaterialCardView>
               <EditText
                   android:id="@+id/etWeight"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="12dp"
                   android:layout_marginRight="25dp"
                   android:layout_weight="1"
                   android:backgroundTint="#969696"
                   android:textSize="14dp"
                   android:textColor="#969696"
                   android:inputType="numberDecimal"
                   app:layout_constraintBottom_toBottomOf="@id/cvWeight"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@id/cvWeight"
                   app:layout_constraintTop_toTopOf="@id/cvWeight" />
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/cvAge"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="35dp"
                   android:layout_marginTop="10dp"
                   android:backgroundTint="#969696"
                   app:cardCornerRadius="5dp"
                   app:cardElevation="0dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cvWeight">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="3dp"
                      android:layout_marginBottom="3dp"
                      android:text="나이"
                      android:textColor="@color/white"
                      android:textSize="14dp"
                      android:inputType="number"/>
               </com.google.android.material.card.MaterialCardView>
               <EditText
                   android:id="@+id/etAge"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="12dp"
                   android:layout_marginRight="25dp"
                   android:layout_weight="1"
                   android:backgroundTint="#969696"
                   android:textSize="14dp"
                   android:textColor="#969696"
                   android:inputType="number"
                   app:layout_constraintBottom_toBottomOf="@id/cvAge"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@id/cvAge"
                   app:layout_constraintTop_toTopOf="@id/cvAge" />
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/cvGender"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="35dp"
                   android:layout_marginTop="10dp"
                   android:backgroundTint="#969696"
                   app:cardCornerRadius="5dp"
                   app:cardElevation="0dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cvAge">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="3dp"
                      android:layout_marginBottom="3dp"
                      android:text="성별"
                      android:textColor="@color/white"
                      android:textSize="14dp" />
               </com.google.android.material.card.MaterialCardView>
               <EditText
                   android:id="@+id/etGender"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="12dp"
                   android:layout_marginRight="25dp"
                   android:layout_weight="1"
                   android:backgroundTint="#969696"
                   android:textSize="14dp"
                   android:textColor="#969696"
                   app:layout_constraintBottom_toBottomOf="@id/cvGender"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@id/cvGender"
                   app:layout_constraintTop_toTopOf="@id/cvGender" />
               <TextView
                   android:id="@+id/tv4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="25dp"
                   android:text="step1."
                   android:textColor="@color/black"
                   android:textSize="12dp"
                   app:layout_constraintBottom_toBottomOf="@id/tv5"
                   app:layout_constraintStart_toStartOf="parent" />
               <TextView
                   android:id="@+id/tv5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="4dp"
                   android:layout_marginTop="20dp"
                   android:text="활동 및 운동 수준 선택"
                   android:textColor="@color/black"
                   android:textSize="14dp"
                   app:layout_constraintTop_toBottomOf="@+id/etGender"
                   app:layout_constraintStart_toEndOf="@id/tv4" />
               <RadioGroup
                  android:id="@+id/radioGroup"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="35dp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/tv4">
                  <com.google.android.material.radiobutton.MaterialRadioButton
                     android:id="@+id/radioBtn1"
                     android:layout_width="wrap_content"
                     android:layout_height="32dp"
                     style="@style/Widget.Material3.CompoundButton.CheckBox"
                     android:background="@null"
                     android:button="@null"
                     android:drawableStart="@drawable/radio_btn_bg"
                     android:drawablePadding="8dp"
                     android:checked="true"
                     android:text="활동 안함 : 전혀 운동을 하지 않음"
                     android:textSize="12dp"
                     android:textColor="@color/black"/>
                  <com.google.android.material.radiobutton.MaterialRadioButton
                      android:id="@+id/radioBtn2"
                      android:layout_width="wrap_content"
                      android:layout_height="32dp"
                      style="@style/Widget.Material3.CompoundButton.CheckBox"
                      android:background="@null"
                      android:button="@null"
                      android:drawableStart="@drawable/radio_btn_bg"
                      android:drawablePadding="8dp"
                      android:text="가벼운 활동 : 가벼운 운동이나 스포츠 1~3일"
                      android:textSize="12dp"
                      android:textColor="@color/black"/>
                  <com.google.android.material.radiobutton.MaterialRadioButton
                      android:id="@+id/radioBtn3"
                      android:layout_width="wrap_content"
                      android:layout_height="32dp"
                      style="@style/Widget.Material3.CompoundButton.CheckBox"
                      android:background="@null"
                      android:button="@null"
                      android:drawableStart="@drawable/radio_btn_bg"
                      android:drawablePadding="8dp"
                      android:text="보통 활동 : 적당한 운동이나 스포츠 3~5일"
                      android:textSize="12dp"
                      android:textColor="@color/black"/>
                  <com.google.android.material.radiobutton.MaterialRadioButton
                      android:id="@+id/radioBtn4"
                      android:layout_width="wrap_content"
                      android:layout_height="32dp"
                      style="@style/Widget.Material3.CompoundButton.CheckBox"
                      android:background="@null"
                      android:button="@null"
                      android:drawableStart="@drawable/radio_btn_bg"
                      android:drawablePadding="8dp"
                      android:text="매우 활동 : 강렬한 운동이나 스포츠 6~7일"
                      android:textSize="12dp"
                      android:textColor="@color/black"/>
                  <com.google.android.material.radiobutton.MaterialRadioButton
                      android:id="@+id/radioBtn5"
                      android:layout_width="wrap_content"
                      android:layout_height="32dp"
                      style="@style/Widget.Material3.CompoundButton.CheckBox"
                      android:background="@null"
                      android:button="@null"
                      android:drawableStart="@drawable/radio_btn_bg"
                      android:drawablePadding="8dp"
                      android:text="심한 활동 : 매우 심한 운동이나 물리적 작업"
                      android:textSize="12dp"
                      android:textColor="@color/black"/>
               </RadioGroup>
               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/clResult"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="25dp"
                   android:backgroundTint="#B4B4B5"
                   app:cardCornerRadius="5dp"
                   app:cardElevation="0dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/radioGroup">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:paddingLeft="35dp"
                      android:layout_marginTop="6dp"
                      android:paddingRight="35dp"
                      android:layout_marginBottom="6dp"
                      android:text="결과보기"
                      android:textColor="@color/white"
                      android:textSize="16dp" />
               </com.google.android.material.card.MaterialCardView>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/clResultBox"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#A9AFBC"
                   android:layout_marginTop="25dp"
                   android:paddingTop="14dp"
                   android:paddingBottom="14dp"
                   app:layout_constraintTop_toBottomOf="@id/clResult"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent">
                  <TextView
                      android:id="@+id/tvInputTitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="기초대사량"
                      android:textSize="16dp"
                      android:textColor="@color/white"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/tvBmr"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintHorizontal_chainStyle="packed"/>
                  <TextView
                      android:id="@+id/tvBmr"
                      android:layout_width="180dp"
                      android:layout_height="wrap_content"
                      android:background="@drawable/rec_5"
                      android:layout_marginLeft="25dp"
                      android:padding="5dp"
                      android:textSize="15dp"
                      android:textColor="@color/black"
                      app:layout_constraintStart_toEndOf="@id/tvInputTitle"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/tvKcalText"
                      app:layout_constraintBottom_toBottomOf="parent"/>
                  <TextView
                      android:id="@+id/tvKcalText"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:text="kcal"
                      android:textSize="16dp"
                      android:textColor="@color/white"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toEndOf="@id/tvBmr"
                      app:layout_constraintBottom_toBottomOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </LinearLayout>
      </LinearLayout>
   </ScrollView>
   <TextView
      android:id="@+id/tvSave"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="#888888"
      android:gravity="center"
      android:text="저장"
      android:textColor="@color/white"
      android:textSize="20dp"
      app:layout_constraintTop_toBottomOf="@id/scrollView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>