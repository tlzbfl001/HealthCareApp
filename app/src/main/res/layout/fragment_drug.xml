<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white">
   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <ImageView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:background="@drawable/drug_top"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingLeft="25dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
               <ImageView
                   android:layout_width="15dp"
                   android:layout_height="25dp"
                   android:src="@drawable/arrow_left"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="120dp"
                android:layout_height="13dp"
                android:src="@drawable/logo3"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                app:cardBackgroundColor="#FBFAFA"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/ivLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                  <ImageView
                      android:id="@+id/ivPrev"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_left_triangle"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/tvDate"/>
                  <TextView
                      android:id="@+id/tvDate"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="2023년 7월 23일"
                      android:textColor="@color/black"
                      android:textSize="15dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/ivNext"
                      app:layout_constraintStart_toEndOf="@id/ivPrev"/>
                  <ImageView
                      android:id="@+id/ivNext"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_right_triangle"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                      app:layout_constraintStart_toEndOf="@id/tvDate"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cvDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <androidx.cardview.widget.CardView
                   android:id="@+id/cvFood"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="17dp"
                   android:layout_marginBottom="17dp"
                   android:layout_marginRight="8dp"
                   android:layout_marginLeft="25dp"
                   app:cardBackgroundColor="@color/white"
                   app:cardCornerRadius="6dp"
                   app:cardElevation="3dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/cvWater"
                   app:layout_constraintHorizontal_weight="3">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:paddingTop="6dp"
                      android:paddingBottom="6dp"
                      android:text="식단"
                      android:textSize="18dp"
                      android:textColor="#888888"/>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/cvWater"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="17dp"
                   android:layout_marginBottom="17dp"
                   android:layout_marginRight="8dp"
                   app:cardBackgroundColor="@color/white"
                   app:cardCornerRadius="6dp"
                   app:cardElevation="3dp"
                   app:layout_constraintStart_toEndOf="@id/cvFood"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/cvExercise"
                   app:layout_constraintHorizontal_weight="2">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:paddingTop="6dp"
                      android:paddingBottom="6dp"
                      android:text="물"
                      android:textSize="18dp"
                      android:textColor="#888888"/>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/cvExercise"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="17dp"
                   android:layout_marginBottom="17dp"
                   android:layout_marginRight="8dp"
                   app:cardBackgroundColor="@color/white"
                   app:cardCornerRadius="6dp"
                   app:cardElevation="3dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toEndOf="@id/cvWater"
                   app:layout_constraintEnd_toStartOf="@id/cvBody"
                   app:layout_constraintHorizontal_weight="3">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:paddingTop="6dp"
                      android:paddingBottom="6dp"
                      android:text="운동"
                      android:textSize="18dp"
                      android:textColor="#888888"/>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/cvBody"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="17dp"
                   android:layout_marginBottom="17dp"
                   android:layout_marginRight="8dp"
                   app:cardBackgroundColor="@color/white"
                   app:cardCornerRadius="6dp"
                   app:cardElevation="3dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toEndOf="@id/cvExercise"
                   app:layout_constraintEnd_toStartOf="@id/cvSleep"
                   app:layout_constraintHorizontal_weight="3">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:paddingTop="6dp"
                      android:paddingBottom="6dp"
                      android:text="신체"
                      android:textSize="18dp"
                      android:textColor="#888888"/>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/cvSleep"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="17dp"
                   android:layout_marginBottom="17dp"
                   android:layout_marginRight="8dp"
                   app:cardBackgroundColor="@color/white"
                   app:cardCornerRadius="6dp"
                   app:cardElevation="3dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toEndOf="@id/cvBody"
                   app:layout_constraintEnd_toStartOf="@id/cvDrug"
                   app:layout_constraintHorizontal_weight="3">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:paddingTop="6dp"
                      android:paddingBottom="6dp"
                      android:text="수면"
                      android:textSize="18dp"
                      android:textColor="#888888"/>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/cvDrug"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="17dp"
                   android:layout_marginBottom="17dp"
                   android:layout_marginRight="25dp"
                   app:cardBackgroundColor="#9F76DF"
                   app:cardCornerRadius="6dp"
                   app:cardElevation="3dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toEndOf="@id/cvSleep"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_weight="4">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:paddingTop="6dp"
                      android:paddingBottom="6dp"
                      android:text="약복용"
                      android:textSize="18dp"
                      android:textColor="@color/white"/>
               </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/clLeft"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="25dp"
                   android:background="@drawable/rec_detail"
                   android:paddingTop="25dp"
                   android:paddingBottom="25dp"
                   app:layout_constraintEnd_toStartOf="@id/clRight"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintHorizontal_weight="5">
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="120dp"
                      android:layout_height="120dp"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent">
                     <com.dinuscxj.progressbar.CircleProgressBar
                         android:id="@+id/pbDrug"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         app:progress_background_color="#26BFA2EE"
                         app:progress_end_color="#9F76DF"
                         app:progress_start_color="#9F76DF"
                         app:progress_start_degree="90"
                         app:progress_stroke_cap="round"
                         app:progress_stroke_width="12dp"
                         app:progress_style="solid_line" />
                     <androidx.constraintlayout.widget.ConstraintLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_margin="18dp"
                         android:background="@drawable/oval_border_drug">
                        <TextView
                            android:id="@+id/tvDrug1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="복용횟수"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            app:layout_constraintBottom_toTopOf="@id/tvDrugCount"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />
                        <TextView
                            android:id="@+id/tvDrugCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0회"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvDrug1" />
                     </androidx.constraintlayout.widget.ConstraintLayout>
                  </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/clRight"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="25dp"
                   app:layout_constraintTop_toTopOf="@id/clLeft"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@id/clLeft"
                   app:layout_constraintHorizontal_weight="3">
                  <androidx.cardview.widget.CardView
                      android:id="@+id/cvGoal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:layout_marginRight="5dp"
                      app:cardBackgroundColor="#F2F2F2"
                      app:cardCornerRadius="8dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toEndOf="parent">
                     <androidx.constraintlayout.widget.ConstraintLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:paddingTop="5dp"
                         android:paddingBottom="5dp"
                         android:paddingLeft="10dp"
                         android:paddingRight="10dp">
                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="11dp"
                            android:layout_height="14dp"
                            android:src="@drawable/setting_goal"
                            app:tint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="5dp"
                            android:text="목표설정"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            app:layout_constraintStart_toEndOf="@id/iv1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                     </androidx.constraintlayout.widget.ConstraintLayout>
                  </androidx.cardview.widget.CardView>
                  <TextView
                      android:id="@+id/tv2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:text="목표 복용 횟수"
                      android:textColor="#999999"
                      android:textSize="12dp"
                      app:layout_constraintTop_toBottomOf="@id/cvGoal"
                      app:layout_constraintEnd_toEndOf="@id/cvGoal"/>
                  <TextView
                      android:id="@+id/tvGoal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="5회"
                      android:textColor="@color/black"
                      android:textSize="18dp"
                      app:layout_constraintTop_toBottomOf="@id/tv2"
                      app:layout_constraintEnd_toEndOf="@id/cvGoal"/>
                  <TextView
                      android:id="@+id/tv4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="남은 복용 횟수"
                      android:textColor="#999999"
                      android:textSize="12dp"
                      app:layout_constraintTop_toBottomOf="@id/tvGoal"
                      app:layout_constraintEnd_toEndOf="@id/cvGoal" />
                  <TextView
                      android:id="@+id/tvRemain"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="3회"
                      android:textColor="@color/black"
                      android:textSize="18dp"
                      app:layout_constraintTop_toBottomOf="@id/tv4"
                      app:layout_constraintEnd_toEndOf="@id/cvGoal" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="하루 약복용"
                android:textColor="#777777"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="@id/clRecord"
                app:layout_constraintBottom_toBottomOf="@id/clRecord"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_bar"
                android:backgroundTint="#9B65F1"
                android:elevation="3dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
               <ImageView
                   android:id="@+id/iv2"
                   android:layout_width="18dp"
                   android:layout_height="18dp"
                   android:background="@drawable/oval"
                   android:src="@drawable/pencil"
                   android:padding="3.3dp"
                   app:tint="#9B65F1"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:text="약복용 기록"
                   android:textColor="@color/white"
                   android:textSize="14dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toEndOf="@id/iv2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.cardview.widget.CardView
             android:id="@+id/cv1"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             app:cardBackgroundColor="@color/white"
             app:cardCornerRadius="7dp"
             app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
               <androidx.cardview.widget.CardView
                   android:id="@+id/cvList"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardBackgroundColor="#BFA2EE"
                   app:cardCornerRadius="7dp"
                   app:cardElevation="0dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent">
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="10dp"
                      android:paddingBottom="10dp"
                      android:paddingLeft="8dp"
                      android:paddingRight="8dp">
                     <TextView
                         android:id="@+id/tvList1"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:text="복용 시간"
                         android:textSize="13dp"
                         android:textColor="@color/white"
                         android:textAlignment="center"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintEnd_toStartOf="@id/tvList2"
                         app:layout_constraintHorizontal_weight="3"/>
                     <TextView
                         android:id="@+id/tvList2"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:text="오늘의 약"
                         android:textSize="13dp"
                         android:textColor="@color/white"
                         android:textAlignment="center"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintStart_toEndOf="@id/tvList1"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintEnd_toStartOf="@id/tvList3"
                         app:layout_constraintHorizontal_weight="3"/>
                     <TextView
                         android:id="@+id/tvList3"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:text="복용량"
                         android:textSize="13dp"
                         android:textColor="@color/white"
                         android:textAlignment="center"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintStart_toEndOf="@id/tvList2"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintEnd_toStartOf="@id/tvList4"
                         app:layout_constraintHorizontal_weight="3"/>
                     <TextView
                         android:id="@+id/tvList4"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:text="확인"
                         android:textSize="13dp"
                         android:textColor="@color/white"
                         android:textAlignment="center"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintStart_toEndOf="@id/tvList3"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintHorizontal_weight="2"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@id/recyclerView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="8dp"
                   android:paddingRight="8dp"
                   app:layout_constraintTop_toBottomOf="@id/cvList"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>
         </androidx.cardview.widget.CardView>
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#FCE0E0"
                app:cardCornerRadius="7dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cv3">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                  <ImageView
                      android:id="@+id/ivPharmacy"
                      android:layout_width="17dp"
                      android:layout_height="17dp"
                      android:src="@drawable/pharmacy"
                      android:layout_marginTop="17dp"
                      android:layout_marginBottom="17dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/tvSearch"
                      app:layout_constraintHorizontal_chainStyle="packed"/>
                  <TextView
                      android:id="@+id/tvSearch"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:text="약국/병원 검색"
