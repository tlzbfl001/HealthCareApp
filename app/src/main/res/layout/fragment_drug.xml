<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white"
   android:orientation="vertical"
   android:id="@+id/mainLayout">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clBack"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingLeft="25dp"
         android:paddingRight="10dp"
         app:layout_constraintTop_toTopOf="@id/tvDate"
         app:layout_constraintBottom_toBottomOf="@id/tvDate"
         app:layout_constraintStart_toStartOf="parent">
         <ImageView
            android:layout_width="12dp"
            android:layout_height="23dp"
            android:src="@drawable/arrow_back"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clPrev"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="@id/tvDate"
         app:layout_constraintBottom_toBottomOf="@id/tvDate"
         app:layout_constraintEnd_toStartOf="@id/tvDate"
         app:layout_constraintHorizontal_chainStyle="packed">
         <ImageView
            android:layout_width="9dp"
            android:layout_height="22dp"
            android:src="@drawable/arrow_left_triangle"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <TextView
         android:id="@+id/tvDate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:text="2023년 7월 23일"
         android:textColor="@color/black"
         android:textSize="17dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toStartOf="@id/clNext"
         app:layout_constraintStart_toEndOf="@id/clPrev"/>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clNext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toEndOf="@id/tvDate"
         app:layout_constraintTop_toTopOf="@id/tvDate"
         app:layout_constraintBottom_toBottomOf="@id/tvDate">
         <ImageView
            android:layout_width="9dp"
            android:layout_height="22dp"
            android:src="@drawable/arrow_right_triangle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <HorizontalScrollView
         android:id="@+id/horizontalScroll"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:scrollbars="none"
         android:layout_marginTop="10dp"
         app:layout_constraintTop_toBottomOf="@id/clBack"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp">
            <TextView
               android:id="@+id/cvFood"
               android:layout_width="64dp"
               android:layout_height="wrap_content"
               android:layout_marginRight="6dp"
               android:background="@drawable/rec_25_border_gray"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="식단"
               android:textAlignment="center"
               android:textColor="@color/black"
               android:textSize="16.5dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/cvWater"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />
            <TextView
               android:id="@+id/cvWater"
               android:layout_width="64dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_25_border_gray"
               android:layout_marginRight="6dp"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="물"
               android:textSize="16.5dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               app:layout_constraintStart_toEndOf="@id/cvFood"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/cvExercise"/>
            <TextView
               android:id="@+id/cvExercise"
               android:layout_width="64dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_25_border_gray"
               android:layout_marginRight="6dp"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="운동"
               android:textSize="16.5dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/cvWater"
               app:layout_constraintEnd_toStartOf="@id/cvBody"/>
            <TextView
               android:id="@+id/cvBody"
               android:layout_width="64dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_25_border_gray"
               android:layout_marginRight="6dp"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="신체"
               android:textSize="16.5dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/cvExercise"
               app:layout_constraintEnd_toStartOf="@id/cvSleep"/>
            <TextView
               android:id="@+id/cvSleep"
               android:layout_width="64dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_25_border_gray"
               android:layout_marginRight="6dp"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="수면"
               android:textSize="16.5dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/cvBody"
               app:layout_constraintEnd_toStartOf="@id/cvDrug"/>
            <androidx.cardview.widget.CardView
               android:id="@+id/cvDrug"
               android:layout_width="68dp"
               android:layout_height="wrap_content"
               android:layout_marginRight="50dp"
               app:cardBackgroundColor="#667D99"
               app:cardCornerRadius="18dp"
               app:cardElevation="0dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/cvSleep"
               app:layout_constraintEnd_toEndOf="parent">
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  android:text="약복용"
                  android:textSize="16.5dp"
                  android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </HorizontalScrollView>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      app:layout_constraintTop_toBottomOf="@id/horizontalScroll"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBaseline_toBaselineOf="parent">
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/horizontalScroll">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clGoal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <ImageView
                  android:layout_width="17dp"
                  android:layout_height="21dp"
                  android:src="@drawable/setting_goal"
                  app:tint="@color/black"
                  app:layout_constraintTop_toTopOf="@id/tvSetting"
                  app:layout_constraintBottom_toBottomOf="@id/tvSetting"
                  app:layout_constraintEnd_toStartOf="@id/tvSetting"/>
               <TextView
                  android:id="@+id/tvSetting"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="25dp"
                  android:paddingLeft="3dp"
                  android:text="목표설정"
                  android:textColor="@color/black"
                  android:textSize="15dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/cl2"
               android:layout_width="170dp"
               android:layout_height="170dp"
               android:layout_marginTop="15dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent">
               <com.dinuscxj.progressbar.CircleProgressBar
                  android:id="@+id/pbDrug"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  app:progress_background_color="#F9F4EF"
                  app:progress_end_color="#9E63FC"
                  app:progress_start_color="#9E63FC"
                  app:progress_start_degree="90"
                  app:progress_stroke_cap="round"
                  app:progress_stroke_width="16dp"
                  app:progress_style="solid_line" />
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="17dp"
                  android:background="@drawable/oval">
                  <TextView
                     android:id="@+id/tvWeight1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="복용횟수"
                     android:textColor="@color/black"
                     android:textSize="16dp"
                     android:textStyle="bold"
                     app:layout_constraintBottom_toTopOf="@id/tvDrugCount"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintVertical_chainStyle="packed" />
                  <TextView
                     android:id="@+id/tvDrugCount"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0회"
                     android:textColor="@color/black"
                     android:textSize="16dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toBottomOf="@id/tvWeight1" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
               android:id="@+id/tv1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:text="목표 복용 횟수"
               android:textColor="@color/black"
               android:textSize="16dp"
               android:textStyle="bold"
               app:layout_constraintEnd_toStartOf="@id/view1"
               app:layout_constraintHorizontal_chainStyle="packed"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/cl2" />
            <View
               android:id="@+id/view1"
               android:layout_width="1dp"
               android:layout_height="40dp"
               android:background="@color/black"
               android:layout_marginLeft="15dp"
               app:layout_constraintStart_toEndOf="@id/tv1"
               app:layout_constraintTop_toTopOf="@id/tv1"
               app:layout_constraintEnd_toStartOf="@id/tv3"
               app:layout_constraintBottom_toBottomOf="@id/tvGoal"/>
            <TextView
               android:id="@+id/tvGoal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0회"
               android:textSize="16dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@id/tv1"
               app:layout_constraintEnd_toEndOf="@id/tv1"/>
            <TextView
               android:id="@+id/tv3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:text="남은 복용 횟수"
               android:textSize="16dp"
               android:textStyle="bold"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="@id/tv1"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@id/view1"/>
            <TextView
               android:id="@+id/tvRemain"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0회"
               android:textSize="16dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@id/tv3"
               app:layout_constraintStart_toStartOf="@id/tv3"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/oval_water_bottom"
            android:backgroundTint="#F2EAFF"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
         <LinearLayout
            android:id="@+id/cl3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="-30dp"
            android:background="#F2EAFF"
            app:layout_constraintTop_toTopOf="@id/view5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                  android:id="@+id/tv4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="25dp"
                  android:text="하루 약복용"
                  android:textColor="@color/black"
                  android:textSize="16dp"
                  android:textStyle="bold"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/clRecord"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="25dp"
                  app:layout_constraintTop_toTopOf="@id/tv4"
                  app:layout_constraintEnd_toEndOf="parent">
                  <ImageView
                     android:id="@+id/iv2"
                     android:layout_width="17dp"
                     android:layout_height="17dp"
                     android:background="@drawable/setting_goal"
                     android:backgroundTint="@color/black"
                     android:layout_marginRight="3dp"
                     app:layout_constraintTop_toTopOf="@id/tv5"
                     app:layout_constraintBottom_toBottomOf="@id/tv5"
                     app:layout_constraintEnd_toStartOf="@id/tv5"/>

                  <TextView
                     android:id="@+id/tv5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="약복용 기록"
                     android:textColor="@color/black"
                     android:textSize="15dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintVertical_bias="0.0" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
               android:id="@+id/cv1"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               android:layout_marginBottom="25dp"
               app:cardBackgroundColor="@color/white"
               app:cardCornerRadius="7dp"
               app:cardElevation="5dp"
               app:layout_constraintTop_toBottomOf="@id/clRecord"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent">
               <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
                  <androidx.cardview.widget.CardView
                     android:id="@+id/cvList"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     app:cardBackgroundColor="#BFA2EE"
                     app:cardCornerRadius="7dp"
                     app:cardElevation="0dp"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent">
                     <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">
                        <TextView
                           android:id="@+id/tvList1"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="복용 시간"
                           android:textSize="14dp"
                           android:textColor="@color/white"
                           android:textAlignment="center"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toStartOf="@id/tvList2"
                           app:layout_constraintHorizontal_weight="3"/>
                        <TextView
                           android:id="@+id/tvList2"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="오늘의 약"
                           android:textSize="14dp"
                           android:textColor="@color/white"
                           android:textAlignment="center"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintStart_toEndOf="@id/tvList1"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toStartOf="@id/tvList3"
                           app:layout_constraintHorizontal_weight="3"/>
                        <TextView
                           android:id="@+id/tvList3"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="복용량"
                           android:textSize="14dp"
                           android:textColor="@color/white"
                           android:textAlignment="center"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintStart_toEndOf="@id/tvList2"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toStartOf="@id/tvList4"
                           app:layout_constraintHorizontal_weight="3"/>
                        <TextView
                           android:id="@+id/tvList4"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="확인"
                           android:textSize="14dp"
                           android:textColor="@color/white"
                           android:textAlignment="center"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintStart_toEndOf="@id/tvList3"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintHorizontal_weight="2"/>
                     </androidx.constraintlayout.widget.ConstraintLayout>
                  </androidx.cardview.widget.CardView>
                  <androidx.recyclerview.widget.RecyclerView
                     android:id="@id/recyclerView"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingLeft="8dp"
                     android:paddingRight="8dp"
                     app:layout_constraintTop_toBottomOf="@id/cvList"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"/>
               </LinearLayout>
            </androidx.cardview.widget.CardView>
         </LinearLayout>
      </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</LinearLayout>