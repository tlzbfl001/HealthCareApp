<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/mainLayout"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="25dp"
      android:paddingRight="10dp"
      app:layout_constraintBottom_toBottomOf="@id/tvDate"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/tvDate">
      <ImageView
         android:layout_width="12dp"
         android:layout_height="23dp"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"
         android:src="@drawable/arrow_back"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clPrev"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="@id/tvDate"
      app:layout_constraintEnd_toStartOf="@id/tvDate"
      app:layout_constraintTop_toTopOf="@id/tvDate">
      <ImageView
         android:id="@+id/ivPrev"
         android:layout_width="9dp"
         android:layout_height="19dp"
         android:layout_marginLeft="30dp"
         android:layout_marginTop="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginBottom="8dp"
         android:background="@drawable/arrow_left_triangle"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:gravity="center_vertical"
      android:text="2023년 7월 23일"
      android:textColor="@color/black"
      android:textSize="17dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clNext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="@id/tvDate"
      app:layout_constraintStart_toEndOf="@id/tvDate"
      app:layout_constraintTop_toTopOf="@id/tvDate">
      <ImageView
         android:id="@+id/ivNext"
         android:layout_width="9dp"
         android:layout_height="19dp"
         android:layout_marginLeft="8dp"
         android:layout_marginTop="8dp"
         android:layout_marginRight="30dp"
         android:layout_marginBottom="8dp"
         android:background="@drawable/arrow_right_triangle"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />
   </androidx.constraintlayout.widget.ConstraintLayout>
   <HorizontalScrollView
      android:id="@+id/horizontalScroll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:scrollbars="none"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/clBack">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/cl1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="25dp"
         android:layout_marginBottom="15dp">
         <TextView
            android:id="@+id/cvFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:background="@drawable/rec_25_border_gray"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:text="식단"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvWater"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
         <TextView
            android:id="@+id/cvWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:background="@drawable/rec_25_border_gray"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="물"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvExercise"
            app:layout_constraintStart_toEndOf="@id/cvFood"
            app:layout_constraintTop_toTopOf="parent" />
         <androidx.cardview.widget.CardView
            android:id="@+id/cvExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            app:cardBackgroundColor="#FFB846"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvBody"
            app:layout_constraintStart_toEndOf="@id/cvWater"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:paddingTop="6dp"
               android:paddingBottom="6dp"
               android:paddingLeft="19dp"
               android:paddingRight="19dp"
               android:text="운동"
               android:textColor="@color/white"
               android:textSize="16.5dp" />
         </androidx.cardview.widget.CardView>
         <TextView
            android:id="@+id/cvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:background="@drawable/rec_25_border_gray"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:text="신체"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvSleep"
            app:layout_constraintStart_toEndOf="@id/cvExercise"
            app:layout_constraintTop_toTopOf="parent" />
         <TextView
            android:id="@+id/cvSleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:background="@drawable/rec_25_border_gray"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:text="수면"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvDrug"
            app:layout_constraintStart_toEndOf="@id/cvBody"
            app:layout_constraintTop_toTopOf="parent" />
         <TextView
            android:id="@+id/cvDrug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@drawable/rec_25_border_gray"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="약복용"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cvSleep"
            app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
   </HorizontalScrollView>
   <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/horizontalScroll">
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clGoal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent">
               <ImageView
                  android:layout_width="17dp"
                  android:layout_height="21dp"
                  android:src="@drawable/setting_goal"
                  app:layout_constraintBottom_toBottomOf="@id/tvSetting"
                  app:layout_constraintEnd_toStartOf="@id/tvSetting"
                  app:layout_constraintTop_toTopOf="@id/tvSetting" />
               <TextView
                  android:id="@+id/tvSetting"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="25dp"
                  android:paddingLeft="3dp"
                  android:text="목표설정"
                  android:textColor="@color/black"
                  android:textSize="15.5dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/cl2"
               android:layout_width="170dp"
               android:layout_height="170dp"
               android:layout_marginTop="15dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">
               <com.dinuscxj.progressbar.CircleProgressBar
                  android:id="@+id/pbExercise"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  app:progress_background_color="#FBF4E8"
                  app:progress_end_color="#FFB846"
                  app:progress_start_color="#FFB846"
                  app:progress_start_degree="90"
                  app:progress_stroke_cap="round"
                  app:progress_stroke_width="16dp"
                  app:progress_style="solid_line" />
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="17dp"
                  android:background="@drawable/oval">
                  <TextView
                     android:id="@+id/tvFood1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="소비칼로리"
                     android:textColor="@color/black"
                     android:textSize="16dp"
                     android:textStyle="bold"
                     app:layout_constraintBottom_toTopOf="@id/tvConsume"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintVertical_chainStyle="packed" />
                  <TextView
                     android:id="@+id/tvConsume"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0 kcal"
                     android:textColor="@color/black"
                     android:textSize="16dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toBottomOf="@id/tvFood1" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
               android:id="@+id/tv1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:text="목표칼로리"
               android:textColor="@color/black"
               android:textSize="16dp"
               android:textStyle="bold"
               app:layout_constraintEnd_toStartOf="@id/view1"
               app:layout_constraintHorizontal_chainStyle="packed"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/cl2" />
            <View
               android:id="@+id/view1"
               android:layout_width="1dp"
               android:layout_height="40dp"
               android:layout_marginLeft="15dp"
               android:background="@color/black"
               app:layout_constraintBottom_toBottomOf="@id/tvGoal"
               app:layout_constraintEnd_toStartOf="@id/tv3"
               app:layout_constraintStart_toEndOf="@id/tv1"
               app:layout_constraintTop_toTopOf="@id/tv1" />
            <TextView
               android:id="@+id/tvGoal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0 kcal"
               android:textColor="@color/black"
               android:textSize="16dp"
               app:layout_constraintEnd_toEndOf="@id/tv1"
               app:layout_constraintTop_toBottomOf="@id/tv1" />
            <TextView
               android:id="@+id/tv3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:text="남은칼로리"
               android:textColor="@color/black"
               android:textSize="16dp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@id/view1"
               app:layout_constraintTop_toTopOf="@id/tv1" />
            <TextView
               android:id="@+id/tvRemain"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0 kcal"
               android:textColor="@color/black"
               android:textSize="16dp"
               app:layout_constraintStart_toStartOf="@id/tv3"
               app:layout_constraintTop_toBottomOf="@id/tv3" />
         </androidx.constraintlayout.widget.ConstraintLayout>
         <View
            android:id="@+id/viewBottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/oval_water_bottom"
            android:backgroundTint="#FFFBF3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGoal" />
         <LinearLayout
            android:id="@+id/cl3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-30dp"
            android:background="#FFFBF3"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clRecord"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toBottomOf="@id/tv4"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="@id/tv4">
               <TextView
                  android:id="@+id/tv4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="10dp"
                  android:text="하루 운동"
                  android:textColor="@color/black"
                  android:textSize="17dp"
                  android:textStyle="bold"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="25dp"
                  app:layout_constraintBottom_toBottomOf="@id/tv4"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="@id/tv4">
                  <ImageView
                     android:id="@+id/iv2"
                     android:layout_width="17dp"
                     android:layout_height="17dp"
                     android:layout_marginRight="3dp"
                     android:src="@drawable/setting_goal"
                     app:layout_constraintBottom_toBottomOf="@id/tv5"
                     app:layout_constraintEnd_toStartOf="@id/tv5"
                     app:layout_constraintTop_toTopOf="@id/tv5" />
                  <TextView
                     android:id="@+id/tv5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="운동 기록"
                     android:textColor="@color/black"
                     android:textSize="15.5dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="parent" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:paddingBottom="25dp" />
         </LinearLayout>
      </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>