<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:fillViewport="true"
   app:layout_constraintBottom_toBottomOf="parent"
   app:layout_constraintEnd_toEndOf="parent"
   app:layout_constraintStart_toStartOf="parent"
   app:layout_constraintTop_toTopOf="parent">
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white_black"
      android:orientation="vertical">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
               android:layout_width="16dp"
               android:layout_height="21dp"
               android:layout_marginTop="1dp"
               android:src="@drawable/setting_goal"
               app:layout_constraintBottom_toBottomOf="@id/tvSetting"
               app:layout_constraintEnd_toStartOf="@id/tvSetting"
               app:layout_constraintTop_toTopOf="@id/tvSetting"
               app:tint="@color/black_white" />
            <TextView
               android:id="@+id/tvSetting"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="20dp"
               android:paddingLeft="3dp"
               android:text="목표설정"
               android:textColor="@color/black_white"
               android:textSize="15dp"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent" />
         </androidx.constraintlayout.widget.ConstraintLayout>
         <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="195dp"
            android:layout_height="195dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            app:indicatorInset="0dp"
            android:layout_marginTop="15dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/custom_progress_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/progressbar"
            app:layout_constraintStart_toStartOf="@id/progressbar"
            app:layout_constraintEnd_toEndOf="@id/progressbar"
            app:layout_constraintBottom_toBottomOf="@id/progressbar">
            <TextView
               android:id="@+id/tvFood1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="소비칼로리"
               android:textColor="@color/black_white"
               android:textSize="14.5dp"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintBottom_toTopOf="@id/tvConsume"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_chainStyle="packed" />
            <TextView
               android:id="@+id/tvConsume"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0 kcal"
               android:textColor="@color/black_white"
               android:textSize="17dp"
               android:fontFamily="@font/noto_bold"
               android:includeFontPadding="false"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/tvFood1" />
         </androidx.constraintlayout.widget.ConstraintLayout>
         <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="목표칼로리"
            android:textColor="@color/black_white"
            android:textSize="14.5dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toStartOf="@id/view1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressbar" />
         <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@color/black_white"
            app:layout_constraintBottom_toBottomOf="@id/tvGoal"
            app:layout_constraintEnd_toStartOf="@id/tv3"
            app:layout_constraintStart_toEndOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1" />
         <TextView
            android:id="@+id/tvGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:text="0 kcal"
            android:textColor="@color/black_white"
            android:textSize="17dp"
            android:fontFamily="@font/noto_bold"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv1" />
         <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="남은칼로리"
            android:textColor="@color/black_white"
            android:textSize="14.5dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="@id/tv1" />
         <TextView
            android:id="@+id/tvRemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:text="0 kcal"
            android:textColor="@color/black_white"
            android:textSize="17dp"
            android:fontFamily="@font/noto_bold"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="@id/tv3"
            app:layout_constraintTop_toBottomOf="@id/tv3" />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <LinearLayout
         android:id="@+id/cl3"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/rec_top_radius_35"
         android:backgroundTint="@color/purple_grey"
         android:orientation="vertical"
         android:layout_marginTop="15dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/tvGoal" >
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv4">
            <TextView
               android:id="@+id/tv4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="20dp"
               android:text="하루 운동"
               android:textColor="@color/black_white"
               android:textSize="15dp"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="20dp"
               app:layout_constraintBottom_toBottomOf="@id/tv4"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="@id/tv4">
               <ImageView
                  android:id="@+id/iv2"
                  android:layout_width="16dp"
                  android:layout_height="21dp"
                  android:layout_marginRight="3dp"
                  android:layout_marginTop="2dp"
                  android:src="@drawable/setting_goal"
                  app:layout_constraintBottom_toBottomOf="@id/tv5"
                  app:layout_constraintEnd_toStartOf="@id/tv5"
                  app:layout_constraintTop_toTopOf="@id/tv5"
                  app:tint="@color/black_white" />
               <TextView
                  android:id="@+id/tv5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="운동기록"
                  android:textColor="@color/black_white"
                  android:textSize="15dp"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="60dp"/>
      </LinearLayout>
   </LinearLayout>
</androidx.core.widget.NestedScrollView>