<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvSave">
        <ImageView
            android:id="@+id/ivX"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/x1"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:text="운동명"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/ivX"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:layout_marginTop="25dp"
            android:padding="25dp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동 강도"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="세기"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/etLevel"
                app:layout_constraintBottom_toBottomOf="@id/etLevel"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/etLevel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_border_gray"
                android:layout_marginTop="20dp"
                android:padding="7dp"
                android:text="상,중,하"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                app:layout_constraintStart_toEndOf="@id/tv2"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/etWorkoutTime"
                app:layout_constraintBottom_toBottomOf="@id/etWorkoutTime"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/etWorkoutTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_border_gray"
                android:layout_marginTop="15dp"
                android:padding="7dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@id/etLevel"
                app:layout_constraintStart_toStartOf="@id/etLevel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="분"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/etWorkoutTime"
                app:layout_constraintTop_toTopOf="@id/etWorkoutTime"
                app:layout_constraintBottom_toBottomOf="@id/etWorkoutTime"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:layout_marginTop="20dp"
            android:padding="25dp"
            app:layout_constraintTop_toBottomOf="@id/cl2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="칼로리"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/etKcal"
                app:layout_constraintBottom_toBottomOf="@id/etKcal"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/etKcal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_border_gray"
                android:padding="7dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="kcal"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/etKcal"
                app:layout_constraintTop_toTopOf="@id/etKcal"
                app:layout_constraintBottom_toBottomOf="@id/etKcal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tvSave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#888888"
        android:gravity="center"
        android:text="저장"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/cl1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>