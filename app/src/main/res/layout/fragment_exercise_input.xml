<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white">
   <androidx.core.widget.NestedScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:fillViewport="true"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/tvAdd">
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_marginTop="30dp"
         android:layout_marginLeft="30dp"
         android:layout_marginBottom="30dp">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
               android:id="@+id/ivBack"
               android:layout_width="15dp"
               android:layout_height="20dp"
               android:src="@drawable/arrow_left"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="-30dp"
               android:text="운동 직접 입력하기"
               android:textColor="@color/black"
               android:textSize="20dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@id/ivBack"
               app:layout_constraintBottom_toBottomOf="@id/ivBack"/>
            <TextView
               android:id="@+id/tv1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="40dp"
               android:text="운동명"
               android:textSize="16dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@id/ivBack"
               app:layout_constraintStart_toStartOf="parent"/>
            <EditText
               android:id="@+id/etName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_5_border_gray"
               android:layout_marginTop="5dp"
               android:layout_marginRight="30dp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:paddingLeft="12dp"
               android:paddingRight="12dp"
               android:hint="운동명"
               android:textSize="16dp"
               android:textColor="@color/black"
               android:textColorHint="#ccc"
               app:layout_constraintTop_toBottomOf="@id/tv1"
               app:layout_constraintStart_toStartOf="parent"/>
            <TextView
               android:id="@+id/tv2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="25dp"
                android:paddingBottom="8dp"
               android:text="분류"
               android:textSize="16dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@id/etName"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAddType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="30dp"
                app:layout_constraintTop_toTopOf="@id/tv2"
                app:layout_constraintBottom_toBottomOf="@id/tv2"
                app:layout_constraintEnd_toEndOf="parent">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="직접추가하기"
                   android:textColor="@color/black"
                   android:textSize="12dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp" />
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <TextView
               android:id="@+id/tv3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingBottom="8dp"
               android:text="부위"
               android:textSize="16dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clAddPart"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="15dp"
               android:paddingRight="30dp"
               app:layout_constraintTop_toTopOf="@id/tv3"
               app:layout_constraintBottom_toBottomOf="@id/tv3"
               app:layout_constraintEnd_toEndOf="parent">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="직접추가하기"
                   android:textSize="12dp"
                   android:textColor="@color/black"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl2" />
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp">
            <TextView
               android:id="@+id/tv4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="강도"
               android:textSize="16dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
            <TextView
               android:id="@+id/tvHard"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_5_border_gray"
               android:layout_marginTop="5dp"
               android:layout_marginRight="22dp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:text="힘들게"
               android:textSize="14dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               app:layout_constraintTop_toBottomOf="@id/tv4"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toStartOf="@id/tvNormal"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tvNormal"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_5_border_gray"
               android:layout_marginRight="22dp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:text="적당히"
               android:textSize="14dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               app:layout_constraintStart_toEndOf="@id/tvHard"
               app:layout_constraintTop_toTopOf="@id/tvHard"
               app:layout_constraintBottom_toBottomOf="@id/tvHard"
               app:layout_constraintEnd_toStartOf="@id/tvEasy"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tvEasy"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_5_border_gray"
               android:layout_marginRight="30dp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:text="쉬엄쉬엄"
               android:textSize="14dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               app:layout_constraintTop_toTopOf="@id/tvNormal"
               app:layout_constraintBottom_toBottomOf="@id/tvNormal"
               app:layout_constraintStart_toEndOf="@id/tvNormal"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tv5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="25dp"
               android:text="운동 시간"
               android:textSize="16dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@id/tvHard"
               app:layout_constraintStart_toStartOf="parent"/>
            <EditText
               android:id="@+id/etWorkoutTime"
               android:layout_width="170dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_border_gray"
               android:layout_marginTop="5dp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:paddingLeft="12dp"
               android:paddingRight="12dp"
               android:textSize="16dp"
               android:textColor="@color/black"
               android:textColorHint="#ccc"
               android:inputType="number"
               app:layout_constraintTop_toBottomOf="@id/tv5"
               app:layout_constraintStart_toStartOf="parent"/>
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:text="분"
               android:textSize="14dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="@id/etWorkoutTime"
               app:layout_constraintBottom_toBottomOf="@id/etWorkoutTime"
               app:layout_constraintStart_toEndOf="@id/etWorkoutTime"/>
            <TextView
               android:id="@+id/tv6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="25dp"
               android:text="소모칼로리"
               android:textSize="16dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@id/etWorkoutTime"
               app:layout_constraintStart_toStartOf="parent"/>
            <EditText
               android:id="@+id/etCalories"
               android:layout_width="170dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_border_gray"
               android:layout_marginTop="5dp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:paddingLeft="12dp"
               android:paddingRight="12dp"
               android:textSize="16dp"
               android:textColor="@color/black"
               android:textColorHint="#ccc"
               android:inputType="number"
               app:layout_constraintTop_toBottomOf="@id/tv6"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:text="kcal"
               android:textSize="14dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="@id/etCalories"
               app:layout_constraintBottom_toBottomOf="@id/etCalories"
               app:layout_constraintStart_toEndOf="@id/etCalories"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </LinearLayout>
   </androidx.core.widget.NestedScrollView>
   <TextView
      android:id="@+id/tvAdd"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="#888888"
      android:gravity="center"
      android:text="저장"
      android:textColor="@color/white"
      android:textSize="20dp"
      app:layout_constraintTop_toBottomOf="@id/scrollView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>