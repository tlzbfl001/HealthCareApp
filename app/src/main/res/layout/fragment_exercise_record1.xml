<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/cv1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#FFFBF3"
       android:paddingBottom="25dp"
       android:layout_marginBottom="10dp"
       android:elevation="4dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toTopOf="@id/view">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/clBack"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">
         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:src="@drawable/x1"
             android:layout_marginTop="28dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="25dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <TextView
          android:id="@+id/tvTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:text="운동 기록하기"
          android:textColor="@color/black"
          android:textSize="20dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>
      <EditText
          android:id="@+id/etSearch"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rec_exercise_search"
          android:layout_marginTop="25dp"
          android:layout_marginLeft="25dp"
          android:layout_marginRight="25dp"
          android:paddingTop="7dp"
          android:paddingBottom="7dp"
          android:paddingLeft="12dp"
          android:drawableLeft="@drawable/search"
          android:drawablePadding="14dp"
          android:drawableTint="#989898"
          android:hint="운동 이름 입력"
          android:textColorHint="#989898"
          android:textSize="16dp"
          android:textColor="@color/black"
          app:layout_constraintTop_toBottomOf="@id/tvTitle"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" />
      <TextView
          android:id="@+id/tvBtn1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:background="@drawable/rec_25_border_gray"
          android:backgroundTint="#FFAD0D"
          android:layout_marginTop="25dp"
          android:layout_marginRight="15dp"
          android:layout_marginLeft="25dp"
          android:paddingTop="7dp"
          android:paddingBottom="7dp"
          android:text="자주 사용"
          android:textSize="15dp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@id/etSearch"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@id/tvBtn2"
          app:layout_constraintHorizontal_weight="1"/>
      <TextView
          android:id="@+id/tvBtn2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:background="@drawable/rec_25_border_gray"
          android:layout_marginRight="15dp"
          android:paddingTop="7dp"
          android:paddingBottom="7dp"
          android:text="최근 입력"
          android:textSize="15dp"
          android:textColor="@color/black"
          app:layout_constraintTop_toTopOf="@id/tvBtn1"
          app:layout_constraintBottom_toBottomOf="@id/tvBtn1"
          app:layout_constraintStart_toEndOf="@id/tvBtn1"
          app:layout_constraintEnd_toStartOf="@id/tvBtn3"
          app:layout_constraintHorizontal_weight="1"/>
      <TextView
          android:id="@+id/tvBtn3"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:background="@drawable/rec_25_border_gray"
          android:layout_marginRight="25dp"
          android:paddingTop="7dp"
          android:paddingBottom="7dp"
          android:text="직접 추가"
          android:textSize="15dp"
          android:textColor="@color/black"
          app:layout_constraintTop_toTopOf="@id/tvBtn2"
          app:layout_constraintBottom_toBottomOf="@id/tvBtn2"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/tvBtn2"
          app:layout_constraintHorizontal_weight="1"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <View
       android:id="@+id/view"
       android:layout_width="match_parent"
       android:layout_height="5dp"
       app:layout_constraintTop_toBottomOf="@id/cv1"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"/>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/view"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent">
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="20dp"
          app:layout_constraintTop_toBottomOf="@id/view"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>