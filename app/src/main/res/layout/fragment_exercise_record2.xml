<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white_black">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/mainLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/exercise_grey"
      android:layout_marginBottom="7dp"
      android:elevation="4dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/scrollView">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clBack"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="@id/tvTitle"
         app:layout_constraintBottom_toBottomOf="@id/tvTitle">
         <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/x"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/black_white" />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <TextView
         android:id="@+id/tvTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="18dp"
         android:text="운동 기록하기"
         android:textColor="@color/black_white"
         android:textSize="17dp"
         android:fontFamily="@font/nanum"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>
      <EditText
         android:id="@+id/etSearch"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/rec_exercise_search"
         android:layout_marginTop="18dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:paddingTop="11dp"
         android:paddingBottom="10dp"
         android:paddingLeft="12dp"
         android:drawableLeft="@drawable/search"
         android:drawablePadding="14dp"
         android:drawableTint="#989898"
         android:hint="운동 이름 입력"
         android:textColorHint="#cccccc"
         android:textSize="16dp"
         android:textColor="@color/black"
         android:fontFamily="@font/nanum"
         app:layout_constraintTop_toBottomOf="@id/tvTitle"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent" />
      <TextView
         android:id="@+id/tvBtn1"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:background="@drawable/rec_25_border_gray"
         android:layout_marginTop="18dp"
         android:layout_marginBottom="18dp"
         android:layout_marginRight="15dp"
         android:layout_marginLeft="20dp"
         android:paddingTop="8dp"
         android:paddingBottom="7dp"
         android:text="자주 사용"
         android:textSize="15dp"
         android:textColor="@color/black"
         android:fontFamily="@font/nanum"
         app:layout_constraintTop_toBottomOf="@id/etSearch"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@id/tvBtn2"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintHorizontal_weight="1"/>
      <TextView
         android:id="@+id/tvBtn2"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:background="@drawable/rec_25_border_gray"
         android:backgroundTint="@color/exercise"
         android:layout_marginRight="15dp"
         android:paddingTop="8dp"
         android:paddingBottom="7dp"
         android:text="최근 입력"
         android:textSize="15dp"
         android:textColor="@color/white"
         android:fontFamily="@font/nanum"
         app:layout_constraintTop_toTopOf="@id/tvBtn1"
         app:layout_constraintBottom_toBottomOf="@id/tvBtn1"
         app:layout_constraintStart_toEndOf="@id/tvBtn1"
         app:layout_constraintEnd_toStartOf="@id/tvBtn3"
         app:layout_constraintHorizontal_weight="1"/>
      <TextView
         android:id="@+id/tvBtn3"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:background="@drawable/rec_25_border_gray"
         android:layout_marginRight="20dp"
         android:paddingTop="8dp"
         android:paddingBottom="7dp"
         android:text="직접 추가"
         android:textSize="15dp"
         android:textColor="@color/black"
         android:fontFamily="@font/nanum"
         app:layout_constraintTop_toTopOf="@id/tvBtn2"
         app:layout_constraintBottom_toBottomOf="@id/tvBtn2"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toEndOf="@id/tvBtn2"
         app:layout_constraintHorizontal_weight="1"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.core.widget.NestedScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      android:layout_marginBottom="10dp"
      app:layout_constraintTop_toBottomOf="@id/mainLayout"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <LinearLayout
         android:id="@+id/linear"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:nestedScrollingEnabled="false"/>
         <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:nestedScrollingEnabled="false"/>
         <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="입력된 운동이 없습니다."
            android:textSize="15dp"
            android:textColor="#cccccc"
            android:fontFamily="@font/nanum"/>
      </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>