<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical"
   android:background="@color/white">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/clBack"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingTop="30dp"
       android:paddingLeft="25dp"
       android:paddingBottom="10dp"
       android:paddingRight="10dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent">
      <ImageView
          android:layout_width="12dp"
          android:layout_height="24dp"
          android:src="@drawable/arrow_back"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <ImageView
       android:id="@+id/ivPrev"
       android:layout_width="10dp"
       android:layout_height="23dp"
       android:src="@drawable/arrow_left_triangle"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@id/tvDate"
       app:layout_constraintBottom_toBottomOf="@id/tvDate"
       app:layout_constraintEnd_toStartOf="@id/tvDate"
       app:layout_constraintHorizontal_chainStyle="packed"/>
   <TextView
       android:id="@+id/tvDate"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:text="2023년 7월 23일"
       android:textColor="@color/black"
       android:textSize="18dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toStartOf="@id/ivNext"
       app:layout_constraintStart_toEndOf="@id/ivPrev"/>
   <ImageView
       android:id="@+id/ivNext"
       android:layout_width="10dp"
       android:layout_height="23dp"
       android:src="@drawable/arrow_right_triangle"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@id/tvDate"
       app:layout_constraintTop_toTopOf="@id/tvDate"
       app:layout_constraintBottom_toBottomOf="@id/tvDate"/>
   <HorizontalScrollView
       android:id="@+id/horizontalScroll"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/clBack"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/cl1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="25dp"
          android:layout_marginTop="17dp"
          android:layout_marginBottom="17dp">
         <androidx.cardview.widget.CardView
             android:id="@+id/cvFood"
             android:layout_width="65dp"
             android:layout_height="wrap_content"
             android:layout_marginRight="8dp"
             app:cardBackgroundColor="#EE6685"
             app:cardCornerRadius="18dp"
             app:cardElevation="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toStartOf="@id/cvWater"
             app:layout_constraintHorizontal_weight="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="식단"
                android:textSize="18dp"
                android:textColor="@color/white"/>
         </androidx.cardview.widget.CardView>
         <TextView
             android:id="@+id/cvWater"
             android:layout_width="65dp"
             android:layout_height="wrap_content"
             android:layout_marginRight="8dp"
             android:background="@drawable/rec_25_border_gray"
             android:paddingTop="6dp"
             android:paddingBottom="6dp"
             android:text="물"
             android:textSize="18dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintStart_toEndOf="@id/cvFood"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toStartOf="@id/cvExercise"/>
         <TextView
             android:id="@+id/cvExercise"
             android:layout_width="65dp"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_25_border_gray"
             android:layout_marginRight="8dp"
             android:paddingTop="6dp"
             android:paddingBottom="6dp"
             android:text="운동"
             android:textSize="18dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/cvWater"
             app:layout_constraintEnd_toStartOf="@id/cvBody"/>
         <TextView
             android:id="@+id/cvBody"
             android:layout_width="65dp"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_25_border_gray"
             android:layout_marginRight="8dp"
             android:paddingTop="6dp"
             android:paddingBottom="6dp"
             android:text="신체"
             android:textSize="18dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/cvExercise"
             app:layout_constraintEnd_toStartOf="@id/cvSleep"/>
         <TextView
             android:id="@+id/cvSleep"
             android:layout_width="65dp"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_25_border_gray"
             android:layout_marginRight="8dp"
             android:paddingTop="6dp"
             android:paddingBottom="6dp"
             android:text="수면"
             android:textSize="18dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/cvBody"
             app:layout_constraintEnd_toStartOf="@id/cvDrug"/>
         <TextView
             android:id="@+id/cvDrug"
             android:layout_width="65dp"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_25_border_gray"
             android:layout_marginRight="8dp"
             android:paddingTop="6dp"
             android:paddingBottom="6dp"
             android:text="약복용"
             android:textSize="18dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/cvSleep"
             app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </HorizontalScrollView>
   <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintTop_toBottomOf="@id/horizontalScroll"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <ImageView
                   android:layout_width="18dp"
                   android:layout_height="22dp"
                   android:src="@drawable/setting_goal"
                   app:tint="@color/black"
                   app:layout_constraintTop_toTopOf="@id/tvSetting"
                   app:layout_constraintBottom_toBottomOf="@id/tvSetting"
                   app:layout_constraintEnd_toStartOf="@id/tvSetting"/>
               <TextView
                   android:id="@+id/tvSetting"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="3dp"
                   android:layout_marginRight="25dp"
                   android:paddingLeft="5dp"
                   android:text="목표설정"
                   android:textColor="@color/black"
                   android:textSize="16dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl2"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
               <com.dinuscxj.progressbar.CircleProgressBar
                   android:id="@+id/pbFood"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:progress_background_color="#33DF9EAD"
                   app:progress_end_color="#EE6685"
                   app:progress_start_color="#EE6685"
                   app:progress_start_degree="90"
                   app:progress_stroke_cap="round"
                   app:progress_stroke_width="17dp"
                   app:progress_style="solid_line" />
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="17dp"
                   android:background="@drawable/oval">
                  <TextView
                      android:id="@+id/tvFood1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="섭취칼로리"
                      android:textColor="@color/black"
                      android:textSize="18dp"
                      android:textStyle="bold"
                      app:layout_constraintBottom_toTopOf="@id/tvIntake"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_chainStyle="packed" />
                  <TextView
                      android:id="@+id/tvIntake"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0 kcal"
                      android:textColor="@color/black"
                      android:textSize="18dp"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@id/tvFood1" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="목표칼로리"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cl2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view1"
                app:layout_constraintHorizontal_chainStyle="packed"/>
            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:layout_marginLeft="15dp"
                app:layout_constraintStart_toEndOf="@id/tv1"
                app:layout_constraintTop_toTopOf="@id/tv1"
                app:layout_constraintEnd_toStartOf="@id/tv3"
                app:layout_constraintBottom_toBottomOf="@id/tvGoal"/>
            <TextView
                android:id="@+id/tvGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 kcal"
                android:textSize="18dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                app:layout_constraintEnd_toEndOf="@id/tv1"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="남은칼로리"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/tv1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view1"/>
            <TextView
                android:id="@+id/tvRemain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 kcal"
                android:textSize="18dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv3"
                app:layout_constraintStart_toStartOf="@id/tv3"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/cl3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
             android:background="#FFFAFA"
             app:layout_constraintTop_toBottomOf="@id/tvGoal"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:text="하루 식단"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv4"
                app:layout_constraintBottom_toBottomOf="@id/tv4"
                app:layout_constraintEnd_toEndOf="parent">
               <ImageView
                   android:id="@+id/iv2"
                   android:layout_width="18dp"
                   android:layout_height="18dp"
                   android:background="@drawable/setting_goal"
                   android:layout_marginRight="5dp"
                   app:layout_constraintTop_toTopOf="@id/tv5"
                   app:layout_constraintBottom_toBottomOf="@id/tv5"
                   app:layout_constraintEnd_toStartOf="@id/tv5"/>
               <TextView
                   android:id="@+id/tv5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="25dp"
                   android:text="섭취 기록"
                   android:textColor="@color/black"
                   android:textSize="16dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               app:cardCornerRadius="15dp"
               app:cardElevation="0dp"
               app:layout_constraintTop_toBottomOf="@id/tv4"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toTopOf="@id/cv2"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                  <androidx.viewpager.widget.ViewPager
                      android:id="@+id/viewPager"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="#ccc"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"/>
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/clLeft"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent">
                     <ImageView
                         android:layout_width="16dp"
                         android:layout_height="27dp"
                         android:src="@drawable/arrow_left"
                         app:tint="@color/white"
                         android:layout_marginLeft="5dp"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/clRight"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent">
                     <ImageView
                         android:layout_width="16dp"
                         android:layout_height="27dp"
                         android:src="@drawable/arrow_right"
                         app:tint="@color/white"
                         android:layout_marginRight="5dp"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               app:cardBackgroundColor="#FB7C7C"
               app:cardCornerRadius="30dp"
               app:cardElevation="0dp"
               app:layout_constraintTop_toBottomOf="@id/cv1"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="7dp"
                   android:paddingBottom="7dp">
                  <TextView
                      android:id="@+id/tvCalPct"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="순탄수 0%"
                      android:textSize="14dp"
                      android:textColor="@color/white"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/tvProteinPct"
                     app:layout_constraintStart_toStartOf="parent"/>
                  <TextView
                     android:id="@+id/tvCar"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                     android:text="0 g"
                      android:textSize="17dp"
                      android:textColor="@color/white"
                     app:layout_constraintTop_toBottomOf="@id/tvCalPct"
                     app:layout_constraintStart_toStartOf="@id/tvCalPct"
                     app:layout_constraintEnd_toEndOf="@id/tvCalPct"
                     app:layout_constraintBottom_toBottomOf="parent"/>
                  <TextView
                      android:id="@+id/tvProteinPct"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                     android:text="단백질 0%"
                      android:textSize="14dp"
                      android:textColor="@color/white"
                     app:layout_constraintStart_toEndOf="@id/tvCalPct"
                      app:layout_constraintEnd_toStartOf="@id/tvFatPct"
                     app:layout_constraintTop_toTopOf="parent"/>
                  <TextView
                      android:id="@+id/tvProtein"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                     android:text="0 g"
                      android:textSize="17dp"
                      android:textColor="@color/white"
                     app:layout_constraintTop_toBottomOf="@id/tvProteinPct"
                     app:layout_constraintStart_toStartOf="@id/tvProteinPct"
                     app:layout_constraintEnd_toEndOf="@id/tvProteinPct"
                      app:layout_constraintBottom_toBottomOf="parent"/>
                  <TextView
                      android:id="@+id/tvFatPct"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="지방0%"
                      android:textSize="14dp"
                      android:textColor="@color/white"
                     app:layout_constraintStart_toEndOf="@id/tvProteinPct"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"/>
                  <TextView
                      android:id="@+id/tvFat"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                     android:text="0 g"
                      android:textSize="17dp"
                      android:textColor="@color/white"
                     app:layout_constraintStart_toStartOf="@id/tvFatPct"
                     app:layout_constraintTop_toBottomOf="@id/tvFatPct"
                     app:layout_constraintEnd_toEndOf="@id/tvFatPct"
                     app:layout_constraintBottom_toBottomOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvBreakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="3dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toBottomOf="@id/cv2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="15dp">
                  <TextView
                      android:id="@+id/tvBreakfast"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                     android:text="아침"
                      android:textSize="17dp"
                     android:textColor="@color/black"
                     android:textStyle="bold"
                     app:layout_constraintTop_toTopOf="@id/clExpand1"
                     app:layout_constraintBottom_toBottomOf="@id/clExpand1"
                     app:layout_constraintStart_toStartOf="parent"/>
                  <TextView
                      android:id="@+id/tvTotal1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20dp"
                     android:text="0 kcal"
                      android:textSize="17dp"
                      android:textColor="@color/black"
                     app:layout_constraintStart_toEndOf="@id/tvBreakfast"
                     app:layout_constraintTop_toTopOf="@id/tvBreakfast"
                     app:layout_constraintBottom_toBottomOf="@id/tvBreakfast"/>
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/clExpand1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toTopOf="@id/view"
                      app:layout_constraintEnd_toEndOf="parent">
                     <ImageView
                         android:id="@+id/ivExpand1"
                         android:layout_width="20dp"
                         android:layout_height="10dp"
                         android:src="@drawable/arrow_down"
                         android:layout_marginTop="22dp"
                         android:layout_marginBottom="22dp"
                         android:layout_marginRight="15dp"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
                  <View
                      android:id="@+id/view"
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      app:layout_constraintTop_toBottomOf="@id/clExpand1"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"/>
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/clView1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:visibility="gone"
                      android:layout_marginRight="15dp"
                      android:layout_marginBottom="12dp"
                      app:layout_constraintTop_toBottomOf="@id/view"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent">
                     <View
                         android:id="@+id/view2"
                         android:layout_width="match_parent"
                         android:layout_height="1dp"
                         android:background="#ddd"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"/>
                     <androidx.recyclerview.widget.RecyclerView
                         android:id="@+id/rv1"
