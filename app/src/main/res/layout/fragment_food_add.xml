<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="#FFFAFA"
   android:id="@+id/mainLayout">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
      <ImageView
         android:layout_width="35dp"
         android:layout_height="35dp"
         android:src="@drawable/x1"
         android:layout_marginTop="20dp"
         android:layout_marginBottom="5dp"
         android:layout_marginLeft="25dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintTop_toBottomOf="@id/clBack"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
               android:id="@+id/tvName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="30dp"
               android:text="팔도 팔도짜장면"
               android:textSize="20dp"
               android:textColor="@color/black"
               android:textStyle="bold"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
            <androidx.cardview.widget.CardView
               android:id="@+id/cl2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#EEEEEE"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               app:cardBackgroundColor="@color/white"
               app:cardCornerRadius="15dp"
               app:cardElevation="2dp"
               app:layout_constraintTop_toBottomOf="@id/tvName"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                     android:id="@+id/tv1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="20dp"
                     android:layout_marginLeft="20dp"
                     android:text="세부 설정"
                     android:textColor="#888888"
                     android:textSize="17dp"
                     android:textStyle="bold"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"/>
                  <TextView
                     android:id="@+id/tv12"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="20dp"
                     android:layout_marginRight="20dp"
                     android:text="개수"
                     android:textColor="@color/black"
                     android:textSize="16dp"
                     app:layout_constraintTop_toBottomOf="@id/tv1"
                     app:layout_constraintStart_toStartOf="@id/tv1"/>
                  <TextView
                     android:id="@+id/tvCount"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="1"
                     android:textSize="16dp"
                     android:textColor="@color/black"
                     app:layout_constraintTop_toTopOf="@id/tv12"
                     app:layout_constraintBottom_toBottomOf="@id/tv12"
                     app:layout_constraintStart_toStartOf="@id/etAmount"
                     app:layout_constraintEnd_toEndOf="@id/etAmount"/>
                  <TextView
                     android:id="@+id/tvUnit"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_marginRight="20dp"
                     android:text="개"
                     android:textColor="@color/black"
                     android:textSize="16dp"
                     android:textAlignment="textEnd"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="@id/tv12"
                     app:layout_constraintBottom_toBottomOf="@id/tv12"/>
                  <TextView
                     android:id="@+id/tv2"
                     android:layout_width="65dp"
                     android:layout_height="wrap_content"
                     android:text="양"
                     android:textColor="@color/black"
                     android:textSize="16dp"
                     app:layout_constraintBottom_toBottomOf="@id/etAmount"
                     app:layout_constraintStart_toStartOf="@id/tv1"
                     app:layout_constraintTop_toTopOf="@id/etAmount"/>
                  <EditText
                     android:id="@+id/etAmount"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:background="@drawable/rec_border_gray"
                     android:layout_marginTop="15dp"
                     android:layout_marginBottom="20dp"
                     android:padding="8dp"
                     android:textSize="16dp"
                     android:textColor="@color/black"
                     android:textAlignment="center"
                     android:inputType="number"
                     android:maxLength="5"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintTop_toBottomOf="@id/tv12"
                     app:layout_constraintStart_toEndOf="@id/tv2"
                     app:layout_constraintEnd_toStartOf="@id/clUnit"/>
                  <androidx.constraintlayout.widget.ConstraintLayout
                     android:id="@+id/clUnit"
                     android:layout_width="42dp"
                     android:layout_height="30dp"
                     android:background="@drawable/rec_5"
                     android:backgroundTint="#eee"
                     android:layout_marginRight="20dp"
                     android:layout_marginLeft="8dp"
                     app:layout_constraintStart_toEndOf="@id/etAmount"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="@id/etAmount"
                     app:layout_constraintBottom_toBottomOf="@id/etAmount">
                     <TextView
                        android:id="@+id/tvUnit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="g"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                  </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
               android:id="@+id/cv3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               app:cardBackgroundColor="@color/white"
               app:cardCornerRadius="15dp"
               app:cardElevation="2dp"
               app:layout_constraintTop_toBottomOf="@id/cl2"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="20dp">
                  <TextView
                     android:id="@+id/tv3"
                     android:layout_width="65dp"
                     android:layout_height="wrap_content"
                     android:text="칼로리"
                     android:textColor="#888888"
                     android:textSize="17dp"
                     android:textStyle="bold"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"/>
                  <EditText
                     android:id="@+id/etKcal"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:background="@drawable/rec_border_gray"
                     android:padding="8dp"
                     android:textSize="16dp"
                     android:textColor="@color/black"
                     android:textAlignment="center"
                     android:inputType="number"
                     android:maxLength="5"
                     app:layout_constraintTop_toTopOf="@id/tv3"
                     app:layout_constraintBottom_toBottomOf="@id/tv3"
                     app:layout_constraintEnd_toStartOf="@id/tv5"
                     app:layout_constraintStart_toEndOf="@id/tv3"/>
                  <TextView
                     android:id="@+id/tv5"
                     android:layout_width="50dp"
                     android:layout_height="wrap_content"
                     android:text="kcal"
                     android:textColor="@color/black"
                     android:textSize="17dp"
                     android:textAlignment="textEnd"
                     app:layout_constraintTop_toTopOf="@id/tv3"
                     app:layout_constraintBottom_toBottomOf="@id/tv3"
                     app:layout_constraintEnd_toEndOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
               android:id="@+id/cv5"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#EEEEEE"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               app:cardBackgroundColor="@color/white"
               app:cardCornerRadius="15dp"
               app:cardElevation="2dp"
               app:layout_constraintTop_toBottomOf="@id/cv3"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="20dp">
                  <TextView
                     android:id="@+id/tv6"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="상세영양소"
                     android:textColor="#888888"
                     android:textSize="18dp"
                     android:textStyle="bold"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"/>
                  <androidx.constraintlayout.widget.ConstraintLayout
                     android:id="@+id/cl5"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="20dp"
                     android:paddingRight="10dp"
                     app:layout_constraintTop_toBottomOf="@id/tv6"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toStartOf="@id/cl6"
                     app:layout_constraintHorizontal_weight="1">
                     <TextView
                        android:id="@+id/tv7"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="탄수화물"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintTop_toTopOf="@id/etCar"
                        app:layout_constraintBottom_toBottomOf="@id/etCar"
                        app:layout_constraintStart_toStartOf="parent"/>
                     <EditText
                        android:id="@+id/etCar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rec_border_gray"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textAlignment="center"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:maxLines="1"
                        app:layout_constraintStart_toEndOf="@id/tv7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                     <TextView
                        android:id="@+id/tv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="단백질"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintTop_toTopOf="@id/etProtein"
                        app:layout_constraintBottom_toBottomOf="@id/etProtein"
                        app:layout_constraintStart_toStartOf="@id/tv7"/>
                     <EditText
                        android:id="@+id/etProtein"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rec_border_gray"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textAlignment="center"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:maxLines="1"
                        app:layout_constraintStart_toStartOf="@id/etCar"
                        app:layout_constraintTop_toBottomOf="@id/etCar"
                        app:layout_constraintEnd_toEndOf="parent"/>
                     <TextView
                        android:id="@+id/tv9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지방"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintTop_toTopOf="@id/etFat"
                        app:layout_constraintBottom_toBottomOf="@id/etFat"
                        app:layout_constraintStart_toStartOf="@id/tv8"/>
                     <EditText
                        android:id="@+id/etFat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rec_border_gray"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textAlignment="center"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:maxLines="1"
                        android:layout_alignParentBottom="true"
                        app:layout_constraintStart_toStartOf="@id/etProtein"
                        app:layout_constraintTop_toBottomOf="@id/etProtein"
                        app:layout_constraintEnd_toEndOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
                  <androidx.constraintlayout.widget.ConstraintLayout
                     android:id="@+id/cl6"
                     android:layout_width="0dp"
                     android:layout_height="0dp"
                     android:paddingLeft="10dp"
                     app:layout_constraintTop_toTopOf="@id/cl5"
                     app:layout_constraintStart_toEndOf="@id/cl5"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintHorizontal_weight="1">
                     <TextView
                        android:id="@+id/tv10"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="나트륨"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintTop_toTopOf="@id/etSalt"
                        app:layout_constraintBottom_toBottomOf="@id/etSalt"
                        app:layout_constraintStart_toStartOf="parent"/>
                     <EditText
                        android:id="@+id/etSalt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rec_border_gray"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textAlignment="center"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:maxLines="1"
                        app:layout_constraintStart_toEndOf="@id/tv10"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                     <TextView
                        android:id="@+id/tv11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당류"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintTop_toTopOf="@id/etSugar"
                        app:layout_constraintBottom_toBottomOf="@id/etSugar"
                        app:layout_constraintStart_toStartOf="parent"/>
                     <EditText
                        android:id="@+id/etSugar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rec_border_gray"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textAlignment="center"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:maxLines="1"
                        app:layout_constraintStart_toStartOf="@id/etSalt"
                        app:layout_constraintTop_toBottomOf="@id/etSalt"
                        app:layout_constraintEnd_toEndOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               android:text="음식의 칼로리, 영양정보, 계량정보는 섭취방법, 조리방법, 측정방법에 따라 일부 오차가 존재할 수 있습니다."
               android:textSize="12dp"
               android:textColor="#888888"
               app:layout_constraintTop_toBottomOf="@id/cv5"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.cardview.widget.CardView
            android:id="@+id/cvSave"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardBackgroundColor="#9F98FF"
            app:cardCornerRadius="30dp">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:paddingTop="8dp"
               android:paddingBottom="8dp">
               <TextView
                  android:id="@+id/textView2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="저장"
                  android:textColor="@color/white"
                  android:textSize="17dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </LinearLayout>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>