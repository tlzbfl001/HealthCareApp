<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/purple_grey"
   android:id="@+id/mainLayout">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
      <ImageView
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:src="@drawable/x"
         android:layout_marginTop="15dp"
         android:layout_marginBottom="5dp"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="10dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:tint="@color/black_white" />
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvUpload"
      android:layout_width="110dp"
      android:layout_height="38dp"
      android:gravity="center"
      android:background="@drawable/rec_25_gray"
      android:backgroundTint="#B4C3C3C3"
      android:layout_marginTop="20dp"
      android:layout_marginRight="20dp"
      android:textAlignment="center"
      android:text="사진 업로드"
      android:textColor="@color/dark_grey_white"
      android:textSize="13dp"
      android:fontFamily="@font/noto_bold"
      android:includeFontPadding="false"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
   <TextView
      android:id="@+id/tvName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="13dp"
      android:layout_marginLeft="20dp"
      android:text="팔도 팔도짜장면"
      android:textSize="20dp"
      android:textColor="@color/black_white"
      android:fontFamily="@font/noto_bold"
      android:includeFontPadding="false"
      app:layout_constraintTop_toBottomOf="@id/clBack"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
   <androidx.cardview.widget.CardView
      android:id="@+id/cl2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#EEEEEE"
      android:layout_marginTop="12dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      app:cardBackgroundColor="@color/white_grey"
      app:cardCornerRadius="10dp"
      app:cardElevation="2dp"
      app:layout_constraintTop_toBottomOf="@id/tvName"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="20dp">
         <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세부 설정"
            android:textColor="@color/black_white"
            android:textSize="16dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tv12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginRight="20dp"
            android:text="개수"
            android:textColor="@color/black_white"
            android:textSize="16dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/clCount"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCount"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_border_grey_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv12"
            app:layout_constraintBottom_toBottomOf="@id/tv12">
            <ImageView
               android:id="@+id/ivMinus"
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:background="@drawable/oval_cal_selected1"
               android:backgroundTint="@color/white"
               android:elevation="3dp"
               android:src="@drawable/minus"
               android:layout_margin="5dp"
               android:padding="6dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/tvCount"
               app:tint="@color/purple" />
            <TextView
               android:id="@+id/tvCount"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="1"
               android:textSize="16dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintStart_toEndOf="@id/ivMinus"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toStartOf="@id/ivPlus"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
               android:id="@+id/ivPlus"
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:background="@drawable/oval_cal_selected1"
               android:backgroundTint="@color/purple"
               android:elevation="3dp"
               android:src="@drawable/plus"
               android:layout_margin="5dp"
               android:padding="6dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toEndOf="@id/tvCount"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent" />
         </androidx.constraintlayout.widget.ConstraintLayout>
         <TextView
            android:id="@+id/tvUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="개"
            android:textColor="@color/black_white"
            android:textSize="16dp"
            android:textAlignment="textEnd"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/clCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/clCount"
            app:layout_constraintBottom_toBottomOf="@id/clCount"/>
         <TextView
            android:id="@+id/tv2"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="양"
            android:textColor="@color/black_white"
            android:textSize="16dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cl4"
            app:layout_constraintBottom_toBottomOf="@id/cl4"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl4"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/clCount"
            app:layout_constraintStart_toStartOf="@id/clCount"
            app:layout_constraintEnd_toEndOf="@id/clCount">
            <TextView
               android:id="@+id/tvAmount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0"
               android:textSize="16dp"
               android:textColor="@color/black_white"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <TextView
            android:id="@+id/tvG"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="g"
            android:textColor="@color/black_white"
            android:textSize="16dp"
            android:textAlignment="textEnd"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cl4"
            app:layout_constraintBottom_toBottomOf="@id/cl4"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
      android:id="@+id/cv3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      app:cardBackgroundColor="@color/white_grey"
      app:cardCornerRadius="10dp"
      app:cardElevation="2dp"
      app:layout_constraintTop_toBottomOf="@id/cl2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="20dp">
         <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="칼로리"
            android:textColor="@color/black_white"
            android:textSize="16dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
         <TextView
            android:id="@+id/tvKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black_white"
            android:textSize="22dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv3" />
         <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kcal"
            android:textAlignment="textEnd"
            android:textColor="@color/black_white"
            android:textSize="16dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv3" />
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
      android:id="@+id/cv5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#EEEEEE"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      app:cardBackgroundColor="@color/white_grey"
      app:cardCornerRadius="10dp"
      app:cardElevation="2dp"
      app:layout_constraintTop_toBottomOf="@id/cv3"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="20dp">
         <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="상세영양소"
            android:textColor="@color/black_white"
            android:textSize="16dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tv7"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="탄수화물"
            android:textColor="@color/black_white"
            android:textSize="15dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv6"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tvCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0g"
            android:textColor="@color/black_white"
            android:textSize="15dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/tv7"
            app:layout_constraintBottom_toBottomOf="@id/tv7"
            app:layout_constraintEnd_toEndOf="parent"/>
         <TextView
            android:id="@+id/tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="단백질"
            android:textColor="@color/black_white"
            android:textSize="15dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv7"
            app:layout_constraintStart_toStartOf="@id/tv7"/>
         <TextView
            android:id="@+id/tvProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0g"
            android:textColor="@color/black_white"
            android:textSize="15dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv8"
            app:layout_constraintBottom_toBottomOf="@id/tv8"/>
         <TextView
            android:id="@+id/tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="지방"
            android:textColor="@color/black_white"
            android:textSize="15dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv8"
            app:layout_constraintStart_toStartOf="@id/tv8"/>
         <TextView
            android:id="@+id/tvFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0g"
            android:textColor="@color/black_white"
            android:textSize="15dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            android:layout_alignParentBottom="true"
            app:layout_constraintTop_toTopOf="@id/tv9"
            app:layout_constraintBottom_toBottomOf="@id/tv9"
            app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
   <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:text="음식의 칼로리, 영양정보, 계량정보는 섭취방법, 조리방법, 측정방법에 따라 일부 오차가 존재할 수 있습니다."
      android:textSize="12dp"
      android:textColor="@color/black_white"
      android:fontFamily="@font/noto"
      android:includeFontPadding="false"
      app:layout_constraintTop_toBottomOf="@id/cv5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
   <androidx.cardview.widget.CardView
      android:id="@+id/cvEdit"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginBottom="25dp"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      app:cardBackgroundColor="@color/main_button"
      app:cardCornerRadius="50dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>