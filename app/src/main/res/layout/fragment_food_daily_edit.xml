<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/food_grey"
   android:id="@+id/mainLayout">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
      <ImageView
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:src="@drawable/x"
         android:layout_marginTop="16dp"
         android:layout_marginBottom="5dp"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="10dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:tint="@color/black_white" />
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clPhoto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/clBack">
      <ImageView
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:src="@drawable/baseline_gallery"
         android:layout_marginTop="25dp"
         android:layout_marginRight="20dp"
         app:tint="#AAAAAA"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent" />
   </androidx.constraintlayout.widget.ConstraintLayout>
   <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintTop_toBottomOf="@id/clBack"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/cl"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <TextView
                  android:id="@+id/tvName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="17dp"
                  android:layout_marginLeft="20dp"
                  android:text="팔도 팔도짜장면"
                  android:textSize="20dp"
                  android:textColor="@color/black_white"
                  android:fontFamily="@font/noto_bold"
                  android:includeFontPadding="false"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>
               <ImageView
                  android:id="@+id/ivView"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:src="@drawable/baseline_photo_select"
                  android:layout_marginRight="20dp"
                  app:tint="#AAAAAA"
                  app:layout_constraintBottom_toBottomOf="@id/tvName"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <androidx.viewpager.widget.ViewPager
                  android:id="@+id/viewPager"
                  android:layout_width="140dp"
                  android:layout_height="100dp"
                  android:layout_marginRight="20dp"
                  android:visibility="gone"
                  android:paddingLeft="24dp"
                  android:paddingRight="24dp"
                  app:layout_constraintTop_toTopOf="@id/tvName"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
               android:id="@+id/cl2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#EEEEEE"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               app:cardBackgroundColor="@color/white_grey"
               app:cardCornerRadius="10dp"
               app:cardElevation="2dp"
               app:layout_constraintTop_toBottomOf="@id/cl"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="20dp">
                  <TextView
                     android:id="@+id/tv1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="세부 설정"
                     android:textColor="@color/black_white"
                     android:textSize="16dp"
                     android:includeFontPadding="false"
                     android:fontFamily="@font/noto_bold"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"/>
                  <TextView
                     android:id="@+id/tv12"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="22dp"
                     android:layout_marginRight="20dp"
                     android:text="개수"
                     android:textColor="@color/black_white"
                     android:textSize="16dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintTop_toBottomOf="@id/tv1"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toStartOf="@id/ivMinus"/>
                  <ImageView
                     android:id="@+id/ivMinus"
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:background="#ACACAC"
                     android:src="@drawable/baseline_minus"
                     android:layout_marginLeft="14dp"
                     android:padding="3dp"
                     app:tint="@color/white"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toStartOf="@id/cl3"
                     app:layout_constraintTop_toTopOf="@id/tv12"
                     app:layout_constraintBottom_toBottomOf="@id/tv12"
                     app:layout_constraintHorizontal_chainStyle="packed"/>
                  <androidx.constraintlayout.widget.ConstraintLayout
                     android:id="@+id/cl3"
                     android:layout_width="95dp"
                     android:layout_height="32dp"
                     android:background="@drawable/rec_border_gray"
                     app:layout_constraintStart_toEndOf="@id/ivMinus"
                     app:layout_constraintEnd_toStartOf="@id/ivPlus"
                     app:layout_constraintTop_toTopOf="@id/ivMinus"
                     app:layout_constraintBottom_toBottomOf="@id/ivMinus">
                     <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
                  <ImageView
                     android:id="@+id/ivPlus"
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:background="#ACACAC"
                     android:src="@drawable/baseline_add"
                     android:layout_marginLeft="-0.8dp"
                     android:padding="3dp"
                     app:layout_constraintTop_toTopOf="@id/cl3"
                     app:layout_constraintBottom_toBottomOf="@id/cl3"
                     app:layout_constraintStart_toEndOf="@id/cl3"
                     app:layout_constraintEnd_toEndOf="parent"/>
                  <TextView
                     android:id="@+id/tvUnit"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:text="개"
                     android:textColor="@color/black_white"
                     android:textSize="16dp"
                     android:textAlignment="textEnd"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintStart_toEndOf="@id/ivPlus"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="@id/ivPlus"
                     app:layout_constraintBottom_toBottomOf="@id/ivPlus"/>
                  <TextView
                     android:id="@+id/tv2"
                     android:layout_width="65dp"
                     android:layout_height="wrap_content"
                     android:text="양"
                     android:textColor="@color/black_white"
                     android:textSize="16dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="@id/cl4"
                     app:layout_constraintBottom_toBottomOf="@id/cl4"/>
                  <androidx.constraintlayout.widget.ConstraintLayout
                     android:id="@+id/cl4"
                     android:layout_width="wrap_content"
                     android:layout_height="32dp"
                     android:layout_marginTop="12dp"
                     app:layout_constraintTop_toBottomOf="@id/cl3"
                     app:layout_constraintStart_toStartOf="@id/ivMinus"
                     app:layout_constraintEnd_toEndOf="@id/ivPlus">
                     <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16dp"
                        android:textColor="@color/black_white"
                        android:fontFamily="@font/noto"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
                  <TextView
                     android:id="@+id/tvG"
                     android:layout_width="45dp"
                     android:layout_height="wrap_content"
                     android:text="g"
                     android:textColor="@color/black_white"
                     android:textSize="16dp"
                     android:textAlignment="textEnd"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="@id/cl4"
                     app:layout_constraintBottom_toBottomOf="@id/cl4"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
               android:id="@+id/cv3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               app:cardBackgroundColor="@color/white_grey"
               app:cardCornerRadius="10dp"
               app:cardElevation="2dp"
               app:layout_constraintTop_toBottomOf="@id/cl2"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="20dp">
                  <TextView
                     android:id="@+id/tv3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="칼로리"
                     android:textColor="@color/black_white"
                     android:textSize="16dp"
                     android:includeFontPadding="false"
                     android:fontFamily="@font/noto_bold"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="parent" />
                  <TextView
                     android:id="@+id/tvKcal"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0"
                     android:textColor="@color/black_white"
                     android:textSize="18dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintBottom_toBottomOf="@id/tv3"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="@id/tv3" />
                  <TextView
                     android:id="@+id/tv5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="kcal"
                     android:textAlignment="textEnd"
                     android:textColor="@color/black_white"
                     android:textSize="16dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintBottom_toBottomOf="@id/tv3"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="@id/tv3" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
               android:id="@+id/cv5"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#EEEEEE"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               app:cardBackgroundColor="@color/white_grey"
               app:cardCornerRadius="10dp"
               app:cardElevation="2dp"
               app:layout_constraintTop_toBottomOf="@id/cv3"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="20dp">
                  <TextView
                     android:id="@+id/tv6"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="2dp"
                     android:text="상세영양소"
                     android:textColor="@color/black_white"
                     android:textSize="16dp"
                     android:includeFontPadding="false"
                     android:fontFamily="@font/noto_bold"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"/>
                  <TextView
                     android:id="@+id/tv7"
                     android:layout_width="60dp"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="15dp"
                     android:text="탄수화물"
                     android:textColor="@color/black_white"
                     android:textSize="15dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintTop_toBottomOf="@id/tv6"
                     app:layout_constraintStart_toStartOf="parent"/>
                  <TextView
                     android:id="@+id/tvCar"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0g"
                     android:textColor="@color/black_white"
                     android:textSize="15dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintTop_toTopOf="@id/tv7"
                     app:layout_constraintBottom_toBottomOf="@id/tv7"
                     app:layout_constraintEnd_toEndOf="parent"/>
                  <TextView
                     android:id="@+id/tv8"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:text="단백질"
                     android:textColor="@color/black_white"
                     android:textSize="15dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintTop_toBottomOf="@id/tv7"
                     app:layout_constraintStart_toStartOf="@id/tv7"/>
                  <TextView
                     android:id="@+id/tvProtein"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0g"
                     android:textColor="@color/black_white"
                     android:textSize="15dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="@id/tv8"
                     app:layout_constraintBottom_toBottomOf="@id/tv8"/>
                  <TextView
                     android:id="@+id/tv9"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:text="지방"
                     android:textColor="@color/black_white"
                     android:textSize="15dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintTop_toBottomOf="@id/tv8"
                     app:layout_constraintStart_toStartOf="@id/tv8"/>
                  <TextView
                     android:id="@+id/tvFat"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0g"
                     android:textColor="@color/black_white"
                     android:textSize="15dp"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     android:layout_alignParentBottom="true"
                     app:layout_constraintTop_toTopOf="@id/tv9"
                     app:layout_constraintBottom_toBottomOf="@id/tv9"
                     app:layout_constraintEnd_toEndOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:text="음식의 칼로리, 영양정보, 계량정보는 섭취방법, 조리방법, 측정방법에 따라 일부 오차가 존재할 수 있습니다."
               android:textSize="11dp"
               android:textColor="@color/black_white"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintTop_toBottomOf="@id/cv5"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.cardview.widget.CardView
            android:id="@+id/cvEdit"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardBackgroundColor="#9F98FF"
            app:cardCornerRadius="30dp">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:paddingTop="9dp"
               android:paddingBottom="9dp">
               <TextView
                  android:id="@+id/textView2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="수정하기"
                  android:textColor="@color/white"
                  android:textSize="16dp"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </LinearLayout>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>