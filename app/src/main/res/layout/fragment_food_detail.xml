<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white_black"
   android:id="@+id/mainLayout">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      app:layout_constraintTop_toTopOf="@id/tvTitle"
      app:layout_constraintBottom_toBottomOf="@id/tvTitle"
      app:layout_constraintStart_toStartOf="parent">
      <ImageView
         android:layout_width="12dp"
         android:layout_height="24dp"
         android:src="@drawable/arrow_back"
         android:layout_marginTop="7dp"
         android:layout_marginBottom="7dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:tint="@color/black_white" />
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:text="나의 하루 식단 기록"
      android:textSize="17dp"
      android:textColor="@color/black_white"
      android:fontFamily="@font/noto"
      android:includeFontPadding="false"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="@id/clBack"
      app:layout_constraintEnd_toEndOf="parent"/>
   <TextView
      android:id="@+id/tvInput"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/rec_25_gray"
      android:paddingTop="3dp"
      android:paddingBottom="4dp"
      android:paddingLeft="14dp"
      android:paddingRight="14dp"
      android:layout_marginRight="20dp"
      android:text="입력"
      android:textSize="15dp"
      android:textColor="@color/white"
      android:fontFamily="@font/noto_bold"
      android:includeFontPadding="false"
      app:layout_constraintTop_toTopOf="@id/tvTitle"
      app:layout_constraintEnd_toEndOf="parent"/>
   <com.google.android.material.tabs.TabLayout
      android:id="@+id/tabLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="13dp"
      android:background="@color/transparent"
      app:tabPaddingTop="0dp"
      app:tabPaddingStart="0dp"
      app:tabPaddingEnd="7dp"
      app:tabGravity="fill"
      app:tabMode="fixed"
      app:tabIndicatorHeight="0dp"
      app:tabRippleColor="@null"
      app:layout_constraintTop_toBottomOf="@id/tvInput"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
   <androidx.viewpager2.widget.ViewPager2
      android:id="@+id/viewPager"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tabLayout">
   </androidx.viewpager2.widget.ViewPager2>
</androidx.constraintlayout.widget.ConstraintLayout>