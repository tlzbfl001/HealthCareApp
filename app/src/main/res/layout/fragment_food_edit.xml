<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFA"
    android:id="@+id/mainLayout">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/clBack"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">
      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:src="@drawable/x1"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="5dp"
          android:layout_marginLeft="25dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/clPhoto"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="5dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="@id/clBack">
      <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:src="@drawable/baseline_gallery"
          android:layout_marginTop="20dp"
          android:layout_marginRight="25dp"
          app:tint="#AAAAAA"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent" />
   </androidx.constraintlayout.widget.ConstraintLayout>
   <ScrollView
       android:id="@+id/scrollView"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:fillViewport="true"
       app:layout_constraintTop_toBottomOf="@id/clBack"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/cl1"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <TextView
                   android:id="@+id/tvName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:layout_marginLeft="30dp"
                   android:text="팔도 팔도짜장면"
                   android:textSize="20dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"/>
               <ImageView
                   android:id="@+id/ivView"
                   android:layout_width="32dp"
                   android:layout_height="32dp"
                   android:src="@drawable/baseline_photo_select"
                   android:layout_marginRight="25dp"
                   app:tint="#AAAAAA"
                   app:layout_constraintTop_toTopOf="@id/tvName"
                   app:layout_constraintEnd_toEndOf="parent"/>
               <androidx.viewpager.widget.ViewPager
                   android:id="@+id/viewPager"
                   android:layout_width="140dp"
                   android:layout_height="100dp"
                   android:visibility="gone"
                   android:layout_marginRight="20dp"
                   android:paddingLeft="24dp"
                   android:paddingRight="24dp"
                   app:layout_constraintTop_toTopOf="@id/tvName"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/cl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="20dp">
                  <TextView
                      android:id="@+id/tv1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="세부 설정"
                      android:textColor="#888888"
                      android:textSize="17dp"
                      android:textStyle="bold"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"/>
                  <TextView
                      android:id="@+id/tv12"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:layout_marginRight="20dp"
                      android:text="개수"
                      android:textColor="@color/black"
                      android:textSize="16dp"
                      app:layout_constraintTop_toBottomOf="@id/tv1"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/ivMinus"/>
                  <ImageView
                      android:id="@+id/ivMinus"
                      android:layout_width="32dp"
                      android:layout_height="32dp"
                      android:background="#AAAAAA"
                      android:src="@drawable/baseline_minus"
                      android:padding="3dp"
                      app:tint="@color/white"
                      app:layout_constraintStart_toEndOf="@id/tv12"
                      app:layout_constraintEnd_toStartOf="@id/cl3"
                      app:layout_constraintTop_toTopOf="@id/tv12"
                      app:layout_constraintBottom_toBottomOf="@id/tv12"/>
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/cl3"
                      android:layout_width="100dp"
                      android:layout_height="32dp"
                      android:background="@drawable/rec_border_gray"
                      app:layout_constraintStart_toEndOf="@id/ivMinus"
                      app:layout_constraintEnd_toStartOf="@id/ivPlus"
                      app:layout_constraintTop_toTopOf="@id/ivMinus"
                      app:layout_constraintBottom_toBottomOf="@id/ivMinus">
                     <TextView
                         android:id="@+id/tvCount"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="0"
                         android:textSize="16dp"
                         android:textColor="@color/black"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
                  <ImageView
                      android:id="@+id/ivPlus"
                      android:layout_width="32dp"
                      android:layout_height="32dp"
                      android:background="#AAAAAA"
                      android:src="@drawable/baseline_add"
                      android:layout_marginLeft="-0.8dp"
                      android:padding="3dp"
                      app:layout_constraintTop_toTopOf="@id/cl3"
                      app:layout_constraintBottom_toBottomOf="@id/cl3"
                      app:layout_constraintStart_toEndOf="@id/cl3"
                      app:layout_constraintEnd_toStartOf="@id/tvUnit"/>
                  <TextView
                      android:id="@+id/tvUnit"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="개"
                      android:textColor="@color/black"
                      android:textSize="16dp"
                      android:textAlignment="textEnd"
                      app:layout_constraintStart_toEndOf="@id/ivPlus"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="@id/ivPlus"
                      app:layout_constraintBottom_toBottomOf="@id/ivPlus"/>
                  <TextView
                      android:id="@+id/tv2"
                      android:layout_width="65dp"
                      android:layout_height="wrap_content"
                      android:text="양"
                      android:textColor="@color/black"
                      android:textSize="16dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="@id/cl4"
                      app:layout_constraintBottom_toBottomOf="@id/cl4"/>
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/cl4"
                      android:layout_width="160dp"
                      android:layout_height="32dp"
                      android:background="@drawable/rec_border_gray"
                      android:layout_marginTop="15dp"
                      app:layout_constraintTop_toBottomOf="@id/cl3"
                      app:layout_constraintStart_toStartOf="@id/ivMinus"
                      app:layout_constraintEnd_toEndOf="@id/ivPlus">
                     <TextView
                         android:id="@+id/tvAmount"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="0"
                         android:textSize="16dp"
                         android:textColor="@color/black"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
                  <TextView
                      android:id="@+id/tvG"
                      android:layout_width="45dp"
                      android:layout_height="wrap_content"
                      android:text="g"
                      android:textColor="@color/black"
                      android:textSize="16dp"
                      android:textAlignment="textEnd"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="@id/cl4"
                      app:layout_constraintBottom_toBottomOf="@id/cl4"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/cl2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="20dp">
                  <TextView
                      android:id="@+id/tv3"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="칼로리"
                      android:textColor="#888888"
                      android:textSize="17dp"
                      android:textStyle="bold"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/tvKcal"
                      app:layout_constraintBottom_toBottomOf="parent"/>
                  <TextView
                      android:id="@+id/tvKcal"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="0"
                      android:textColor="@color/black"
                      android:textSize="18dp"
                      android:textAlignment="center"
                      app:layout_constraintTop_toTopOf="@id/tv3"
                      app:layout_constraintBottom_toBottomOf="@id/tv3"
                      app:layout_constraintEnd_toStartOf="@id/tv5"
                      app:layout_constraintStart_toEndOf="@id/tv3"/>
                  <TextView
                      android:id="@+id/tv5"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="kcal"
                      android:textColor="@color/black"
                      android:textSize="17dp"
                      android:textAlignment="textEnd"
                      app:layout_constraintStart_toEndOf="@id/tvKcal"
                      app:layout_constraintTop_toTopOf="@id/tv3"
                      app:layout_constraintBottom_toBottomOf="@id/tv3"
                      app:layout_constraintEnd_toEndOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/cv3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="20dp">
                  <TextView
                      android:id="@+id/tv6"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="상세영양소"
                      android:textColor="#888888"
                      android:textSize="18dp"
                      android:textStyle="bold"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"/>
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/cl5"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:paddingRight="20dp"
                      app:layout_constraintTop_toBottomOf="@id/tv6"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/cl6"
                      app:layout_constraintHorizontal_weight="1">
                     <TextView
                         android:id="@+id/tv7"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="탄수화물"
                         android:textColor="@color/black"
                         android:textSize="14dp"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintStart_toStartOf="parent"/>
                     <TextView
                         android:id="@+id/tvCar"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="0g"
                         android:textColor="@color/black"
                         android:textSize="14dp"
                         app:layout_constraintTop_toTopOf="@id/tv7"
                         app:layout_constraintBottom_toBottomOf="@id/tv7"
                         app:layout_constraintEnd_toEndOf="parent"/>
                     <TextView
                         android:id="@+id/tv8"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         android:text="단백질"
                         android:textColor="@color/black"
                         android:textSize="14dp"
                         app:layout_constraintTop_toBottomOf="@id/tv7"
                         app:layout_constraintStart_toStartOf="@id/tv7"/>
                     <TextView
                         android:id="@+id/tvProtein"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="0g"
                         android:textColor="@color/black"
                         android:textSize="14dp"
                         app:layout_constraintTop_toTopOf="@id/tv8"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintBottom_toBottomOf="@id/tv8"/>
                     <TextView
                         android:id="@+id/tv9"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         android:text="지방"
                         android:textColor="@color/black"
                         android:textSize="14dp"
                         app:layout_constraintTop_toBottomOf="@id/tv8"
                         app:layout_constraintStart_toStartOf="@id/tv8"/>
                     <TextView
                         android:id="@+id/tvFat"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="0g"
                         android:textColor="@color/black"
                         android:textSize="14dp"
                         app:layout_constraintTop_toTopOf="@id/tv9"
                         app:layout_constraintBottom_toBottomOf="@id/tv9"
                         app:layout_constraintEnd_toEndOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:id="@+id/cl6"
                      android:layout_width="0dp"
                      android:layout_height="0dp"
                      android:paddingLeft="20dp"
                      app:layout_constraintTop_toTopOf="@id/cl5"
                      app:layout_constraintStart_toEndOf="@id/cl5"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_weight="1">
                     <TextView
                         android:id="@+id/tv10"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="나트륨"
                         android:textColor="@color/black"
                         android:textSize="14dp"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintStart_toStartOf="parent"/>
                     <TextView
                         android:id="@+id/tvSalt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="0mg"
                         android:textColor="@color/black"
                         android:textSize="14dp"
                         app:layout_constraintTop_toTopOf="@id/tv10"
                         app:layout_constraintBottom_toBottomOf="@id/tv10"
                         app:layout_constraintEnd_toEndOf="parent"/>
                     <TextView
                         android:id="@+id/tv11"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         android:text="당류"
                         android:textColor="@color/black"
                         android:textSize="14dp"
                         app:layout_constraintTop_toBottomOf="@id/tv10"
                         app:layout_constraintStart_toStartOf="@id/tv10"/>
                     <TextView
                         android:id="@+id/tvSugar"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="0g"
                         android:textColor="@color/black"
                         android:textSize="14dp"
                         app:layout_constraintTop_toTopOf="@id/tv11"
                         app:layout_constraintBottom_toBottomOf="@id/tv11"
                         app:layout_constraintEnd_toEndOf="parent"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="음식의 칼로리, 영양정보, 계량정보는 섭취방법, 조리방법, 측정방법에 따라 일부 오차가 존재할 수 있습니다."
                android:textSize="12dp"
                android:textColor="#888888"
                app:layout_constraintTop_toBottomOf="@id/cv5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.cardview.widget.CardView
            android:id="@+id/cvSave"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardBackgroundColor="#9F98FF"
            app:cardCornerRadius="30dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="저장"
                   android:textColor="@color/white"
                   android:textSize="16.5dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </LinearLayout>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>