<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFA"
    android:id="@+id/mainLayout">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/clBack"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@id/tvTitle"
       app:layout_constraintBottom_toBottomOf="@id/tvTitle">
      <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:src="@drawable/x1"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_marginLeft="25dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
       android:id="@+id/tvTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:text="직접 추가 기록"
       android:textColor="@color/black"
       android:textSize="18dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"/>
   <androidx.core.widget.NestedScrollView
       android:id="@+id/scrollView"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:fillViewport="true"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toBottomOf="@id/tvTitle"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <androidx.cardview.widget.CardView
             android:id="@+id/box1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             app:cardBackgroundColor="@color/white"
             app:cardCornerRadius="20dp"
             app:cardElevation="2dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
               <TextView
                   android:id="@+id/tvTitle1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="기본 정보"
                   android:textColor="#888888"
                   android:textSize="18dp"
                   android:textStyle="bold"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"/>
               <TextView
                   android:id="@+id/cv1"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="22dp"
                   android:text="음식이름"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   app:layout_constraintTop_toBottomOf="@id/tvTitle1"
                   app:layout_constraintStart_toStartOf="parent"/>
               <EditText
                   android:id="@+id/etName"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#969696"
                   android:layout_marginLeft="15dp"
                   android:singleLine="true"
                   android:lines="1"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:hint="사과"
                   android:textColorHint="#cccccc"
                   app:layout_constraintTop_toTopOf="@id/cv1"
                   app:layout_constraintBottom_toBottomOf="@id/cv1"
                   app:layout_constraintStart_toEndOf="@id/cv1"
                   app:layout_constraintEnd_toEndOf="parent"/>
               <TextView
                   android:id="@+id/cv2"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:text="단위"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cv1"/>
               <EditText
                   android:id="@+id/etUnit"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#969696"
                   android:layout_marginLeft="15dp"
                   android:paddingRight="52dp"
                   android:singleLine="true"
                   android:lines="1"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:hint="g"
                   android:textColorHint="#cccccc"
                   android:inputType="text"
                   app:layout_constraintBottom_toBottomOf="@+id/cv2"
                   app:layout_constraintStart_toEndOf="@+id/cv2"
                   app:layout_constraintTop_toTopOf="@+id/cv2"
                   app:layout_constraintEnd_toEndOf="parent"/>
               <TextView
                   android:id="@+id/cv3"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:text="섭취량"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cv2"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="1개 기준으로 입력해주세요"
                   android:textSize="13dp"
                   android:textColor="#cccccc"
                   app:layout_constraintTop_toBottomOf="@id/cv3"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"/>
               <EditText
                   android:id="@+id/etAmount"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#969696"
                   android:layout_marginLeft="15dp"
                   android:paddingRight="55dp"
                   android:singleLine="true"
                   android:lines="1"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:hint="100"
                   android:textColorHint="#cccccc"
                   android:inputType="number"
                   app:layout_constraintBottom_toBottomOf="@+id/cv3"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@+id/cv3"
                   app:layout_constraintTop_toTopOf="@+id/cv3"/>
               <TextView
                   android:id="@+id/tvUnit2"
                   android:layout_width="55dp"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="3dp"
                   android:text="g(ml)"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:textAlignment="textEnd"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@id/etAmount"
                   app:layout_constraintBottom_toBottomOf="@id/etAmount"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:id="@+id/box2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:layout_marginBottom="10dp"
             app:cardBackgroundColor="@color/white"
             app:cardCornerRadius="20dp"
             app:cardElevation="2dp"
             app:layout_constraintTop_toBottomOf="@id/box1"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
               <TextView
                   android:id="@+id/tvTitle2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="상세 정보"
                   android:textColor="#888888"
                   android:textSize="18dp"
                   android:textStyle="bold"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"/>
               <TextView
                   android:id="@+id/cv4"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="22dp"
                   android:text="칼로리"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   app:layout_constraintTop_toBottomOf="@id/tvTitle2"
                   app:layout_constraintStart_toStartOf="parent"/>
               <EditText
                   android:id="@+id/etKcal"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#969696"
                   android:layout_marginLeft="15dp"
                   android:paddingRight="35dp"
                   android:singleLine="true"
                   android:lines="1"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:hint="52"
                   android:textColorHint="#cccccc"
                   android:inputType="number"
                   app:layout_constraintTop_toTopOf="@id/cv4"
                   app:layout_constraintBottom_toBottomOf="@id/cv4"
                   app:layout_constraintStart_toEndOf="@id/cv4"
                   app:layout_constraintEnd_toEndOf="parent"/>
               <TextView
                   android:id="@+id/tvUnit3"
                   android:layout_width="35dp"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="3dp"
                   android:text="kcal"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:textAlignment="textEnd"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@id/etKcal"
                   app:layout_constraintBottom_toBottomOf="@id/etKcal"/>
               <TextView
                   android:id="@+id/cv5"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:text="탄수화물"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cv4"/>
               <EditText
                   android:id="@+id/etCar"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#969696"
                   android:layout_marginLeft="15dp"
                   android:paddingRight="18dp"
                   android:singleLine="true"
                   android:lines="1"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:hint="13.81"
                   android:textColorHint="#cccccc"
                   android:inputType="numberDecimal"
                   app:layout_constraintBottom_toBottomOf="@+id/cv5"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@+id/cv5"
                   app:layout_constraintTop_toTopOf="@+id/cv5" />
               <TextView
                   android:id="@+id/tvUnit4"
                   android:layout_width="18dp"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="3dp"
                   android:text="g"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:textAlignment="textEnd"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@id/etCar"
                   app:layout_constraintBottom_toBottomOf="@id/etCar"/>
               <TextView
                   android:id="@+id/cv6"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:text="단백질"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cv5"/>
               <EditText
                   android:id="@+id/etProtein"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#969696"
                   android:layout_marginLeft="15dp"
                   android:paddingRight="18dp"
                   android:singleLine="true"
                   android:lines="1"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:hint="0.26"
                   android:textColorHint="#cccccc"
                   android:inputType="numberDecimal"
                   app:layout_constraintBottom_toBottomOf="@+id/cv6"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@+id/cv6"
                   app:layout_constraintTop_toTopOf="@+id/cv6" />
               <TextView
                   android:id="@+id/tvUnit5"
                   android:layout_width="18dp"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="3dp"
                   android:text="g"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:textAlignment="textEnd"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@id/etProtein"
                   app:layout_constraintBottom_toBottomOf="@id/etProtein"/>
               <TextView
                   android:id="@+id/cv7"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:text="지방"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cv6"/>
               <EditText
                   android:id="@+id/etFat"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#969696"
                   android:layout_marginLeft="15dp"
                   android:paddingRight="12dp"
                   android:singleLine="true"
                   android:lines="1"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:hint="0.17"
                   android:textColorHint="#cccccc"
                   android:inputType="numberDecimal"
                   app:layout_constraintBottom_toBottomOf="@+id/cv7"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@+id/cv7"
                   app:layout_constraintTop_toTopOf="@+id/cv7" />
               <TextView
                   android:id="@+id/tvUnit6"
                   android:layout_width="18dp"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="3dp"
                   android:text="g"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:textAlignment="textEnd"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@id/etFat"
                   app:layout_constraintBottom_toBottomOf="@id/etFat"/>
               <TextView
                   android:id="@+id/cv8"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:text="나트륨"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cv7"/>
               <EditText
                   android:id="@+id/etSalt"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#969696"
                   android:layout_marginLeft="15dp"
                   android:paddingRight="30dp"
                   android:singleLine="true"
                   android:lines="1"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:hint="1"
                   android:textColorHint="#cccccc"
                   android:inputType="numberDecimal"
                   app:layout_constraintBottom_toBottomOf="@+id/cv8"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@+id/cv8"
                   app:layout_constraintTop_toTopOf="@+id/cv8" />
               <TextView
                   android:id="@+id/tvUnit7"
                   android:layout_width="30dp"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="3dp"
                   android:text="mg"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:textAlignment="textEnd"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@id/etSalt"
                   app:layout_constraintBottom_toBottomOf="@id/etSalt"/>
               <TextView
                   android:id="@+id/cv9"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:text="당류"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/cv8"/>
               <EditText
                   android:id="@+id/etSugar"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#969696"
                   android:layout_marginLeft="15dp"
                   android:paddingRight="18dp"
                   android:singleLine="true"
                   android:lines="1"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:hint="10.8"
                   android:textColorHint="#cccccc"
                   android:inputType="numberDecimal"
                   app:layout_constraintBottom_toBottomOf="@+id/cv9"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@+id/cv9"
                   app:layout_constraintTop_toTopOf="@+id/cv9" />
               <TextView
                   android:id="@+id/tvUnit8"
                   android:layout_width="18dp"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="3dp"
                   android:text="g"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:textAlignment="textEnd"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@id/etSugar"
                   app:layout_constraintBottom_toBottomOf="@id/etSugar"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:id="@+id/cvSave"
             android:layout_width="250dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
             android:layout_marginBottom="50dp"
             app:cardBackgroundColor="#9F98FF"
             app:cardCornerRadius="30dp"
             app:layout_constraintTop_toBottomOf="@id/box2"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
               <TextView
                   android:id="@+id/tvStart"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="저장"
                   android:textColor="@color/white"
                   android:textSize="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>