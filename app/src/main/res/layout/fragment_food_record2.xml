<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white">
   <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/tvAdd">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
               android:id="@+id/btnOut"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/x1"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
            <TextView
               android:id="@+id/tv1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="섭취한 음식 찾기"
               android:textColor="@color/black"
               android:textSize="20dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@id/btnOut"
               app:layout_constraintBottom_toBottomOf="@id/btnOut"
               app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
               android:id="@+id/tv2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="식단앱 가져오기"
               android:textColor="@color/black"
               android:textSize="12dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/tv1"/>
            <EditText
               android:id="@+id/etSearch"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/rec_food_search"
               android:layout_marginTop="7dp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:paddingLeft="12dp"
               android:drawableLeft="@drawable/search"
               android:drawablePadding="16dp"
               android:drawableTint="#000000"
               android:hint="음식찾기"
               android:textColorHint="#B4B4B5"
               android:textSize="14dp"
               app:layout_constraintTop_toBottomOf="@id/tv2"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent" />
            <TextView
               android:id="@+id/tvBtn1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:background="@drawable/rec_15_border_gray"
               android:layout_marginTop="22dp"
               android:layout_marginBottom="22dp"
               android:layout_marginRight="15dp"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="자주 사용"
               android:textSize="14dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@id/etSearch"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toStartOf="@id/tvBtn2"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tvBtn2"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:background="@drawable/rec_15"
               android:backgroundTint="#3C3C3C"
               android:layout_marginRight="15dp"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="최근 입력"
               android:textSize="14dp"
               android:textColor="@color/white"
               app:layout_constraintTop_toTopOf="@id/tvBtn1"
               app:layout_constraintBottom_toBottomOf="@id/tvBtn1"
               app:layout_constraintStart_toEndOf="@id/tvBtn1"
               app:layout_constraintEnd_toStartOf="@id/tvBtn3"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tvBtn3"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:background="@drawable/rec_15_border_gray"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="직접 추가"
               android:textSize="14dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="@id/tvBtn2"
               app:layout_constraintBottom_toBottomOf="@id/tvBtn2"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@id/tvBtn2"
               app:layout_constraintHorizontal_weight="1"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recyclerView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
               android:id="@+id/tvEmpty"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:visibility="gone"
               android:layout_marginTop="50dp"
               android:text="입력된 음식이 없네요"
               android:textSize="18dp"
               android:textColor="#AAAAAA"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>
   <TextView
      android:id="@+id/tvAdd"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="#888888"
      android:gravity="center"
      android:text="저장"
      android:textColor="@color/white"
      android:textSize="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>