<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/ivBack"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:src="@drawable/x1"
             android:layout_marginTop="30dp"
             android:layout_marginLeft="30dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="30dp"
             android:text="식단 리스트"
             android:textSize="18dp"
             android:textColor="@color/black"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>
         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="30dp"
             app:cardCornerRadius="0dp"
             app:cardElevation="4dp"
             app:layout_constraintTop_toBottomOf="@id/ivBack"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:padding="8dp">
               <TextView
                   android:id="@+id/tv1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:text="사과주스"
                   android:textColor="@color/black"
                   android:textSize="14dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />
               <TextView
                   android:id="@+id/tv2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:text="정직한 사과즙 1인분(70ml)"
                   android:textColor="#4F4F4F"
                   android:textSize="12dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/tv1" />
               <TextView
                   android:id="@+id/tvKcal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="70 kcal"
                   android:textColor="@color/black"
                   android:textSize="14dp"
                   app:layout_constraintStart_toEndOf="@id/tv2"
                   app:layout_constraintBottom_toBottomOf="@id/tv2"
                   app:layout_constraintEnd_toStartOf="@+id/cvCardView"
                   app:layout_constraintTop_toTopOf="@id/tv1" />
               <androidx.cardview.widget.CardView
                   android:id="@+id/cvCardView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:cardBackgroundColor="@color/white"
                   app:cardCornerRadius="10dp"
                   app:cardElevation="0dp"
                   app:layout_constraintTop_toTopOf="@id/tvKcal"
                   app:layout_constraintBottom_toBottomOf="@id/tvKcal"
                   app:layout_constraintStart_toEndOf="@id/tvKcal"
                   app:layout_constraintEnd_toStartOf="@id/imageView">
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="4dp">
                     <ImageView
                         android:id="@+id/ivMinus"
                         android:layout_width="14dp"
                         android:layout_height="14dp"
                         android:src="@drawable/minus_circle"
                         app:layout_constraintTop_toTopOf="@id/tvCount"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintBottom_toBottomOf="@id/tvCount"
                         app:layout_constraintEnd_toStartOf="@id/tvCount"/>
                     <TextView
                         android:id="@+id/tvCount"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="14dp"
                         android:layout_marginRight="14dp"
                         android:text="1"
                         android:textSize="14dp"
                         android:textColor="@color/black"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintStart_toEndOf="@id/ivMinus"
                         app:layout_constraintEnd_toStartOf="@id/ivPlus"/>
                     <ImageView
                         android:id="@+id/ivPlus"
                         android:layout_width="14dp"
                         android:layout_height="14dp"
                         android:src="@drawable/plus_oval"
                         app:layout_constraintTop_toTopOf="@id/tvCount"
                         app:layout_constraintBottom_toBottomOf="@id/tvCount"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintStart_toEndOf="@id/tvCount"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
               <ImageView
                   android:id="@+id/imageView"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/x2"
                   android:layout_marginRight="20dp"
                   android:elevation="10dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>