<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="@color/white">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/ivBack"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent">
      <ImageView
          android:layout_width="30dp"
          android:layout_height="20dp"
          android:layout_marginTop="25dp"
          android:layout_marginLeft="25dp"
          android:src="@drawable/arrow_left_direction"
          app:tint="@color/black"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tv1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="당신에 대해 더 알고싶어요"
      android:textColor="#CC000000"
      android:textSize="17dp"
      app:layout_constraintTop_toBottomOf="@id/ivBack"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
   <TextView
       android:id="@+id/tv2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:text="바디웰에 필요한 정보를 입력해주세요."
       android:textColor="#CC000000"
       android:textSize="17dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tv1"/>
   <TextView
       android:id="@+id/tv3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="30dp"
       android:text="성별"
       android:textColor="@color/black"
       android:textSize="16dp"
       app:layout_constraintTop_toBottomOf="@id/tv2"
       app:layout_constraintStart_toStartOf="parent"/>
   <androidx.cardview.widget.CardView
       android:id="@+id/cvWoman"
       android:layout_width="130dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="12dp"
       android:layout_marginLeft="30dp"
       android:layout_marginBottom="30dp"
       app:cardBackgroundColor="#9F98FF"
       app:cardElevation="8dp"
       app:cardCornerRadius="10dp"
       app:layout_constraintTop_toBottomOf="@id/tv3"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBaseline_toTopOf="parent"
       app:layout_constraintEnd_toStartOf="@id/cvWoman">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="11dp"
          android:layout_marginBottom="11dp">
         <ImageView
             android:id="@+id/ivWoman"
             android:layout_width="34dp"
             android:layout_height="34dp"
             android:src="@drawable/man"
             app:tint="@color/white"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toStartOf="@id/tvWoman"
             app:layout_constraintHorizontal_chainStyle="packed" />
         <TextView
             android:id="@+id/tvWoman"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:text="여성"
             android:textColor="@color/white"
             android:textSize="15dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toEndOf="@id/ivWoman"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
       android:id="@+id/cvMan"
       android:layout_width="130dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       app:cardBackgroundColor="#EEEEEE"
       app:cardElevation="8dp"
       app:cardCornerRadius="10dp"
       app:layout_constraintTop_toTopOf="@id/cvWoman"
       app:layout_constraintBottom_toBottomOf="@id/cvWoman"
       app:layout_constraintStart_toEndOf="@id/cvWoman">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="11dp"
          android:layout_marginBottom="11dp">
         <ImageView
             android:id="@+id/ivMan"
             android:layout_width="34dp"
             android:layout_height="34dp"
             android:src="@drawable/man"
             app:tint="#aaaaaa"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toStartOf="@id/tvMan"
             app:layout_constraintHorizontal_chainStyle="packed" />
         <TextView
             android:id="@+id/tvMan"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:text="남성"
             android:textColor="@color/black"
             android:textSize="15dp"
             app:layout_constraintStart_toEndOf="@id/ivMan"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
   <TextView
       android:id="@+id/tv4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="30dp"
       android:text="키"
       android:textColor="@color/black"
       android:textSize="16dp"
       app:layout_constraintTop_toBottomOf="@id/cvMan"
       app:layout_constraintStart_toStartOf="parent"/>
   <EditText
       android:id="@+id/etHeight"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:background="@drawable/rec_10_border_gray"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="30dp"
       android:padding="10dp"
       android:hint="163"
       android:textSize="16dp"
       android:textAlignment="center"
       android:textColor="@color/black"
       android:textColorHint="#ccc"
       android:inputType="numberDecimal"
       android:maxLength="5"
       app:layout_constraintTop_toBottomOf="@id/tv4"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/tv5"
       app:layout_constraintHorizontal_weight="2"/>
   <TextView
       android:id="@+id/tv5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="30dp"
       android:text="cm"
       android:textColor="@color/black"
       android:textSize="16dp"
       app:layout_constraintStart_toEndOf="@id/etHeight"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="@id/etHeight"
       app:layout_constraintBottom_toBottomOf="@id/etHeight"/>
   <TextView
       android:id="@+id/tv6"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="30dp"
       android:text="체중"
       android:textColor="@color/black"
       android:textSize="16dp"
       app:layout_constraintTop_toBottomOf="@id/etHeight"
       app:layout_constraintStart_toStartOf="parent"/>
   <EditText
       android:id="@+id/etWeight"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:background="@drawable/rec_10_border_gray"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="30dp"
       android:padding="10dp"
       android:hint="58"
       android:textSize="16dp"
       android:textAlignment="center"
       android:textColor="@color/black"
       android:textColorHint="#ddd"
       android:inputType="numberDecimal"
       android:maxLength="5"
       app:layout_constraintTop_toBottomOf="@id/tv6"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/tv7"
       app:layout_constraintHorizontal_weight="2"/>
   <TextView
       android:id="@+id/tv7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="30dp"
       android:text="kg"
       android:textColor="@color/black"
       android:textSize="16dp"
       app:layout_constraintStart_toEndOf="@id/etWeight"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="@id/etWeight"
       app:layout_constraintBottom_toBottomOf="@id/etWeight"/>
   <TextView
       android:id="@+id/tvSkip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="15dp"
       android:text="건너뛰기"
       android:textColor="#777777"
       android:textSize="16dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toTopOf="@id/cvContinue"/>
   <androidx.cardview.widget.CardView
       android:id="@+id/cvContinue"
      android:layout_width="220dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:layout_marginBottom="30dp"
       app:cardBackgroundColor="#9F98FF"
       app:cardCornerRadius="30dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
          android:paddingRight="20dp">
         <TextView
             android:id="@+id/textView2"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:paddingLeft="45dp"
             android:text="계속"
             android:textColor="@color/white"
            android:textSize="17dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toStartOf="@id/ivRight" />
         <ImageView
             android:id="@+id/ivRight"
             android:layout_width="30dp"
             android:layout_height="wrap_content"
             android:background="@drawable/arrow_right_direction"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toEndOf="@+id/textView2"
             app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>