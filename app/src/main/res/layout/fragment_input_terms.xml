<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white">
   <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/cvContinue"
      app:layout_constraintVertical_weight="1">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingTop="30dp">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
               android:id="@+id/ivBack"
               android:layout_width="30dp"
               android:layout_height="20dp"
               android:src="@drawable/arrow_left_direction"
               app:tint="@color/black"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
            <TextView
               android:id="@+id/tv1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="환영합니다!"
               android:textSize="20dp"
               android:textColor="#CC000000"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@id/ivBack"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="@id/ivBack"/>
            <TextView
               android:id="@+id/tv2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="이용약관 동의"
               android:textSize="20dp"
               android:textColor="#CC000000"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/tv1"/>
            <CheckBox
               android:id="@+id/cbAll"
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:layout_marginTop="15dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/tv2"/>
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="모두 동의합니다."
               android:textColor="#99000000"
               android:textSize="14dp"
               app:layout_constraintStart_toEndOf="@id/cbAll"
               app:layout_constraintTop_toTopOf="@id/cbAll"
               app:layout_constraintBottom_toBottomOf="@id/cbAll"/>
            <TextView
               android:id="@+id/tv3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:text="개인정보 수집 및 이용, 민감정보 수집 및 이용약관과 같은 필수 사항에 모두 동의합니다."
               android:textSize="12dp"
               android:textColor="#99000000"
               app:layout_constraintTop_toBottomOf="@id/cbAll"
               app:layout_constraintStart_toStartOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#B4B4B5"
            app:layout_constraintTop_toBottomOf="@id/cl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintBottom_toBottomOf="parent">
            <CheckBox
               android:id="@+id/cb1"
               android:layout_width="15dp"
               android:layout_height="15dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
            <TextView
               android:id="@+id/tv4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="개인정보 수집 및 이용 동의"
               android:textColor="#666666"
               android:textSize="12dp"
               app:layout_constraintTop_toTopOf="@id/cb1"
               app:layout_constraintBottom_toBottomOf="@id/cb1"
               app:layout_constraintStart_toEndOf="@id/cb1"/>
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="2dp"
               android:text="(필수)"
               android:textColor="#5A8EFF"
               android:textSize="12dp"
               app:layout_constraintStart_toEndOf="@id/tv4"
               app:layout_constraintTop_toTopOf="@id/tv4"
               app:layout_constraintBottom_toBottomOf="@id/tv4"/>
            <View
               android:id="@+id/view1"
               android:layout_width="match_parent"
               android:layout_height="90dp"
               android:background="#eee"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@id/cb1"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
            <CheckBox
               android:id="@+id/cb2"
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:layout_marginTop="15dp"
               app:layout_constraintTop_toBottomOf="@id/view1"
               app:layout_constraintStart_toStartOf="parent" />
            <TextView
               android:id="@+id/tv5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="민감정보 수집 및 이용 동의"
               android:textColor="#666666"
               android:textSize="12dp"
               app:layout_constraintTop_toTopOf="@id/cb2"
               app:layout_constraintStart_toEndOf="@id/cb2"
               app:layout_constraintBottom_toBottomOf="@id/cb2"/>
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="2dp"
               android:text="(필수)"
               android:textColor="#5A8EFF"
               android:textSize="12dp"
               app:layout_constraintStart_toEndOf="@id/tv5"
               app:layout_constraintTop_toTopOf="@id/tv5"
               app:layout_constraintBottom_toBottomOf="@id/tv5"/>
            <View
               android:id="@+id/view2"
               android:layout_width="match_parent"
               android:layout_height="90dp"
               android:background="#eee"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@id/cb2"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
            <CheckBox
               android:id="@+id/cb3"
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:layout_marginTop="15dp"
               app:layout_constraintTop_toBottomOf="@id/view2"
               app:layout_constraintStart_toStartOf="parent" />
            <TextView
               android:id="@+id/tv6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="이용약관"
               android:textColor="#666666"
               android:textSize="12dp"
               app:layout_constraintStart_toEndOf="@id/cb3"
               app:layout_constraintTop_toTopOf="@id/cb3"
               app:layout_constraintBottom_toBottomOf="@id/cb3"/>
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="2dp"
               android:text="(필수)"
               android:textColor="#5A8EFF"
               android:textSize="12dp"
               app:layout_constraintStart_toEndOf="@id/tv6"
               app:layout_constraintTop_toTopOf="@id/tv6"
               android:lastBaselineToBottomHeight="6dp"/>
            <View
               android:id="@+id/view3"
               android:layout_width="match_parent"
               android:layout_height="90dp"
               android:background="#eee"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@id/cb3"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
            <CheckBox
               android:id="@+id/cb4"
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:layout_marginTop="15dp"
               app:layout_constraintTop_toBottomOf="@id/view3"
               app:layout_constraintStart_toStartOf="parent" />
            <TextView
               android:id="@+id/tv7"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="이용약관"
               android:textColor="@color/black"
               android:textSize="12dp"
               app:layout_constraintStart_toEndOf="@id/cb4"
               app:layout_constraintTop_toTopOf="@id/cb4"
               app:layout_constraintBottom_toBottomOf="@id/cb4"/>
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="2dp"
               android:text="(필수)"
               android:textColor="#5A8EFF"
               android:textSize="12dp"
               app:layout_constraintStart_toEndOf="@id/tv7"
               app:layout_constraintTop_toTopOf="@id/tv7"
               android:lastBaselineToBottomHeight="6dp"/>
            <View
               android:layout_width="match_parent"
               android:layout_height="90dp"
               android:background="#eee"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="15dp"
               app:layout_constraintTop_toBottomOf="@id/cb4"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>
   <androidx.cardview.widget.CardView
      android:id="@+id/cvContinue"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="30dp"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      app:cardBackgroundColor="#5A8EFF"
      app:cardCornerRadius="10dp"
      app:layout_constraintTop_toBottomOf="@id/scrollView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:paddingTop="11dp"
         android:paddingRight="14dp"
         android:paddingBottom="11dp">
         <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="44dp"
            android:text="계속"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9"/>
         <ImageView
            android:layout_width="25dp"
            android:layout_height="10dp"
            android:background="@drawable/arrow_right_direction"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>