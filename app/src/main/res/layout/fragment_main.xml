<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white_black">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/rec_main_top"
      android:elevation="4dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/cl2">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clTop"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toTopOf="@id/clCalendar">
         <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUser"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/oval"
            android:src="@drawable/user_white"
            android:layout_marginLeft="25dp"
            app:layout_constraintTop_toTopOf="@id/ivCalendar"
            app:layout_constraintBottom_toBottomOf="@id/ivCalendar"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp"
            android:text="바디웰 님"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintHorizontal_weight="7"
            app:layout_constraintStart_toEndOf="@id/ivUser"
            app:layout_constraintTop_toTopOf="@id/ivUser"
            app:layout_constraintBottom_toBottomOf="@id/ivUser"
            app:layout_constraintEnd_toStartOf="@id/ivCalendar"/>
         <androidx.cardview.widget.CardView
            android:id="@+id/ivCalendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="14dp"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toEndOf="@id/tvName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/drug"
               android:paddingTop="2dp"
               android:paddingBottom="2dp">
               <TextView
                  android:id="@+id/tvYear"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="12dp"
                  android:text="2023"
                  android:textSize="20dp"
                  android:textColor="@color/white"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toStartOf="@id/tvMonth"
                  app:layout_constraintHorizontal_chainStyle="packed"/>
               <TextView
                  android:id="@+id/tvMonth"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="6dp"
                  android:text="8"
                  android:textSize="43dp"
                  android:textColor="@color/white"
                  app:layout_constraintStart_toEndOf="@id/tvYear"
                  app:layout_constraintTop_toTopOf="@id/tvYear"
                  app:layout_constraintBottom_toBottomOf="@id/tvYear"
                  app:layout_constraintEnd_toStartOf="@id/ivDown" />
               <ImageView
                  android:id="@+id/ivDown"
                  android:layout_width="18dp"
                  android:layout_height="18dp"
                  android:src="@drawable/arrow_down_main"
                  android:layout_marginLeft="6dp"
                  android:layout_marginRight="12dp"
                  app:layout_constraintStart_toEndOf="@id/tvMonth"
                  app:layout_constraintTop_toTopOf="@id/tvYear"
                  app:layout_constraintBottom_toBottomOf="@id/tvYear"
                  app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clCalendar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="24dp"
         android:layout_marginBottom="24dp"
         android:layout_marginLeft="25dp"
         android:layout_marginRight="25dp"
         app:layout_constraintTop_toBottomOf="@id/clTop"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintVertical_weight="1">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/calWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recyclerView"
            app:layout_constraintVertical_chainStyle="packed">
            <TextView
               android:id="@+id/tvSun"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="SUN"
               android:textAlignment="center"
               android:textColor="@color/black_white"
               android:textSize="13dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/tvMon"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tvMon"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="MON"
               android:textAlignment="center"
               android:textColor="@color/black_white"
               android:textSize="13dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/tvSun"
               app:layout_constraintEnd_toStartOf="@+id/tvTue"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tvTue"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="TUE"
               android:textAlignment="center"
               android:textColor="@color/black_white"
               android:textSize="13dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/tvMon"
               app:layout_constraintEnd_toStartOf="@id/tvWed"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tvWed"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="WED"
               android:textAlignment="center"
               android:textColor="@color/black_white"
               android:textSize="13dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/tvTue"
               app:layout_constraintEnd_toStartOf="@id/tvThu"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tvThu"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="THU"
               android:textAlignment="center"
               android:textColor="@color/black_white"
               android:textSize="13dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/tvWed"
               app:layout_constraintEnd_toStartOf="@id/tvFri"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tvFri"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="FRI"
               android:textAlignment="center"
               android:textColor="@color/black_white"
               android:textSize="13dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/tvThu"
               app:layout_constraintEnd_toStartOf="@id/tvSat"
               app:layout_constraintHorizontal_weight="1"/>
            <TextView
               android:id="@+id/tvSat"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="SAT"
               android:textAlignment="center"
               android:textColor="@color/black_white"
               android:textSize="13dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/tvFri"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_weight="1"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calWeek"
            app:layout_constraintBottom_toBottomOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl2"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      app:layout_constraintTop_toBottomOf="@id/cl1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clRow1"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toTopOf="@id/clRow2">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clFood"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/clWater">
            <com.dinuscxj.progressbar.CircleProgressBar
               android:id="@+id/pbFood"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:progress_text_size="0dp"
               app:progress_stroke_cap="round"
               app:progress_background_color="@color/progress_base"
               app:progress_style="solid_line"
               app:progress_stroke_width="12.4dp"
               app:progress_start_color="@color/food"
               app:progress_end_color="@color/food"
               app:progress_start_degree="90"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="16dp"
               android:background="@drawable/oval"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent">
               <TextView
                  android:id="@+id/tvFoodTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="식단"
                  android:textColor="@color/black_white"
                  android:textSize="17dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toTopOf="@id/tvFood"
                  app:layout_constraintVertical_chainStyle="packed"/>
               <TextView
                  android:id="@+id/tvFood"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0/0 kcal"
                  android:textSize="13dp"
                  android:textColor="@color/black_white"
                  android:textAlignment="center"
                  app:layout_constraintTop_toBottomOf="@id/tvFoodTitle"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clWater"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/clFood"
            app:layout_constraintEnd_toEndOf="parent">
            <com.dinuscxj.progressbar.CircleProgressBar
               android:id="@+id/pbWater"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:progress_text_size="0dp"
               app:progress_stroke_cap="round"
               app:progress_background_color="@color/progress_base"
               app:progress_style="solid_line"
               app:progress_stroke_width="12.4dp"
               app:progress_start_color="@color/water"
               app:progress_end_color="@color/water"
               app:progress_start_degree="90"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="16dp"
               android:padding="5dp"
               android:background="@drawable/oval"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent">
               <TextView
                  android:id="@+id/tvWaterTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="물"
                  android:textColor="@color/black_white"
                  android:textSize="17dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toTopOf="@id/tvWater"
                  app:layout_constraintVertical_chainStyle="packed"/>
               <TextView
                  android:id="@+id/tvWater"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0/0잔"
                  android:textSize="13dp"
                  android:textColor="@color/black_white"
                  android:textAlignment="center"
                  app:layout_constraintTop_toBottomOf="@id/tvWaterTitle"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clRow2"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         app:layout_constraintTop_toBottomOf="@id/clRow1"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toTopOf="@id/clRow3">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clExercise"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/clBody">
            <com.dinuscxj.progressbar.CircleProgressBar
               android:id="@+id/pbExercise"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:progress_text_size="0dp"
               app:progress_stroke_cap="round"
               app:progress_background_color="@color/progress_base"
               app:progress_style="solid_line"
               app:progress_stroke_width="12.4dp"
               app:progress_start_color="@color/exercise"
               app:progress_end_color="@color/exercise"
               app:progress_start_degree="90"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="16dp"
               android:padding="5dp"
               android:background="@drawable/oval"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent">
               <TextView
                  android:id="@+id/tvExerciseTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="운동"
                  android:textColor="@color/black_white"
                  android:textSize="17dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toTopOf="@id/tvExercise"
                  app:layout_constraintVertical_chainStyle="packed"/>
               <TextView
                  android:id="@+id/tvExercise"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0/0 kcal"
                  android:textSize="13dp"
                  android:textColor="@color/black_white"
                  android:textAlignment="center"
                  app:layout_constraintTop_toBottomOf="@id/tvExerciseTitle"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBody"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/clExercise"
            app:layout_constraintEnd_toEndOf="parent">
            <com.dinuscxj.progressbar.CircleProgressBar
               android:id="@+id/pbBody"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:progress_text_size="0dp"
               app:progress_stroke_cap="round"
               app:progress_background_color="@color/progress_base"
               app:progress_style="solid_line"
               app:progress_stroke_width="12.4dp"
               app:progress_start_color="@color/body"
               app:progress_end_color="@color/body"
               app:progress_start_degree="90"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="16dp"
               android:padding="5dp"
               android:background="@drawable/oval"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent">
               <TextView
                  android:id="@+id/tvBodyTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="신체"
                  android:textColor="@color/black_white"
                  android:textSize="17dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toTopOf="@id/tvBody"
                  app:layout_constraintVertical_chainStyle="packed"/>
               <TextView
                  android:id="@+id/tvBody"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0/0 kg"
                  android:textSize="13dp"
                  android:textColor="@color/black_white"
                  android:textAlignment="center"
                  app:layout_constraintTop_toBottomOf="@id/tvBodyTitle"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clRow3"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         app:layout_constraintTop_toBottomOf="@id/clRow2"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSleep"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/clDrug">
            <com.dinuscxj.progressbar.CircleProgressBar
               android:id="@+id/pbSleep"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:progress_text_size="0dp"
               app:progress_stroke_cap="round"
               app:progress_background_color="@color/progress_base"
               app:progress_style="solid_line"
               app:progress_stroke_width="12.4dp"
               app:progress_start_color="@color/sleep"
               app:progress_end_color="@color/sleep"
               app:progress_start_degree="90"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="16dp"
               android:padding="5dp"
               android:background="@drawable/oval"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent">
               <TextView
                  android:id="@+id/tvSleepTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="수면"
                  android:textColor="@color/black_white"
                  android:textSize="17dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toTopOf="@id/tvSleep"
                  app:layout_constraintVertical_chainStyle="packed"/>
               <TextView
                  android:id="@+id/tvSleep"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0/0"
                  android:textSize="13dp"
                  android:textColor="@color/black_white"
                  android:textAlignment="center"
                  app:layout_constraintTop_toBottomOf="@id/tvSleepTitle"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDrug"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/clSleep"
            app:layout_constraintEnd_toEndOf="parent">
            <com.dinuscxj.progressbar.CircleProgressBar
               android:id="@+id/pbDrug"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:progress_text_size="0dp"
               app:progress_stroke_cap="round"
