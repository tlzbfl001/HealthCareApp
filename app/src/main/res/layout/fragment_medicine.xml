<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:fillViewport="true"
   app:layout_constraintTop_toTopOf="parent"
   app:layout_constraintStart_toStartOf="parent"
   app:layout_constraintEnd_toEndOf="parent"
   app:layout_constraintBottom_toBottomOf="parent">
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white_black"
      android:orientation="vertical">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/cl"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
               android:layout_width="16dp"
               android:layout_height="21dp"
               android:src="@drawable/setting_goal"
               android:layout_marginTop="1dp"
               app:tint="@color/black_white"
               app:layout_constraintTop_toTopOf="@id/tvSetting"
               app:layout_constraintBottom_toBottomOf="@id/tvSetting"
               app:layout_constraintEnd_toStartOf="@id/tvSetting"/>
            <TextView
               android:id="@+id/tvSetting"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="20dp"
               android:paddingLeft="3dp"
               android:text="목표설정"
               android:textColor="@color/black_white"
               android:textSize="15dp"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="195dp"
            android:layout_height="195dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            app:indicatorInset="0dp"
            android:layout_marginTop="15dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/custom_progress_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/progressbar"
            app:layout_constraintStart_toStartOf="@id/progressbar"
            app:layout_constraintEnd_toEndOf="@id/progressbar"
            app:layout_constraintBottom_toBottomOf="@id/progressbar">
            <TextView
               android:id="@+id/tvWeight1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="복용횟수"
               android:textColor="@color/black_white"
               android:textSize="14.5dp"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintBottom_toTopOf="@id/tvDrugCount"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_chainStyle="packed" />
            <TextView
               android:id="@+id/tvDrugCount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0회"
               android:textColor="@color/black_white"
               android:textSize="16dp"
               android:fontFamily="@font/noto_bold"
               android:includeFontPadding="false"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/tvWeight1" />
         </androidx.constraintlayout.widget.ConstraintLayout>
         <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="목표 복용 횟수"
            android:textColor="@color/black_white"
            android:textSize="14.5dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toStartOf="@id/view1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressbar" />
         <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/black_white"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toEndOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintEnd_toStartOf="@id/tv3"
            app:layout_constraintBottom_toBottomOf="@id/tvGoal"/>
         <TextView
            android:id="@+id/tvGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:text="0회"
            android:textSize="16dp"
            android:fontFamily="@font/noto_bold"
            android:includeFontPadding="false"
            android:textColor="@color/black_white"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            app:layout_constraintEnd_toEndOf="@id/tv1"/>
         <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="남은 복용 횟수"
            android:textSize="14.5dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            android:textColor="@color/black_white"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view1"/>
         <TextView
            android:id="@+id/tvRemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:text="0회"
            android:textSize="16dp"
            android:fontFamily="@font/noto_bold"
            android:includeFontPadding="false"
            android:textColor="@color/black_white"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintStart_toStartOf="@id/tv3"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <LinearLayout
         android:id="@+id/cl3"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:background="@drawable/rec_top_radius_35"
         android:backgroundTint="@color/purple_grey"
         android:layout_marginTop="15dp"
         app:layout_constraintTop_toBottomOf="@id/cl"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <TextView
               android:id="@+id/tvPerm"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="알람 권한이 설정되지 않았어요. 알람 권한을 설정해주세요."
               android:textColor="@color/black_white"
               android:textSize="15dp"
               android:textAlignment="center"
               android:fontFamily="@font/noto"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.cardview.widget.CardView
               android:id="@+id/btnPerm"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               app:cardBackgroundColor="@color/purple"
               app:cardCornerRadius="10dp"
               app:cardElevation="0dp"
               app:layout_constraintTop_toBottomOf="@id/tvPerm"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="9dp"
                  android:layout_marginBottom="11dp"
                  android:layout_marginLeft="18dp"
                  android:layout_marginRight="18dp"
                  android:text="권한 설정하러 가기"
                  android:textSize="15dp"
                  android:textColor="#FFFFFF"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"/>
            </androidx.cardview.widget.CardView>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
               android:id="@+id/tv4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="25dp"
               android:text="하루 약복용"
               android:textColor="@color/black_white"
               android:textSize="15dp"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clRecord"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="25dp"
               app:layout_constraintTop_toTopOf="@id/tv4"
               app:layout_constraintEnd_toEndOf="parent">
               <ImageView
                  android:id="@+id/iv2"
                  android:layout_width="16dp"
                  android:layout_height="21dp"
                  android:src="@drawable/setting_goal"
                  android:backgroundTint="@color/black"
                  android:layout_marginRight="3dp"
                  android:layout_marginTop="2dp"
                  app:tint="@color/black_white"
                  app:layout_constraintTop_toTopOf="@id/tv5"
                  app:layout_constraintBottom_toBottomOf="@id/tv5"
                  app:layout_constraintEnd_toStartOf="@id/tv5"/>
               <TextView
                  android:id="@+id/tv5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="약복용 기록"
                  android:textColor="@color/black_white"
                  android:textSize="15dp"
                  android:fontFamily="@font/noto"
                  android:includeFontPadding="false"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="60dp"
            app:cardBackgroundColor="@color/white_grey"
            app:cardCornerRadius="9dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/clRecord"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <androidx.cardview.widget.CardView
                  android:id="@+id/cvList"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardBackgroundColor="@color/purple"
                  app:cardCornerRadius="9dp"
                  app:cardElevation="0dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent">
                  <androidx.constraintlayout.widget.ConstraintLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingTop="9dp"
                     android:paddingBottom="9dp"
                     android:paddingLeft="8dp"
                     android:paddingRight="8dp">
                     <TextView
                        android:id="@+id/tvList1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="복용 시간"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:fontFamily="@font/noto"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvList2"
                        app:layout_constraintHorizontal_weight="3"/>
                     <TextView
                        android:id="@+id/tvList2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="오늘의 약"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:fontFamily="@font/noto"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvList1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvList3"
                        app:layout_constraintHorizontal_weight="3"/>
                     <TextView
                        android:id="@+id/tvList3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="복용량"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:fontFamily="@font/noto"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvList2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvList4"
                        app:layout_constraintHorizontal_weight="3"/>
                     <TextView
                        android:id="@+id/tvList4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="확인"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:fontFamily="@font/noto"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvList3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="2"/>
                  </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
               <androidx.recyclerview.widget.RecyclerView
                  android:id="@id/recyclerView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="2dp"
                  android:paddingBottom="13dp"
                  android:paddingLeft="8dp"
                  android:paddingRight="8dp"
                  app:layout_constraintTop_toBottomOf="@id/cvList"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>
         </androidx.cardview.widget.CardView>
      </LinearLayout>
   </LinearLayout>
</androidx.core.widget.NestedScrollView>