<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white">
   <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <ImageView
         android:layout_width="match_parent"
         android:layout_height="167dp"
         android:background="#FBF2F2"/>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo3"
            android:layout_marginLeft="25dp"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:text="DAILY NOTE"
            android:textSize="24dp"
            android:textColor="#555555"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/cl1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_main_calendar"
             android:elevation="5dp"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             app:layout_constraintTop_toBottomOf="@id/ivLogo"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCalTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AAAAAA"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <ImageView
                   android:id="@+id/ivPrev"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/arrow_left_round"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toStartOf="@+id/tvCalTitle"
                   app:layout_constraintHorizontal_weight="1"/>
               <TextView
                   android:id="@+id/tvCalTitle"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="2023  August"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="24dp"
                   android:textStyle="bold"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toEndOf="@id/ivPrev"
                   app:layout_constraintEnd_toStartOf="@id/ivNext"
                   app:layout_constraintHorizontal_weight="7"/>
               <ImageView
                   android:id="@+id/ivNext"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/arrow_right_round"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toEndOf="@id/tvCalTitle"
                   app:layout_constraintHorizontal_weight="1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCalBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/clCalTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/calWeek"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="4dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent">
                  <TextView
                      android:id="@+id/tvSun"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="SUN"
                      android:textAlignment="center"
                      android:textColor="#777777"
                      android:textSize="11dp"
                      android:textStyle="bold"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/tvMon"
                      app:layout_constraintHorizontal_weight="1"/>
                  <TextView
                      android:id="@+id/tvMon"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="MON"
                      android:textAlignment="center"
                      android:textColor="#777777"
                      android:textSize="11dp"
                      android:textStyle="bold"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toEndOf="@id/tvSun"
                      app:layout_constraintEnd_toStartOf="@+id/tvTue"
                      app:layout_constraintHorizontal_weight="1"/>
                  <TextView
                      android:id="@+id/tvTue"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="TUE"
                      android:textAlignment="center"
                      android:textColor="#777777"
                      android:textSize="11dp"
                      android:textStyle="bold"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toEndOf="@id/tvMon"
                      app:layout_constraintEnd_toStartOf="@id/tvWed"
                      app:layout_constraintHorizontal_weight="1"/>
                  <TextView
                      android:id="@+id/tvWed"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="WED"
                      android:textAlignment="center"
                      android:textColor="#777777"
                      android:textSize="11dp"
                      android:textStyle="bold"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toEndOf="@id/tvTue"
                      app:layout_constraintEnd_toStartOf="@id/tvThu"
                      app:layout_constraintHorizontal_weight="1"/>
                  <TextView
                      android:id="@+id/tvThu"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="THU"
                      android:textAlignment="center"
                      android:textColor="#777777"
                      android:textSize="11dp"
                      android:textStyle="bold"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toEndOf="@id/tvWed"
                      app:layout_constraintEnd_toStartOf="@id/tvFri"
                      app:layout_constraintHorizontal_weight="1"/>
                  <TextView
                      android:id="@+id/tvFri"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="FRI"
                      android:textAlignment="center"
                      android:textColor="#777777"
                      android:textSize="11dp"
                      android:textStyle="bold"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toEndOf="@id/tvThu"
                      app:layout_constraintEnd_toStartOf="@id/tvSat"
                      app:layout_constraintHorizontal_weight="1"/>
                  <TextView
                      android:id="@+id/tvSat"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="SAT"
                      android:textAlignment="center"
                      android:textColor="#777777"
                      android:textSize="11dp"
                      android:textStyle="bold"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toEndOf="@id/tvFri"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_weight="1"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/recyclerView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:layout_marginBottom="6dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/calWeek"
                   app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.cardview.widget.CardView
             android:id="@+id/iv1"
             android:layout_width="0dp"
             android:layout_height="64dp"
             android:layout_marginTop="40dp"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="15dp"
             app:cardBackgroundColor="#AAAAAA"
             app:cardCornerRadius="5dp"
             app:cardElevation="0dp"
             app:layout_constraintTop_toBottomOf="@id/cl1"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toStartOf="@id/iv2"/>
         <TextView
             android:id="@+id/tv1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:text="오늘의 섭취 칼로리"
             android:textSize="16dp"
             android:textColor="@color/white"
             app:layout_constraintTop_toTopOf="@id/iv1"
             app:layout_constraintStart_toStartOf="@id/iv1"
             app:layout_constraintEnd_toEndOf="@id/iv1"/>
         <TextView
             android:id="@+id/tvKcal1"
             android:layout_width="135dp"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_radius_note"
             android:layout_marginTop="6dp"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_marginBottom="10dp"
             android:paddingTop="7dp"
             android:paddingBottom="7dp"
             android:elevation="5dp"
             android:text="0 kcal"
             android:textSize="16dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintTop_toBottomOf="@id/tv1"
             app:layout_constraintStart_toStartOf="@id/tv1"
             app:layout_constraintEnd_toEndOf="@id/tv1"/>
         <androidx.cardview.widget.CardView
             android:id="@+id/iv2"
             android:layout_width="0dp"
             android:layout_height="64dp"
             android:layout_marginTop="40dp"
             android:layout_marginRight="25dp"
             app:cardBackgroundColor="#AAAAAA"
             app:cardCornerRadius="5dp"
             app:cardElevation="0dp"
             app:layout_constraintTop_toBottomOf="@id/cl1"
             app:layout_constraintStart_toEndOf="@id/iv1"
             app:layout_constraintEnd_toEndOf="parent"/>
         <TextView
             android:id="@+id/tv2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:text="오늘의 소비 칼로리"
             android:textSize="16dp"
             android:textColor="@color/white"
             app:layout_constraintTop_toTopOf="@id/iv2"
             app:layout_constraintStart_toStartOf="@id/iv2"
             app:layout_constraintEnd_toEndOf="@id/iv2"/>
         <TextView
             android:id="@+id/tvKcal2"
             android:layout_width="135dp"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_radius_note"
             android:layout_marginTop="6dp"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_marginBottom="10dp"
             android:paddingTop="7dp"
             android:paddingBottom="7dp"
             android:elevation="5dp"
             android:text="0 kcal"
             android:textSize="16dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintTop_toBottomOf="@id/tv2"
             app:layout_constraintStart_toStartOf="@id/tv2"
             app:layout_constraintEnd_toEndOf="@id/tv2"/>
         <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvKcal1"
            app:layout_constraintBottom_toTopOf="@id/cv2"
            app:layout_constraintVertical_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="8dp">
               <androidx.viewpager.widget.ViewPager
                   android:id="@+id/viewPager"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:clipToPadding="false"
                   android:overScrollMode="never"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/clGallery"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="@id/viewPager"
                   app:layout_constraintStart_toStartOf="@id/viewPager"
                   app:layout_constraintEnd_toEndOf="@id/viewPager"
                   app:layout_constraintBottom_toBottomOf="@id/viewPager">
                  <ImageView
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:background="@drawable/oval"
                      android:backgroundTint="#80AAAAAA"
                      android:src="@drawable/ic_add"
                      android:layout_margin="15dp"
                      app:tint="@color/black"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:id="@+id/cv2"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="30dp"
             app:cardBackgroundColor="#FFFBFB"
             app:cardCornerRadius="15dp"
             app:cardElevation="5dp"
             app:layout_constraintVertical_weight="1"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@id/cv1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="22dp"
                android:paddingBottom="20dp">
               <TextView
                   android:id="@+id/tvDate"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:background="@drawable/rec_30"
                   android:backgroundTint="#FFF0F0"
                   android:layout_marginTop="20dp"
                   android:paddingTop="3dp"
                   android:paddingBottom="3dp"
                   android:text="2023년 8월 22일"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/clStarArea"
                   app:layout_constraintHorizontal_weight="1"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/clStarArea"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   app:layout_constraintTop_toTopOf="@+id/tvDate"
                   app:layout_constraintBottom_toBottomOf="@+id/tvDate"
                   app:layout_constraintStart_toEndOf="@id/tvDate"
                   app:layout_constraintEnd_toStartOf="@id/ivWrite"
                   app:layout_constraintHorizontal_weight="1">
                  <ImageView
                      android:id="@+id/ivSmail1"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/face_smile"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/ivSmail2"/>
                  <ImageView
                      android:id="@+id/ivSmail2"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/face_smile"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/ivSmail3"
                      app:layout_constraintBottom_toBottomOf="parent"/>
                  <ImageView
                      android:id="@+id/ivSmail3"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/face_smile"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/ivSmail4"
                      app:layout_constraintBottom_toBottomOf="parent"/>
                  <ImageView
                      android:id="@+id/ivSmail4"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/face_smile"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/ivSmail5"
                      app:layout_constraintBottom_toBottomOf="parent"/>
                  <ImageView
                      android:id="@+id/ivSmail5"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/face_smile"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
               <ImageView
                   android:id="@+id/ivWrite"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:background="@drawable/oval_border_food"
                   android:src="@drawable/pencil"
                   android:layout_marginTop="5dp"
                   android:layout_marginRight="5dp"
                   android:padding="6dp"
                   app:tint="#F1ADAD"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/clWrite"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:background="@drawable/rec_10_border_pink"
                   android:layout_marginTop="20dp"
                   android:layout_marginRight="22dp"
                   android:paddingTop="8dp"
                   android:paddingLeft="15dp"
                   android:paddingRight="15dp"
                   android:paddingBottom="8dp"
                   app:layout_constraintTop_toBottomOf="@id/tvDate"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintVertical_weight="1">
                  <TextView
                      android:id="@+id/tvNoteTitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="제목."
                      android:textSize="15dp"
                      android:textColor="#ddd"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"/>
                  <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:background="#ddd"
                     android:layout_marginTop="5dp"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toBottomOf="@id/tvNoteTitle"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
