<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white"
   android:id="@+id/mainLayout">
   <ImageView
      android:id="@+id/ivFace"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:src="@drawable/face1"
      android:layout_marginTop="10dp"
      android:layout_marginRight="25dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
   <TextView
      android:id="@+id/tvYear"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="25dp"
      android:text="2023"
      android:textSize="18dp"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="@id/ivFace"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toTopOf="@id/clExpand"
      app:layout_constraintVertical_chainStyle="packed"/>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clExpand"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/tvYear"
      app:layout_constraintBottom_toBottomOf="@id/ivFace"
      app:layout_constraintStart_toStartOf="@id/tvYear">
      <TextView
         android:id="@+id/tvYearText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="August"
         android:textSize="24dp"
         android:textColor="@color/black"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"/>
      <ImageView
         android:id="@+id/ivDown"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:src="@drawable/arrow_down_note"
         android:layout_marginLeft="6dp"
         android:layout_marginRight="12dp"
         app:layout_constraintStart_toEndOf="@id/tvYearText"
         app:layout_constraintTop_toTopOf="@id/tvYearText"
         app:layout_constraintBottom_toBottomOf="@id/tvYearText"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="25dp"
      android:layout_marginRight="25dp"
      app:layout_constraintTop_toBottomOf="@id/ivFace"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
   <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="#F4FAEC"
      android:layout_marginTop="45dp"
      app:layout_constraintTop_toBottomOf="@id/recyclerView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="25dp"
      android:layout_marginRight="25dp"
      app:cardBackgroundColor="#7E7E7E"
      app:cardCornerRadius="12dp"
      app:cardElevation="0dp"
      app:layout_constraintTop_toBottomOf="@id/recyclerView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/cl2">
      <androidx.cardview.widget.CardView
         android:id="@+id/iv1"
         android:layout_width="match_parent"
         android:layout_height="64dp"
         app:cardBackgroundColor="#7E7E7E"
         app:cardCornerRadius="12dp"
         app:cardElevation="0dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"/>
      <TextView
         android:id="@+id/tv1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:text="오늘의 섭취 칼로리"
         android:textSize="15dp"
         android:textColor="@color/white"
         app:layout_constraintTop_toTopOf="@id/iv1"
         app:layout_constraintStart_toStartOf="@id/iv1"
         app:layout_constraintEnd_toEndOf="@id/iv1"/>
      <TextView
         android:id="@+id/tvKcal1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/rec_radius_note"
         android:layout_marginTop="6dp"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:layout_marginBottom="10dp"
         android:paddingTop="7dp"
         android:paddingBottom="7dp"
         android:elevation="3dp"
         android:text="0 kcal"
         android:textSize="15dp"
         android:textColor="@color/black"
         android:textAlignment="center"
         app:layout_constraintTop_toBottomOf="@id/tv1"
         app:layout_constraintStart_toStartOf="@id/tv1"
         app:layout_constraintEnd_toEndOf="@id/tv1"
         app:layout_constraintBottom_toBottomOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginRight="25dp"
      app:cardBackgroundColor="#7E7E7E"
      app:cardCornerRadius="12dp"
      app:cardElevation="0dp"
      app:layout_constraintTop_toTopOf="@id/cl1"
      app:layout_constraintStart_toEndOf="@id/cl1"
      app:layout_constraintEnd_toEndOf="parent">
      <androidx.cardview.widget.CardView
         android:id="@+id/iv2"
         android:layout_width="match_parent"
         android:layout_height="64dp"
         app:cardBackgroundColor="#7E7E7E"
         app:cardCornerRadius="12dp"
         app:cardElevation="0dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"/>
      <TextView
         android:id="@+id/tv2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:text="오늘의 소비 칼로리"
         android:textSize="15dp"
         android:textColor="@color/white"
         app:layout_constraintTop_toTopOf="@id/iv2"
         app:layout_constraintStart_toStartOf="@id/iv2"
         app:layout_constraintEnd_toEndOf="@id/iv2"/>
      <TextView
         android:id="@+id/tvKcal2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/rec_radius_note"
         android:layout_marginTop="6dp"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:layout_marginBottom="10dp"
         android:paddingTop="7dp"
         android:paddingBottom="7dp"
         android:elevation="3dp"
         android:text="0 kcal"
         android:textSize="15dp"
         android:textColor="@color/black"
         android:textAlignment="center"
         app:layout_constraintTop_toBottomOf="@id/tv2"
         app:layout_constraintStart_toStartOf="@id/tv2"
         app:layout_constraintEnd_toEndOf="@id/tv2"
         app:layout_constraintBottom_toBottomOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvTitle1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="25dp"
      android:layout_marginTop="10dp"
      android:text="나의 하루 사진"
      android:textSize="15.3dp"
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@id/cl1"
      app:layout_constraintStart_toStartOf="parent"/>
   <androidx.cardview.widget.CardView
      android:id="@+id/cv1"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="6dp"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="0dp"
      app:cardElevation="5dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvTitle1"
      app:layout_constraintBottom_toTopOf="@id/tvTitle2">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="25dp"
         android:layout_marginTop="8dp"
         android:layout_marginRight="25dp"
         android:layout_marginBottom="8dp">
         <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="@id/viewPager"
            app:layout_constraintEnd_toEndOf="@id/viewPager"
            app:layout_constraintBottom_toBottomOf="@id/viewPager">
            <ImageView
               android:layout_width="26dp"
               android:layout_height="26dp"
               android:background="@drawable/oval"
               android:backgroundTint="#33AAAAAA"
               android:src="@drawable/baseline_add"
               android:layout_margin="15dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
   <TextView
      android:id="@+id/tvTitle2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      android:layout_marginLeft="25dp"
      android:text="나의 하루 일기"
      android:textSize="15.3dp"
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@id/cv1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toTopOf="@id/cl3"/>
   <ImageView
      android:id="@+id/ivWrite"
      android:layout_width="22dp"
      android:layout_height="22dp"
      android:background="@drawable/oval_border_green"
      android:src="@drawable/pencil"
      android:layout_marginLeft="8dp"
      android:padding="6dp"
      app:tint="#256615"
      app:layout_constraintStart_toEndOf="@id/tvTitle2"
      app:layout_constraintTop_toTopOf="@id/tvTitle2"
      app:layout_constraintBottom_toBottomOf="@id/tvTitle2"/>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl3"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="#33638831"
      android:layout_marginTop="6dp"
      app:layout_constraintTop_toBottomOf="@id/tvTitle2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clWrite"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/rec_15_border_green"
         android:layout_margin="25dp"
         android:padding="15dp">
         <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목."
            android:textSize="14dp"
            android:textColor="#aaaaaa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
         <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
