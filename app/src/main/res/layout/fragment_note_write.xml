<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white"
   android:id="@+id/mainLayout" >
   <ImageView
      android:id="@+id/ivBack"
      android:layout_width="14dp"
      android:layout_height="22dp"
      android:src="@drawable/arrow_left"
      android:layout_gravity="left"
      android:layout_marginLeft="25dp"
      app:layout_constraintTop_toTopOf="@id/tvTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/tvTitle"
      app:tint="@color/black" />
   <TextView
      android:id="@+id/tvTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:text="하루일기"
      android:textSize="20dp"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl1"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toBottomOf="@id/tvTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/tvSave"
      app:layout_constraintVertical_weight="1">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clBox1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#EEEEEE"
         android:paddingLeft="30dp"
         android:paddingRight="30dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPrev"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvCalTitle"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
               android:layout_width="10dp"
               android:layout_height="wrap_content"
               android:src="@drawable/arrow_left_round"
               android:layout_marginRight="30dp"
               android:layout_marginLeft="15dp"
               app:tint="#9E9E9E"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent" />
         </androidx.constraintlayout.widget.ConstraintLayout>
         <TextView
            android:id="@+id/tvCalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="2023년 8월 22일"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/clNext"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toEndOf="@id/tvCalTitle"
             app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_round"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="30dp"
                app:tint="#9E9E9E"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <TextView
         android:id="@+id/tvTitle2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="35dp"
         android:layout_marginLeft="25dp"
         android:text="오늘의 기분"
         android:textSize="16dp"
         android:textColor="#555555"
         app:layout_constraintTop_toBottomOf="@id/clBox1"
         app:layout_constraintStart_toStartOf="parent"/>
      <ImageView
         android:id="@+id/ivFace1"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:src="@drawable/face_smile"
         app:layout_constraintTop_toTopOf="@id/ivFace2"
         app:layout_constraintBottom_toBottomOf="@id/ivFace2"
         app:layout_constraintEnd_toStartOf="@id/ivFace2"/>
      <ImageView
         android:id="@+id/ivFace2"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:src="@drawable/face_normal"
         app:layout_constraintTop_toTopOf="@id/ivFace3"
         app:layout_constraintBottom_toBottomOf="@id/ivFace3"
         app:layout_constraintEnd_toStartOf="@id/ivFace3"/>
      <ImageView
         android:id="@+id/ivFace3"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:src="@drawable/face_happy"
         app:layout_constraintTop_toTopOf="@id/ivFace4"
         app:layout_constraintBottom_toBottomOf="@id/ivFace4"
         app:layout_constraintEnd_toStartOf="@id/ivFace4"/>
      <ImageView
         android:id="@+id/ivFace4"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:src="@drawable/face_normal"
         app:layout_constraintTop_toTopOf="@id/ivFace5"
         app:layout_constraintBottom_toBottomOf="@id/ivFace5"
         app:layout_constraintEnd_toStartOf="@id/ivFace5"/>
      <ImageView
         android:id="@+id/ivFace5"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:src="@drawable/face_upset"
         android:layout_marginRight="25dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="@id/tvTitle2" />
      <androidx.cardview.widget.CardView
         android:id="@+id/cvStatus"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="25dp"
         android:layout_marginRight="25dp"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         app:cardBackgroundColor="@color/white"
         app:cardCornerRadius="10dp"
         app:cardElevation="5dp"
         app:layout_constraintTop_toBottomOf="@id/tvTitle2"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
               android:id="@+id/ivStatus1"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/face_smile"
               android:layout_marginRight="5dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/ivStatus2"
               app:layout_constraintHorizontal_chainStyle="packed"/>
            <ImageView
               android:id="@+id/ivStatus2"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/face_smile"
               android:layout_marginRight="5dp"
               app:layout_constraintStart_toEndOf="@id/ivStatus1"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/ivStatus3"/>
            <ImageView
               android:id="@+id/ivStatus3"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/face_smile"
               android:layout_marginRight="5dp"
               app:layout_constraintStart_toEndOf="@id/ivStatus2"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/ivStatus4"/>
            <ImageView
               android:id="@+id/ivStatus4"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/face_smile"
               android:layout_marginRight="5dp"
               app:layout_constraintStart_toEndOf="@id/ivStatus3"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/ivStatus5"/>
            <ImageView
               android:id="@+id/ivStatus5"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/face_smile"
               app:layout_constraintStart_toEndOf="@id/ivStatus4"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent" />
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>
      <TextView
          android:id="@+id/tvTitle3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="35dp"
          android:layout_marginLeft="25dp"
          android:text="하루 일기"
          android:textSize="16dp"
          android:textColor="#555555"
          app:layout_constraintTop_toBottomOf="@id/cvStatus"
          app:layout_constraintStart_toStartOf="parent"/>
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="25dp"
          android:layout_marginRight="25dp"
          android:layout_marginBottom="30dp"
          app:cardCornerRadius="15dp"
          app:cardBackgroundColor="#FFFBFB"
          app:cardElevation="5dp"
          app:layout_constraintTop_toBottomOf="@id/tvTitle3"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="18dp">
            <TextView
                android:id="@+id/tvNoteDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_30"
                android:backgroundTint="#FFF0F0"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="2023년 8월 22일"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/clStarArea"
                app:layout_constraintHorizontal_weight="1"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clStarArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tvNoteDate"
                app:layout_constraintBottom_toBottomOf="@+id/tvNoteDate"
                app:layout_constraintStart_toEndOf="@id/tvNoteDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1">
               <ImageView
                   android:id="@+id/ivSmail1"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/face_smile"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/ivSmail2"
                   app:layout_constraintBottom_toBottomOf="parent"/>
               <ImageView
                   android:id="@+id/ivSmail2"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/face_smile"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/ivSmail3"
                   app:layout_constraintBottom_toBottomOf="parent"/>
               <ImageView
                   android:id="@+id/ivSmail3"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/face_smile"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/ivSmail4"
                   app:layout_constraintBottom_toBottomOf="parent"/>
               <ImageView
                   android:id="@+id/ivSmail4"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/face_smile"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/ivSmail5"
                   app:layout_constraintBottom_toBottomOf="parent"/>
               <ImageView
                   android:id="@+id/ivSmail5"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/face_smile"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/rec_10_border_pink"
                android:layout_marginTop="18dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                app:layout_constraintTop_toBottomOf="@id/tvNoteDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1">
               <EditText
                   android:id="@+id/etTitle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#ddd"
                   android:textSize="15dp"
                   android:textColor="@color/black"
                   android:hint="제목."
                   android:textColorHint="#ddd"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
               <EditText
                   android:id="@+id/etContent"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:gravity="top"
                   android:backgroundTint="@color/transparent"
                   android:textSize="13dp"
                   android:textColor="@color/black"
                   android:hint="내용입력"
                   android:textColorHint="#ddd"
                   app:layout_constraintTop_toBottomOf="@id/etTitle"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintVertical_weight="1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvSave"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="#888888"
      android:gravity="center"
      android:text="저장"
      android:textColor="@color/white"
      android:textSize="20dp"
      app:layout_constraintTop_toBottomOf="@id/cl1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>