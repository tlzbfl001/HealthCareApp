<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/mainLayout"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      app:layout_constraintTop_toTopOf="@id/tvTitle"
      app:layout_constraintBottom_toBottomOf="@id/tvTitle"
      app:layout_constraintStart_toStartOf="parent">
      <ImageView
         android:layout_width="12dp"
         android:layout_height="24dp"
         android:src="@drawable/arrow_back"
         android:layout_marginTop="7dp"
         android:layout_marginBottom="7dp"
         app:layout_constraintStart_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="나의 감정 기록장"
      android:textSize="18dp"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clBox1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#F5F5F5"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@id/clBack"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clPrev"
         android:layout_width="wrap_content"
         android:layout_height="0dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintBottom_toBottomOf="parent">
         <ImageView
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left_round"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            app:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <TextView
         android:id="@+id/tvCalTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="7dp"
         android:layout_marginBottom="7dp"
         android:text="2023년 8월 22일"
         android:textSize="18dp"
         android:textColor="@color/black"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toEndOf="@id/clPrev"
         app:layout_constraintEnd_toStartOf="@id/clNext"
         app:layout_constraintBottom_toBottomOf="parent"/>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clNext"
         android:layout_width="wrap_content"
         android:layout_height="0dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent">
         <ImageView
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_round"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="20dp"
            app:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvTitle2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:text="오늘의 기분?"
      android:textSize="15dp"
      android:textColor="#73BC60"
      app:layout_constraintTop_toBottomOf="@id/clBox1"
      app:layout_constraintStart_toStartOf="@id/cl1"
      app:layout_constraintEnd_toEndOf="@id/cl1"/>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      app:layout_constraintTop_toBottomOf="@id/tvTitle2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/cl2">
      <ImageView
         android:id="@+id/ivFace1"
         android:layout_width="33dp"
         android:layout_height="33dp"
         android:src="@drawable/face1"
         android:layout_marginRight="12dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@id/ivFace2"
         app:layout_constraintHorizontal_chainStyle="packed"/>
      <ImageView
         android:id="@+id/ivFace2"
         android:layout_width="33dp"
         android:layout_height="33dp"
         android:src="@drawable/face2"
         android:layout_marginRight="12dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toStartOf="@id/ivFace3"
         app:layout_constraintStart_toEndOf="@id/ivFace1"/>
      <ImageView
         android:id="@+id/ivFace3"
         android:layout_width="33dp"
         android:layout_height="33dp"
         android:src="@drawable/face3"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toEndOf="@id/ivFace2"
         app:layout_constraintEnd_toEndOf="parent"/>
      <ImageView
         android:id="@+id/ivFace4"
         android:layout_width="33dp"
         android:layout_height="33dp"
         android:src="@drawable/face4"
         android:layout_marginRight="12dp"
         app:layout_constraintTop_toBottomOf="@id/ivFace1"
         app:layout_constraintStart_toStartOf="@id/ivFace1"
         app:layout_constraintEnd_toStartOf="@id/ivFace5"
         app:layout_constraintHorizontal_chainStyle="packed"/>
      <ImageView
         android:id="@+id/ivFace5"
         android:layout_width="33dp"
         android:layout_height="33dp"
         android:src="@drawable/face5"
         app:layout_constraintTop_toTopOf="@id/ivFace4"
         app:layout_constraintStart_toEndOf="@id/ivFace4"
         app:layout_constraintEnd_toEndOf="@id/ivFace3"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toTopOf="@id/tvTitle2"
      app:layout_constraintBottom_toBottomOf="@id/cl1"
      app:layout_constraintStart_toEndOf="@id/cl1"
      app:layout_constraintEnd_toEndOf="parent">
      <ImageView
         android:id="@+id/ivFace"
         android:layout_width="125dp"
         android:layout_height="125dp"
         android:src="@drawable/face1"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
      android:id="@+id/tvTitle3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="25dp"
      android:text="나의 하루 일기"
      android:textSize="16dp"
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@id/cl1"
      app:layout_constraintStart_toStartOf="parent"/>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="#D7E3C7"
      android:layout_marginTop="5dp"
      app:layout_constraintTop_toBottomOf="@id/tvTitle3"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/cl3"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:background="@drawable/rec_15_green"
         android:layout_marginTop="25dp"
         android:layout_marginLeft="25dp"
         android:layout_marginRight="25dp"
         android:paddingLeft="15dp"
         android:paddingRight="15dp"
         android:paddingTop="7dp"
         android:paddingBottom="7dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toTopOf="@id/cvSave">
         <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ddd"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:hint="제목."
            android:textColorHint="#ddd"
            android:maxLength="50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
         <EditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top"
            android:backgroundTint="@color/transparent"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:hint="내용입력"
            android:textColorHint="#ddd"
            android:maxLength="500"
            app:layout_constraintTop_toBottomOf="@id/etTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="1"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.cardview.widget.CardView
         android:id="@+id/cvSave"
         android:layout_width="230dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_marginTop="25dp"
         android:layout_marginBottom="25dp"
         app:cardBackgroundColor="#9F98FF"
         app:cardCornerRadius="30dp"
         app:layout_constraintTop_toBottomOf="@id/cl3"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toStartOf="parent">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <TextView
               android:id="@+id/tvStart"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="저장"
               android:textColor="@color/white"
               android:textSize="17dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>