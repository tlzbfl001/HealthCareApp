<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:src="@drawable/arrow_left"
                android:layout_marginLeft="30dp"
                app:tint="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이 앱이 사용하는 권한"
                android:textSize="18dp"
                android:textColor="#CC000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"/>
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="서비스 이용을위해 권한 허용이 필요합니다. 허용하지 않으셔도 앱 이용은 가능하나 일부 서비스 이용에 제한이 있을 수 있습니다."
                android:textSize="12dp"
                android:textColor="#aaa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivBack"/>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/tvDesc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="30dp"
                android:text="필수적 접근 권한"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#CC000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view"/>
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="30dp"
                android:text="없음"
                android:textSize="14dp"
                android:textColor="#aaa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle1"/>
            <TextView
                android:id="@+id/tvTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:text="선택적 접근 권한"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#CC000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv"/>
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/perm_wifi"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv1"
                app:layout_constraintBottom_toBottomOf="@id/tv11"
                app:tint="#aaa" />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:text="근처 기기"
                android:textSize="16dp"
                android:textColor="#CC000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv1"
                app:layout_constraintTop_toBottomOf="@id/tvTitle2"
                app:layout_constraintBottom_toTopOf="@id/tv11"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기기 연동 시 사용"
                android:textSize="14dp"
                android:textColor="#aaa"
                app:layout_constraintStart_toEndOf="@id/iv1"
                app:layout_constraintStart_toStartOf="@id/tv1"
                app:layout_constraintTop_toBottomOf="@id/tv1"/>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/tv11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/perm_location"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv2"
                app:layout_constraintBottom_toBottomOf="@id/tv21"
                app:tint="#aaa" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="25dp"
                android:text="위치"
                android:textSize="16dp"
                android:textColor="#CC000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv2"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintBottom_toTopOf="@id/tv21"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tv21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주변 기기 검색 시 사용"
                android:textSize="14dp"
                android:textColor="#aaa"
                app:layout_constraintStart_toEndOf="@id/iv2"
                app:layout_constraintStart_toStartOf="@id/tv2"
                app:layout_constraintTop_toBottomOf="@id/tv2"/>
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/tv21"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:src="@drawable/perm_alarm"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv3"
                app:layout_constraintBottom_toBottomOf="@id/tv31"
                app:tint="#aaa" />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="25dp"
                android:text="알림"
                android:textSize="16dp"
                android:textColor="#CC000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv3"
                app:layout_constraintTop_toBottomOf="@id/view2"
                app:layout_constraintBottom_toTopOf="@id/tv31"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tv31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약복용 알림 설정 시 사용"
                android:textSize="14dp"
                android:textColor="#aaa"
                app:layout_constraintStart_toEndOf="@id/iv3"
                app:layout_constraintStart_toStartOf="@id/tv3"
                app:layout_constraintTop_toBottomOf="@id/tv3"/>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/tv31"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/perm_sensors"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv4"
                app:layout_constraintBottom_toBottomOf="@id/tv41"
                app:tint="#aaa" />
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="25dp"
                android:text="생체 신호 센서"
                android:textSize="16dp"
                android:textColor="#CC000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv4"
                app:layout_constraintTop_toBottomOf="@id/view3"
                app:layout_constraintBottom_toTopOf="@id/tv41"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tv41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건강데이터 및 기기 연동 시 사용"
                android:textSize="14dp"
                android:textColor="#aaa"
                app:layout_constraintStart_toEndOf="@id/iv4"
                app:layout_constraintStart_toStartOf="@id/tv4"
                app:layout_constraintTop_toBottomOf="@id/tv4"/>
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/tv41"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/iv5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/perm_run"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv5"
                app:layout_constraintBottom_toBottomOf="@id/tv51"
                app:tint="#aaa" />
            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="25dp"
                android:text="신체 활동"
                android:textSize="16dp"
                android:textColor="#CC000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv5"
                app:layout_constraintTop_toBottomOf="@id/view4"
                app:layout_constraintBottom_toTopOf="@id/tv51"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tv51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신체 활동 접근 시 사용"
                android:textSize="14dp"
                android:textColor="#aaa"
                app:layout_constraintStart_toEndOf="@id/iv5"
                app:layout_constraintStart_toStartOf="@id/tv5"
                app:layout_constraintTop_toBottomOf="@id/tv5"/>
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/tv51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/iv6"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/perm_photo"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv6"
                app:layout_constraintBottom_toBottomOf="@id/tv61"
                app:tint="#aaa" />
            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="25dp"
                android:text="사진 및 동영상"
                android:textSize="16dp"
                android:textColor="#CC000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv6"
                app:layout_constraintTop_toBottomOf="@id/view5"
                app:layout_constraintBottom_toTopOf="@id/tv61"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tv61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미디어 파일 접근 시 사용"
                android:textSize="14dp"
                android:textColor="#aaa"
                app:layout_constraintStart_toEndOf="@id/iv6"
                app:layout_constraintStart_toStartOf="@id/tv6"
                app:layout_constraintTop_toBottomOf="@id/tv6"/>
            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/tv61"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/iv7"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/perm_camera"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv7"
                app:layout_constraintBottom_toBottomOf="@id/tv71"
                app:tint="#aaa" />
            <TextView
                android:id="@+id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="25dp"
                android:text="카메라"
                android:textSize="16dp"
                android:textColor="#CC000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv6"
                app:layout_constraintTop_toBottomOf="@id/view6"
                app:layout_constraintBottom_toTopOf="@id/tv71"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tv71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 촬영 시 사용"
                android:textSize="14dp"
                android:textColor="#aaa"
                app:layout_constraintStart_toEndOf="@id/iv7"
                app:layout_constraintStart_toStartOf="@id/tv7"
                app:layout_constraintTop_toBottomOf="@id/tv7"/>
            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/tv71"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:cardBackgroundColor="#5A8EFF"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/view7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="11dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="11dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="권한 설정하러 가기"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>