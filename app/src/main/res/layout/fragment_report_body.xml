<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:fillViewport="true"
   android:background="@color/background"
   android:id="@+id/mainLayout" >
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvDate"
            app:layout_constraintBottom_toBottomOf="@id/tvDate"
            app:layout_constraintEnd_toStartOf="@id/tvDate">
            <ImageView
               android:id="@+id/ivPrev"
               android:layout_width="10dp"
               android:layout_height="20dp"
               android:background="@drawable/arrow_left_triangle"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               android:layout_marginLeft="30dp"
               android:layout_marginRight="8dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="2023년 7월 23일"
            android:gravity="center_vertical"
            android:textColor="@color/black_white"
            android:textSize="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvDate"
            app:layout_constraintTop_toTopOf="@id/tvDate"
            app:layout_constraintBottom_toBottomOf="@id/tvDate">
            <ImageView
               android:id="@+id/ivNext"
               android:layout_width="10dp"
               android:layout_height="20dp"
               android:background="@drawable/arrow_right_triangle"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="30dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMenuBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clMenu1"
               android:layout_width="51dp"
               android:layout_height="48dp"
               android:layout_marginRight="13dp"
               android:background="@drawable/oval_cal_selected"
               android:backgroundTint="#6A6A6A"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/clMenu2"
               app:layout_constraintHorizontal_chainStyle="packed">
               <TextView
                  android:id="@+id/tvBody"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="신체"
                  android:textSize="16dp"
                  android:textColor="@color/white"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clMenu2"
               android:layout_width="51dp"
               android:layout_height="48dp"
               android:background="@drawable/oval_border_gray"
               android:layout_marginRight="13dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toEndOf="@id/clMenu1"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/clMenu3">
               <TextView
                  android:id="@+id/tvFood"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="식단"
                  android:textSize="16dp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clMenu3"
               android:layout_width="51dp"
               android:layout_height="48dp"
               android:background="@drawable/oval_border_gray"
               android:layout_marginRight="13dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toEndOf="@id/clMenu2"
               app:layout_constraintEnd_toStartOf="@id/clMenu4"
               app:layout_constraintBottom_toBottomOf="parent">
               <TextView
                  android:id="@+id/tvExercise"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="운동"
                  android:textSize="16dp"
                  android:textColor="#555555"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clMenu4"
               android:layout_width="51dp"
               android:layout_height="48dp"
               android:background="@drawable/oval_border_gray"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toEndOf="@id/clMenu3"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent">
               <TextView
                  android:id="@+id/tvDrug"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="약복용"
                  android:textColor="#555555"
                  android:textSize="15dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMenu"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/rec_half_report"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clMenuBar">
            <TextView
               android:id="@+id/tvDaily"
               android:layout_width="62dp"
               android:layout_height="34dp"
               android:gravity="center"
               android:background="@drawable/rec_5_purple"
               android:layout_marginRight="16dp"
               android:text="일간"
               android:textSize="15.5dp"
               android:textColor="@color/white"
               app:layout_constraintEnd_toStartOf="@id/tvWeekly"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent" />
            <TextView
               android:id="@+id/tvWeekly"
               android:layout_width="62dp"
               android:layout_height="34dp"
               android:gravity="center"
               android:background="@drawable/rec_5_border_gray"
               android:text="주간"
               android:textSize="15.5dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
               android:id="@+id/tvMonthly"
               android:layout_width="62dp"
               android:layout_height="34dp"
               android:gravity="center"
               android:background="@drawable/rec_5_border_gray"
               android:layout_marginLeft="16dp"
               android:text="월간"
               android:textSize="15.5dp"
               android:textColor="@color/black"
               app:layout_constraintStart_toEndOf="@id/tvWeekly"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="@id/tvWeekly"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@color/report_background"
         app:layout_constraintTop_toBottomOf="@id/clMenu"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent">
         <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="체중(kg)"
            android:textSize="15.3dp"
            android:textColor="@color/black_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/box1"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/box1"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:elevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/tvWeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.github.mikephil.charting.charts.LineChart
               android:id="@+id/lineChart1"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:visibility="gone"
               android:background="@color/white"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
               android:id="@+id/tvEmpty1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="데이터가 없습니다."
               android:textSize="16dp"
               android:textColor="#EEEEEE"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <TextView
            android:id="@+id/tvBmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:text="BMI(체질량지수)"
            android:textSize="15.3dp"
            android:textColor="@color/black_white"
            app:layout_constraintTop_toBottomOf="@id/box1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/box2"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/box2"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:elevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/tvBmi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.github.mikephil.charting.charts.LineChart
               android:id="@+id/lineChart2"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/white"
               android:visibility="gone"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
               android:id="@+id/tvEmpty2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="데이터가 없습니다."
               android:textSize="16dp"
               android:textColor="#EEEEEE"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <TextView
            android:id="@+id/tvFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:text="체지방률(%)"
            android:textSize="15.3dp"
            android:textColor="@color/black_white"
            app:layout_constraintTop_toBottomOf="@id/box2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/box3"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/box3"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvFat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view">
            <com.github.mikephil.charting.charts.LineChart
               android:id="@+id/lineChart3"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/white"
               android:visibility="gone"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
               android:id="@+id/tvEmpty3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="데이터가 없습니다."
               android:textSize="16dp"
               android:textColor="#EEEEEE"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/box3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </LinearLayout>
</androidx.core.widget.NestedScrollView>