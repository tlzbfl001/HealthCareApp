<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical"
   android:background="@color/white">
   <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_main_top"
            android:backgroundTint="#DDDDDD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
               android:id="@+id/ivLogo"
               android:layout_width="120dp"
               android:layout_height="13dp"
               android:src="@drawable/logo3"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="30dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
            <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="30dp"
               app:cardBackgroundColor="#AAAAAA"
               app:cardCornerRadius="4dp"
               app:layout_constraintTop_toTopOf="@id/ivLogo"
               app:layout_constraintBottom_toBottomOf="@id/ivLogo"
               app:layout_constraintEnd_toEndOf="parent">
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingTop="1dp"
                  android:paddingBottom="1dp"
                  android:paddingLeft="12dp"
                  android:paddingRight="12dp"
                  android:text="프로필 설정"
                  android:textColor="@color/white"
                  android:textSize="14dp" />
            </androidx.cardview.widget.CardView>
            <ImageView
               android:id="@+id/ivUser"
               android:layout_width="94dp"
               android:layout_height="94dp"
               android:background="@drawable/user_camera"
               android:layout_marginTop="5dp"
               app:tint="@color/white"
               app:layout_constraintTop_toBottomOf="@id/ivLogo"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
               android:id="@+id/tvName"
               android:layout_width="wrap_content"
               android:layout_height="37dp"
               android:gravity="bottom"
               android:text="바디웰"
               android:textSize="20dp"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@id/ivUser"
               app:layout_constraintEnd_toStartOf="@id/tv1"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_chainStyle="packed"/>
            <TextView
               android:id="@+id/tv1"
               android:layout_width="wrap_content"
               android:layout_height="37dp"
               android:gravity="bottom"
               android:text=" 님"
               android:textSize="19dp"
               android:textColor="#717171"
               app:layout_constraintStart_toEndOf="@id/tvName"
               app:layout_constraintBottom_toBottomOf="@id/tvName"
               app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="16dp"
               android:text="반갑습니다."
               android:textSize="15dp"
               android:textColor="#7F7A7A"
               app:layout_constraintTop_toBottomOf="@id/tvName"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <ImageView
            android:id="@+id/ivSetting"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/setting"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            app:tint="#AAAAAA"
            app:layout_constraintTop_toBottomOf="@id/cl1"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="사용 환경"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/ivSetting"
            app:layout_constraintTop_toTopOf="@id/ivSetting"
            app:layout_constraintBottom_toBottomOf="@id/ivSetting"/>
         <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/ivSetting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="12dp">
               <ImageView
                  android:id="@+id/ivUser2"
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:src="@drawable/user_oval"
                  app:tint="#000000"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="기본 설정"
                  android:textSize="15dp"
                  android:textColor="@color/black"
                  app:layout_constraintStart_toEndOf="@id/ivUser2"
                  app:layout_constraintTop_toTopOf="@id/ivUser2"
                  app:layout_constraintBottom_toBottomOf="@id/ivUser2"/>
               <ImageView
                  android:layout_width="12dp"
                  android:layout_height="12dp"
                  android:src="@drawable/arrow_right_round"
                  app:tint="#9E9E9E"
                  app:layout_constraintTop_toTopOf="@id/ivUser2"
                  app:layout_constraintBottom_toBottomOf="@id/ivUser2"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <ImageView
                  android:id="@+id/ivLouder"
                  android:layout_width="14dp"
                  android:layout_height="15dp"
                  android:src="@drawable/report"
                  android:layout_marginTop="13dp"
                  app:tint="#606060"
                  app:layout_constraintTop_toBottomOf="@id/ivUser2"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
               <TextView
                  android:id="@+id/tvPerm"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="12dp"
                  android:text="앱 권한"
                  android:textSize="15dp"
                  android:textColor="@color/black"
                  app:layout_constraintStart_toEndOf="@id/ivLouder"
                  app:layout_constraintTop_toTopOf="@id/ivLouder"
                  app:layout_constraintEnd_toStartOf="@id/ivRight2"
                  app:layout_constraintBottom_toBottomOf="@id/ivLouder"/>
               <ImageView
                  android:id="@+id/ivRight2"
                  android:layout_width="10dp"
                  android:layout_height="10dp"
                  android:src="@drawable/arrow_right_round"
                  app:tint="#9E9E9E"
                  app:layout_constraintTop_toTopOf="@id/ivLouder"
                  app:layout_constraintBottom_toBottomOf="@id/ivLouder"
                  app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
         <ImageView
            android:id="@+id/ivDevice"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/device"
            app:layout_constraintTop_toBottomOf="@id/cv1"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="내 기기"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/ivDevice"
            app:layout_constraintTop_toTopOf="@id/ivDevice"
            app:layout_constraintBottom_toBottomOf="@id/ivDevice"/>
         <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/ivDevice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="12dp">
               <ImageView
                  android:id="@+id/ivBluetooth"
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:src="@drawable/bluetooth"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
               <TextView
                  android:id="@+id/tvConnect"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="기기 연결"
                  android:textSize="15dp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="@id/ivBluetooth"
                  app:layout_constraintBottom_toBottomOf="@id/ivBluetooth"
                  app:layout_constraintStart_toEndOf="@id/ivBluetooth"
                  app:layout_constraintEnd_toStartOf="@id/ivRight"
                  app:layout_constraintHorizontal_weight="1"/>
               <ImageView
                  android:id="@+id/ivRight"
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                  android:src="@drawable/arrow_right_round"
                  app:tint="#9E9E9E"
                  app:layout_constraintTop_toTopOf="@id/ivBluetooth"
                  app:layout_constraintBottom_toBottomOf="@id/ivBluetooth"
                  app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
         <ImageView
            android:id="@+id/ivNote"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/note"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/cv2"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="이용 정보"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/ivNote"
            app:layout_constraintStart_toEndOf="@id/ivNote"
            app:layout_constraintBottom_toBottomOf="@id/ivNote"/>
         <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/ivNote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="12dp">
               <ImageView
                  android:id="@+id/ivArticle"
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:src="@drawable/article"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="공지사항"
                  android:textSize="15dp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="@id/ivArticle"
                  app:layout_constraintStart_toEndOf="@id/ivArticle"
                  app:layout_constraintBottom_toBottomOf="@id/ivArticle"/>
               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                  android:src="@drawable/arrow_right_round"
                  app:tint="#9E9E9E"
                  app:layout_constraintTop_toTopOf="@id/ivArticle"
                  app:layout_constraintBottom_toBottomOf="@id/ivArticle"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <ImageView
                  android:id="@+id/ivQuestion"
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:layout_marginTop="13dp"
                  android:src="@drawable/question"
                  app:layout_constraintTop_toBottomOf="@+id/ivArticle"
                  app:layout_constraintStart_toStartOf="parent"/>
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="문의하기"
                  android:textSize="15dp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="@id/ivQuestion"
                  app:layout_constraintStart_toEndOf="@id/ivQuestion"
                  app:layout_constraintBottom_toBottomOf="@id/ivQuestion"/>
               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                  android:src="@drawable/arrow_right_round"
                  app:tint="#9E9E9E"
                  app:layout_constraintTop_toTopOf="@id/ivQuestion"
                  app:layout_constraintBottom_toBottomOf="@id/ivQuestion"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <ImageView
                  android:id="@+id/ivFaq"
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:layout_marginTop="13dp"
                  android:src="@drawable/faq"
                  app:layout_constraintTop_toBottomOf="@+id/ivQuestion"
                  app:layout_constraintStart_toStartOf="parent"/>
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="자주 묻는 질문(FAQ)"
                  android:textSize="15dp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="@id/ivFaq"
                  app:layout_constraintStart_toEndOf="@id/ivFaq"
                  app:layout_constraintBottom_toBottomOf="@id/ivFaq"/>
               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                  android:src="@drawable/arrow_right_round"
                  app:tint="#9E9E9E"
                  app:layout_constraintTop_toTopOf="@id/ivFaq"
                  app:layout_constraintBottom_toBottomOf="@id/ivFaq"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <ImageView
                  android:id="@+id/ivInfo"
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:layout_marginTop="13dp"
                  android:src="@drawable/info"
                  app:layout_constraintTop_toBottomOf="@+id/ivFaq"
                  app:layout_constraintStart_toStartOf="parent"/>
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="버정정보"
                  android:textSize="15dp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="@id/ivInfo"
                  app:layout_constraintStart_toEndOf="@id/ivInfo"
                  app:layout_constraintBottom_toBottomOf="@id/ivInfo"/>
               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                  android:src="@drawable/arrow_right_round"
                  app:tint="#9E9E9E"
                  app:layout_constraintTop_toTopOf="@id/ivInfo"
                  app:layout_constraintBottom_toBottomOf="@id/ivInfo"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <ImageView
                  android:id="@+id/ivLogout"
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:layout_marginTop="13dp"
                  android:src="@drawable/logout"
                  app:layout_constraintTop_toBottomOf="@+id/ivInfo"
                  app:layout_constraintStart_toStartOf="parent"/>
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="로그아웃"
                  android:textSize="15dp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="@id/ivLogout"
                  app:layout_constraintStart_toEndOf="@id/ivLogout"
                  app:layout_constraintBottom_toBottomOf="@id/ivLogout"/>
               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                  android:src="@drawable/arrow_right_round"
                  app:tint="#9E9E9E"
                  app:layout_constraintTop_toTopOf="@id/ivLogout"
                  app:layout_constraintBottom_toBottomOf="@id/ivLogout"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <ImageView
                  android:id="@+id/ivDelete"
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:layout_marginTop="13dp"
                  android:src="@drawable/delete"
                  app:layout_constraintTop_toBottomOf="@+id/ivLogout"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="회원탈퇴"
                  android:textSize="15dp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="@id/ivDelete"
                  app:layout_constraintStart_toEndOf="@id/ivDelete"
                  app:layout_constraintBottom_toBottomOf="@id/ivDelete"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>