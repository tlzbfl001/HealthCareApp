<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white_black">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constarint"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="@drawable/rec_setting_top"
      android:backgroundTint="@color/main_button_dark"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/cl2"
      app:layout_constraintVertical_weight="1">
      <TextView
         android:id="@+id/tvProfile"
         android:layout_width="110dp"
         android:layout_height="35dp"
         android:gravity="center"
         android:background="@drawable/rec_25_gray"
         android:backgroundTint="#8DC3C3C3"
         android:layout_marginTop="15dp"
         android:layout_marginRight="15dp"
         android:textAlignment="center"
         android:text="프로필 설정"
         android:textColor="@color/dark_grey_white"
         android:textSize="13dp"
         android:fontFamily="@font/noto_bold"
         android:includeFontPadding="false"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toEndOf="parent" />
      <ImageView
         android:id="@+id/ivLogo"
         android:layout_width="120dp"
         android:layout_height="wrap_content"
         android:src="@drawable/logo3"
         android:layout_marginStart="20dp"
         app:layout_constraintTop_toTopOf="@id/tvProfile"
         app:layout_constraintStart_toStartOf="parent"/>
      <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/ivUser"
         android:layout_width="79dp"
         android:layout_height="79dp"
         android:src="@drawable/user_grey"
         android:layout_marginTop="27dp"
         android:layout_marginBottom="27dp"
         app:layout_constraintTop_toBottomOf="@id/ivLogo"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@id/view"
         app:layout_constraintBottom_toBottomOf="parent" />
      <View
         android:id="@+id/view"
         android:layout_width="1dp"
         android:layout_height="80dp"
         android:background="@color/black_white"
         android:layout_marginLeft="-40dp"
         app:layout_constraintTop_toTopOf="@id/ivUser"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="@id/ivUser"/>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clBox"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="17dp"
         android:layout_marginRight="20dp"
         app:layout_constraintTop_toTopOf="@id/view"
         app:layout_constraintStart_toEndOf="@id/view"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="@id/view">
         <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="바디웰"
            android:textSize="15dp"
            android:textColor="@color/black_white"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvAge"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="0세 / 여"
            android:textSize="15dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toTopOf="@id/tvHeight"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="@id/tvName"/>
         <TextView
            android:id="@+id/tvHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="0cm / 0kg"
            android:textSize="15dp"
            android:textColor="@color/black_white"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAge"
            app:layout_constraintStart_toStartOf="@id/tvName"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl2"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/constarint"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintVertical_weight="3">
      <ImageView
         android:id="@+id/ivSetting"
         android:layout_width="16dp"
         android:layout_height="16dp"
         android:src="@drawable/setting"
         android:layout_marginTop="16dp"
         android:layout_marginLeft="20dp"
         app:tint="@color/sleep"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"/>
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="8dp"
         android:text="사용 환경"
         android:textSize="16dp"
         android:textColor="@color/black_white"
         android:fontFamily="@font/noto_bold"
         android:includeFontPadding="false"
         app:layout_constraintStart_toEndOf="@id/ivSetting"
         app:layout_constraintTop_toTopOf="@id/ivSetting"
         app:layout_constraintBottom_toBottomOf="@id/ivSetting"/>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/cv1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/rec_15"
         android:backgroundTint="@color/main_button_dark"
         android:layout_marginTop="7dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:padding="15dp"
         app:layout_constraintTop_toBottomOf="@id/ivSetting"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">
         <ImageView
            android:id="@+id/ivUser2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/user_setting"
            app:tint="@color/black_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tvBasic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:text="기본 설정"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/ivUser2"
            app:layout_constraintTop_toTopOf="@id/ivUser2"
            app:layout_constraintEnd_toStartOf="@id/iv1"
            app:layout_constraintBottom_toBottomOf="@id/ivUser2"/>
         <ImageView
            android:id="@+id/iv1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/arrow_right"
            app:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="@id/ivUser2"
            app:layout_constraintBottom_toBottomOf="@id/ivUser2"
            app:layout_constraintEnd_toEndOf="parent"/>
         <ImageView
            android:id="@+id/ivLouder"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/louder"
            android:layout_marginTop="15dp"
            app:tint="@color/black_white"
            app:layout_constraintTop_toBottomOf="@id/ivUser2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
         <TextView
            android:id="@+id/tvAlarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="알림 설정"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/ivLouder"
            app:layout_constraintTop_toTopOf="@id/ivLouder"
            app:layout_constraintEnd_toStartOf="@id/iv2"
            app:layout_constraintBottom_toBottomOf="@id/ivLouder"/>
         <ImageView
            android:id="@+id/iv2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/arrow_right"
            app:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="@id/ivLouder"
            app:layout_constraintBottom_toBottomOf="@id/ivLouder"
            app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <ImageView
         android:id="@+id/ivDevice"
         android:layout_width="16dp"
         android:layout_height="16dp"
         android:layout_marginTop="18dp"
         android:layout_marginLeft="20dp"
         android:src="@drawable/device"
         app:tint="@color/sleep"
         app:layout_constraintTop_toBottomOf="@id/cv1"
         app:layout_constraintStart_toStartOf="parent"/>
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="8dp"
         android:text="내 기기"
         android:textSize="16dp"
         android:textColor="@color/black_white"
         android:fontFamily="@font/noto_bold"
         android:includeFontPadding="false"
         app:layout_constraintStart_toEndOf="@id/ivDevice"
         app:layout_constraintTop_toTopOf="@id/ivDevice"
         app:layout_constraintBottom_toBottomOf="@id/ivDevice"/>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/cv2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/rec_15"
         android:backgroundTint="@color/main_button_dark"
         android:layout_marginTop="7dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:padding="14dp"
         app:layout_constraintTop_toBottomOf="@id/ivDevice"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">
         <ImageView
            android:id="@+id/ivBluetooth"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/bluetooth"
            app:tint="@color/black_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
         <TextView
            android:id="@+id/tvConnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="기기 연결"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/ivBluetooth"
            app:layout_constraintBottom_toBottomOf="@id/ivBluetooth"
            app:layout_constraintStart_toEndOf="@id/ivBluetooth"
            app:layout_constraintEnd_toStartOf="@id/ivRight"
            app:layout_constraintHorizontal_weight="1"/>
         <ImageView
            android:id="@+id/ivRight"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/arrow_right"
            app:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="@id/ivBluetooth"
            app:layout_constraintBottom_toBottomOf="@id/ivBluetooth"
            app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <ImageView
         android:id="@+id/ivNote"
         android:layout_width="16dp"
         android:layout_height="16dp"
         android:src="@drawable/note"
         android:layout_marginTop="18dp"
         android:layout_marginLeft="20dp"
         app:tint="@color/sleep"
         app:layout_constraintTop_toBottomOf="@id/cv2"
         app:layout_constraintStart_toStartOf="parent"/>
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:text="이용 정보"
         android:textSize="16dp"
         android:textColor="@color/black_white"
         android:fontFamily="@font/noto_bold"
         android:includeFontPadding="false"
         app:layout_constraintTop_toTopOf="@id/ivNote"
         app:layout_constraintStart_toEndOf="@id/ivNote"
         app:layout_constraintBottom_toBottomOf="@id/ivNote"/>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/rec_15"
         android:backgroundTint="@color/main_button_dark"
         android:layout_marginTop="7dp"
         android:layout_marginBottom="30dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:padding="15dp"
         app:layout_constraintTop_toBottomOf="@id/ivNote"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">
         <ImageView
            android:id="@+id/ivArticle"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/article"
            app:tint="@color/black_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="공지사항"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/ivArticle"
            app:layout_constraintStart_toEndOf="@id/ivArticle"
            app:layout_constraintBottom_toBottomOf="@id/ivArticle"/>
         <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/arrow_right"
            app:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="@id/ivArticle"
            app:layout_constraintBottom_toBottomOf="@id/ivArticle"
            app:layout_constraintEnd_toEndOf="parent"/>
         <ImageView
            android:id="@+id/ivQuestion"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/question"
            app:tint="@color/black_white"
            app:layout_constraintTop_toBottomOf="@+id/ivArticle"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="문의하기"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/ivQuestion"
            app:layout_constraintStart_toEndOf="@id/ivQuestion"
            app:layout_constraintBottom_toBottomOf="@id/ivQuestion"/>
         <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/arrow_right"
            app:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="@id/ivQuestion"
            app:layout_constraintBottom_toBottomOf="@id/ivQuestion"
            app:layout_constraintEnd_toEndOf="parent"/>
         <ImageView
            android:id="@+id/ivFaq"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/faq"
            app:tint="@color/black_white"
            app:layout_constraintTop_toBottomOf="@+id/ivQuestion"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="자주 묻는 질문(FAQ)"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/ivFaq"
            app:layout_constraintStart_toEndOf="@id/ivFaq"
            app:layout_constraintBottom_toBottomOf="@id/ivFaq"/>
         <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/arrow_right"
            app:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="@id/ivFaq"
            app:layout_constraintBottom_toBottomOf="@id/ivFaq"
            app:layout_constraintEnd_toEndOf="parent"/>
         <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/info"
            app:tint="@color/black_white"
            app:layout_constraintTop_toBottomOf="@+id/ivFaq"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tvVer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="버전정보"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/ivInfo"
            app:layout_constraintEnd_toStartOf="@id/iv7"
            app:layout_constraintStart_toEndOf="@id/ivInfo"
            app:layout_constraintBottom_toBottomOf="@id/ivInfo"/>
         <ImageView
            android:id="@+id/iv7"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/arrow_right"
            app:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="@id/ivInfo"
            app:layout_constraintBottom_toBottomOf="@id/ivInfo"
            app:layout_constraintEnd_toEndOf="parent"/>
         <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/logout"
            app:tint="@color/black_white"
            app:layout_constraintTop_toBottomOf="@+id/ivInfo"
            app:layout_constraintStart_toStartOf="parent"/>
         <TextView
            android:id="@+id/tvLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="로그아웃"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/ivLogout"
            app:layout_constraintStart_toEndOf="@id/ivLogout"
            app:layout_constraintEnd_toStartOf="@id/iv8"
            app:layout_constraintBottom_toBottomOf="@id/ivLogout"/>
         <ImageView
            android:id="@+id/iv8"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/arrow_right"
            app:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="@id/ivLogout"
            app:layout_constraintBottom_toBottomOf="@id/ivLogout"
            app:layout_constraintEnd_toEndOf="parent"/>
         <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/delete"
            app:tint="@color/black_white"
            app:layout_constraintTop_toBottomOf="@+id/ivLogout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
         <TextView
            android:id="@+id/tvResign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="회원탈퇴"
            android:textSize="16dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/ivDelete"
            app:layout_constraintStart_toEndOf="@id/ivDelete"
            app:layout_constraintBottom_toBottomOf="@id/ivDelete"
            app:layout_constraintEnd_toEndOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>