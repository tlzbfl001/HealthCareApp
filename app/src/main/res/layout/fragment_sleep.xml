<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:fillViewport="true"
   app:layout_constraintTop_toTopOf="parent"
   app:layout_constraintStart_toStartOf="parent"
   app:layout_constraintEnd_toEndOf="parent"
   app:layout_constraintBottom_toBottomOf="parent">
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white_black"
      android:orientation="vertical">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/cl"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="parent">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
               android:layout_width="16dp"
               android:layout_height="21dp"
               android:src="@drawable/setting_goal"
               android:layout_marginTop="1dp"
               app:tint="@color/black_white"
               app:layout_constraintTop_toTopOf="@id/tvSetting"
               app:layout_constraintBottom_toBottomOf="@id/tvSetting"
               app:layout_constraintEnd_toStartOf="@id/tvSetting"/>
            <TextView
               android:id="@+id/tvSetting"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="20dp"
               android:paddingLeft="3dp"
               android:text="목표설정"
               android:textColor="@color/black_white"
               android:textSize="15dp"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="185dp"
            android:layout_height="185dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            app:indicatorInset="0dp"
            android:layout_marginTop="15dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/custom_progress_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/progressbar"
            app:layout_constraintStart_toStartOf="@id/progressbar"
            app:layout_constraintEnd_toEndOf="@id/progressbar"
            app:layout_constraintBottom_toBottomOf="@id/progressbar">
            <TextView
               android:id="@+id/tvWeight1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="수면 시간"
               android:textColor="@color/black_white"
               android:textSize="14.5dp"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintBottom_toTopOf="@id/tvSleep"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_chainStyle="packed" />
            <TextView
               android:id="@+id/tvSleep"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0h 0m"
               android:textColor="@color/black_white"
               android:textSize="17dp"
               android:fontFamily="@font/noto_bold"
               android:includeFontPadding="false"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/tvWeight1" />
         </androidx.constraintlayout.widget.ConstraintLayout>
         <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="목표 수면 시간"
            android:textSize="14.5dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/progressbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view1"
            app:layout_constraintHorizontal_chainStyle="packed"/>
         <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/black_white"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toEndOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintEnd_toStartOf="@id/tv3"
            app:layout_constraintBottom_toBottomOf="@id/tvGoal"/>
         <TextView
            android:id="@+id/tvGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0h 0m"
            android:textSize="17dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto_bold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            app:layout_constraintEnd_toEndOf="@id/tv1"/>
         <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="남은 수면 시간"
            android:textSize="14.5dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view1"/>
         <TextView
            android:id="@+id/tvRemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0h 0m"
            android:textSize="17dp"
            android:textColor="@color/black_white"
            android:fontFamily="@font/noto_bold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintStart_toStartOf="@id/tv3"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/cl3"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:paddingBottom="60dp"
         android:background="@drawable/rec_top_radius_35"
         android:backgroundTint="@color/purple_grey"
         android:layout_marginTop="20dp"
         app:layout_constraintTop_toBottomOf="@id/cl"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">
         <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="하루 수면 관리"
            android:textColor="@color/black_white"
            android:textSize="15dp"
            android:fontFamily="@font/noto"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            app:layout_constraintTop_toTopOf="@id/tv4"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
               android:id="@+id/iv2"
               android:layout_width="16dp"
               android:layout_height="21dp"
               android:src="@drawable/setting_goal"
               android:layout_marginRight="3dp"
               android:layout_marginTop="2dp"
               app:tint="@color/black_white"
               app:layout_constraintTop_toTopOf="@id/tv5"
               app:layout_constraintBottom_toBottomOf="@id/tv5"
               app:layout_constraintEnd_toStartOf="@id/tv5"/>
            <TextView
               android:id="@+id/tv5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="수면기록"
               android:textColor="@color/black_white"
               android:textSize="15dp"
               android:fontFamily="@font/noto"
               android:includeFontPadding="false"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.cardview.widget.CardView
            android:id="@+id/cvBox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/white_grey"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/clRecord"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/tv4"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/clBed1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toStartOf="@id/clBed2"
                  app:layout_constraintHorizontal_weight="1">
                  <ImageView
                     android:id="@+id/ivBedtime"
                     android:layout_width="70dp"
                     android:layout_height="63dp"
                     android:src="@drawable/bedtime"
                     android:layout_marginTop="15dp"
                     android:layout_marginBottom="15dp"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/clBed2"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toEndOf="@id/clBed1"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_weight="2">
                  <TextView
                     android:id="@+id/tvBedtimeTitle"
                     android:layout_width="105dp"
                     android:layout_height="wrap_content"
                     android:text="BedTime"
                     android:textSize="14.5dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintBottom_toTopOf="@id/tvBedtime"
                     app:layout_constraintVertical_chainStyle="packed" />
                  <TextView
                     android:id="@+id/tvBedtime"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0h 0min"
                     android:textSize="20dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto_bold"
                     android:includeFontPadding="false"
                     app:layout_constraintTop_toBottomOf="@id/tvBedtimeTitle"
                     app:layout_constraintStart_toStartOf="@id/tvBedtimeTitle"
                     app:layout_constraintBottom_toBottomOf="parent" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
            android:id="@+id/cvBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/white_grey"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toBottomOf="@+id/cvBox1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clBottom2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/clWake1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toStartOf="@id/clWake2"
                  app:layout_constraintHorizontal_weight="1">
                  <ImageView
                     android:layout_width="70dp"
                     android:layout_height="63dp"
                     android:src="@drawable/wakeup"
                     android:layout_marginTop="15dp"
                     android:layout_marginBottom="15dp"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/clWake2"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toEndOf="@id/clWake1"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_weight="2">
                  <TextView
                     android:id="@+id/tvWakeupTitle"
                     android:layout_width="105dp"
                     android:layout_height="wrap_content"
                     android:text="WakeUpTime"
                     android:textSize="14.5dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto"
                     android:includeFontPadding="false"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintBottom_toTopOf="@id/tvWakeTime"
                     app:layout_constraintVertical_chainStyle="packed" />
                  <TextView
                     android:id="@+id/tvWakeTime"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0h 0min"
                     android:textSize="20dp"
                     android:textColor="@color/black_white"
                     android:fontFamily="@font/noto_bold"
                     android:includeFontPadding="false"
                     app:layout_constraintTop_toBottomOf="@id/tvWakeupTitle"
                     app:layout_constraintStart_toStartOf="@id/tvWakeupTitle"
                     app:layout_constraintBottom_toBottomOf="parent" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </LinearLayout>
</androidx.core.widget.NestedScrollView>