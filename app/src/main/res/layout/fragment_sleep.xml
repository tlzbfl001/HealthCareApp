<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/mainLayout">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/clBack"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingLeft="25dp"
       android:paddingRight="10dp"
       app:layout_constraintTop_toTopOf="@id/tvDate"
       app:layout_constraintBottom_toBottomOf="@id/tvDate"
       app:layout_constraintStart_toStartOf="parent">
      <ImageView
          android:layout_width="12dp"
          android:layout_height="23dp"
          android:src="@drawable/arrow_back"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/clPrev"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingTop="5dp"
       android:paddingBottom="5dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@id/tvDate"
       app:layout_constraintBottom_toBottomOf="@id/tvDate"
       app:layout_constraintEnd_toStartOf="@id/tvDate"
       app:layout_constraintHorizontal_chainStyle="packed">
      <ImageView
          android:layout_width="9dp"
          android:layout_height="22dp"
          android:src="@drawable/arrow_left_triangle"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
       android:id="@+id/tvDate"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:text="2023년 7월 23일"
       android:textColor="@color/black"
       android:textSize="17dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toStartOf="@id/clNext"
       app:layout_constraintStart_toEndOf="@id/clPrev"/>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/clNext"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingTop="5dp"
       android:paddingBottom="5dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@id/tvDate"
       app:layout_constraintTop_toTopOf="@id/tvDate"
       app:layout_constraintBottom_toBottomOf="@id/tvDate">
      <ImageView
          android:layout_width="9dp"
          android:layout_height="22dp"
          android:src="@drawable/arrow_right_triangle"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="30dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <HorizontalScrollView
       android:id="@+id/horizontalScroll"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scrollbars="none"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toBottomOf="@id/clBack"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/cl1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="25dp"
          android:layout_marginBottom="15dp">
         <TextView
             android:id="@+id/cvFood"
             android:layout_width="64dp"
             android:layout_height="wrap_content"
             android:layout_marginRight="6dp"
             android:background="@drawable/rec_25_border_gray"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:text="식단"
            android:textSize="16.5dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toStartOf="@id/cvWater"/>
         <TextView
             android:id="@+id/cvWater"
             android:layout_width="64dp"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_25_border_gray"
             android:layout_marginRight="6dp"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:text="물"
            android:textSize="16.5dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintStart_toEndOf="@id/cvFood"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toStartOf="@id/cvExercise"/>
         <TextView
             android:id="@+id/cvExercise"
             android:layout_width="64dp"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_25_border_gray"
             android:layout_marginRight="6dp"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:text="운동"
            android:textSize="16.5dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/cvWater"
             app:layout_constraintEnd_toStartOf="@id/cvBody"/>
         <TextView
             android:id="@+id/cvBody"
             android:layout_width="64dp"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_25_border_gray"
             android:layout_marginRight="6dp"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:text="신체"
            android:textSize="16.5dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/cvExercise"
             app:layout_constraintEnd_toStartOf="@id/cvSleep"/>
         <androidx.cardview.widget.CardView
             android:id="@+id/cvSleep"
             android:layout_width="64dp"
             android:layout_height="wrap_content"
             android:layout_marginRight="6dp"
             app:cardBackgroundColor="#667D99"
             app:cardCornerRadius="18dp"
             app:cardElevation="0dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/cvBody"
             app:layout_constraintEnd_toStartOf="@id/cvDrug">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="수면"
               android:textSize="16.5dp"
                android:textColor="@color/white"/>
         </androidx.cardview.widget.CardView>
         <TextView
             android:id="@+id/cvDrug"
             android:layout_width="68dp"
             android:layout_height="wrap_content"
             android:background="@drawable/rec_25_border_gray"
             android:layout_marginRight="50dp"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:text="약복용"
            android:textSize="16.5dp"
             android:textColor="@color/black"
             android:textAlignment="center"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/cvSleep"
             app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </HorizontalScrollView>
   <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintTop_toBottomOf="@id/horizontalScroll"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/cl"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <ImageView
                   android:layout_width="17dp"
                   android:layout_height="21dp"
                   android:src="@drawable/setting_goal"
                   app:tint="@color/black"
                   app:layout_constraintTop_toTopOf="@id/tvSetting"
                   app:layout_constraintBottom_toBottomOf="@id/tvSetting"
                   app:layout_constraintEnd_toStartOf="@id/tvSetting"/>
               <TextView
                   android:id="@+id/tvSetting"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="25dp"
                   android:paddingLeft="3dp"
                   android:text="목표설정"
                   android:textColor="@color/black"
                   android:textSize="15dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
               <com.dinuscxj.progressbar.CircleProgressBar
                   android:id="@+id/pbSleep"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:progress_background_color="#E1E5E6"
                   app:progress_end_color="#667D99"
                   app:progress_start_color="#667D99"
                   app:progress_start_degree="90"
                   app:progress_stroke_cap="round"
                   app:progress_stroke_width="16dp"
                   app:progress_style="solid_line" />
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="17dp"
                   android:background="@drawable/oval">
                  <TextView
                      android:id="@+id/tvWeight1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="수면 시간"
                      android:textColor="@color/black"
                     android:textSize="16dp"
                      android:textStyle="bold"
                      app:layout_constraintBottom_toTopOf="@id/tvSleep"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_chainStyle="packed" />
                  <TextView
                      android:id="@+id/tvSleep"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0h 0m"
                      android:textColor="@color/black"
                     android:textSize="16dp"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@id/tvWeight1" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="목표 수면 시간"
               android:textSize="16dp"
                android:textColor="@color/black"
               android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cl2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view1"
                app:layout_constraintHorizontal_chainStyle="packed"/>
            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:layout_marginLeft="15dp"
                app:layout_constraintStart_toEndOf="@id/tv1"
                app:layout_constraintTop_toTopOf="@id/tv1"
                app:layout_constraintEnd_toStartOf="@id/tv3"
                app:layout_constraintBottom_toBottomOf="@id/tvGoal"/>
            <TextView
                android:id="@+id/tvGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0h 0m"
               android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                app:layout_constraintEnd_toEndOf="@id/tv1"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="남은 수면 시간"
               android:textSize="16dp"
                android:textColor="@color/black"
               android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/tv1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view1"/>
            <TextView
                android:id="@+id/tvRemain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0h 0m"
               android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv3"
                app:layout_constraintStart_toStartOf="@id/tv3"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <View
             android:id="@+id/view5"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:background="@drawable/oval_water_bottom"
             android:backgroundTint="#284267"
             android:layout_marginTop="20dp"
             app:layout_constraintTop_toBottomOf="@id/cl"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>
         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/cl3"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="-30dp"
             android:paddingBottom="40dp"
             android:background="#284267"
             app:layout_constraintTop_toTopOf="@id/view5"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:text="하루 수면 관리"
                android:textColor="@color/white"
               android:textSize="16dp"
               android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="25dp"
                app:layout_constraintTop_toTopOf="@id/tv4"
                app:layout_constraintEnd_toEndOf="parent">
               <ImageView
                   android:id="@+id/iv2"
                   android:layout_width="17dp"
                   android:layout_height="17dp"
                   android:background="@drawable/setting_goal"
                   android:backgroundTint="@color/white"
                   android:layout_marginRight="3dp"
                   app:layout_constraintTop_toTopOf="@id/tv5"
                   app:layout_constraintBottom_toBottomOf="@id/tv5"
                   app:layout_constraintEnd_toStartOf="@id/tv5"/>
               <TextView
                   android:id="@+id/tv5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="수면 기록"
                   android:textColor="@color/white"
                   android:textSize="15dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBottom1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_sleep1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:layout_constraintTop_toBottomOf="@id/tv4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
               <ImageView
                   android:id="@+id/ivBedtime"
                   android:layout_width="80dp"
                   android:layout_height="73dp"
                   android:src="@drawable/bedtime"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginBottom="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toEndOf="@id/ivBedtime"
                   app:layout_constraintTop_toTopOf="@id/ivBedtime"
                   app:layout_constraintBottom_toBottomOf="@id/ivBedtime"
                   app:layout_constraintEnd_toEndOf="parent">
                  <TextView
                      android:id="@+id/tvBedtimeTitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Bedtime"
                      android:textSize="17dp"
                      android:textColor="@color/white"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toTopOf="@id/tvBedtime"
                      app:layout_constraintVertical_chainStyle="packed" />
                  <TextView
                      android:id="@+id/tvBedtime"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:text="0h 0min"
                      android:textSize="24dp"
                      android:textColor="@color/white"
                      app:layout_constraintTop_toBottomOf="@id/tvBedtimeTitle"
                      app:layout_constraintStart_toStartOf="@id/tvBedtimeTitle"
                      app:layout_constraintBottom_toBottomOf="parent" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBottom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_sleep2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clBottom1">
               <ImageView
                   android:id="@+id/ivWakeup"
                   android:layout_width="80dp"
                   android:layout_height="73dp"
                   android:src="@drawable/wakeup"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginBottom="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toEndOf="@id/ivWakeup"
                   app:layout_constraintTop_toTopOf="@id/ivWakeup"
                   app:layout_constraintBottom_toBottomOf="@id/ivWakeup"
                   app:layout_constraintEnd_toEndOf="parent">
                  <TextView
                      android:id="@+id/tvWakeupTitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Wake up"
                      android:textSize="17dp"
                      android:textColor="@color/black"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toTopOf="@id/tvWakeTime"
                      app:layout_constraintVertical_chainStyle="packed" />
                  <TextView
                      android:id="@+id/tvWakeTime"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:text="0h 0min"
                      android:textSize="24dp"
                      android:textColor="@color/black"
                      app:layout_constraintTop_toBottomOf="@id/tvWakeupTitle"
                      app:layout_constraintStart_toStartOf="@id/tvWakeupTitle"
                      app:layout_constraintBottom_toBottomOf="parent" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </LinearLayout>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>