<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white_black">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/constraint"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:background="@drawable/sleep_background"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toTopOf="@id/cl2"
       app:layout_constraintEnd_toEndOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/clBack"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="25dp"
          android:paddingRight="10dp"
          app:layout_constraintTop_toTopOf="@id/tvTitle"
          app:layout_constraintBottom_toBottomOf="@id/tvTitle"
          app:layout_constraintStart_toStartOf="parent">
         <ImageView
             android:layout_width="12dp"
             android:layout_height="24dp"
             android:src="@drawable/arrow_back"
             android:layout_marginTop="7dp"
             android:layout_marginBottom="7dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:tint="@color/white" />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <TextView
          android:id="@+id/tvTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="나의 기상/취침 시간 기록"
          android:textSize="18dp"
          android:textColor="@color/white"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="@id/clBack"
          app:layout_constraintEnd_toEndOf="parent"/>
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/cl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          app:layout_constraintTop_toBottomOf="@id/clBack"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent">
         <nl.joery.timerangepicker.TimeRangePicker
             android:id="@+id/time"
             android:layout_width="240dp"
             android:layout_height="240dp"
             android:layout_margin="2dp"
             app:trp_thumbIconEnd="@drawable/sleep_icon2"
             app:trp_thumbIconStart="@drawable/sleep_icon1"
             app:trp_clockLabelSize="20dp"
             app:trp_clockFace="SAMSUNG"
             app:trp_endTime="6:00"
             app:trp_startTime="0:00"
             app:trp_thumbIconSize="33dp"
             app:trp_clockTickColor="@color/white"
             app:trp_clockLabelColor="@color/white"
             app:trp_sliderWidth="25dp"
             app:trp_sliderColor="#80FFFFFF"
             app:trp_sliderRangeGradientStart="#3910A9"
             app:trp_sliderRangeGradientMiddle="#A66676"
             app:trp_sliderRangeGradientEnd="#FFAD4C"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <TextView
          android:id="@+id/tvTotal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0h 0m"
          android:textSize="22dp"
          android:textColor="@color/white"
          android:textStyle="bold"
          app:layout_constraintTop_toTopOf="@id/cl"
          app:layout_constraintStart_toStartOf="@id/cl"
          app:layout_constraintEnd_toEndOf="@id/cl"
          app:layout_constraintBottom_toBottomOf="@id/cl"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="35dp"
          android:layout_marginBottom="20dp"
          android:text="수면 시간을 알려주세요"
          android:textSize="17dp"
          android:textColor="@color/white"
          android:textStyle="bold"
          app:layout_constraintTop_toBottomOf="@id/cl"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl2"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/constraint"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <TextView
         android:id="@+id/tvBed"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="취침 시간"
         android:textSize="17dp"
         android:textColor="@color/black_white"
         android:textStyle="bold"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toEndOf="@id/clBedtime"
         app:layout_constraintStart_toStartOf="@id/clBedtime"
         app:layout_constraintBottom_toTopOf="@id/clBedtime"
         app:layout_constraintVertical_chainStyle="packed"/>
      <TextView
         android:id="@+id/tvWake"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="기상 시간"
         android:textSize="17dp"
         android:textColor="@color/black_white"
         android:textStyle="bold"
         app:layout_constraintTop_toTopOf="@id/tvBed"
         app:layout_constraintStart_toStartOf="@id/clWake"
         app:layout_constraintEnd_toEndOf="@id/clWake"
         app:layout_constraintBottom_toBottomOf="@id/tvBed"/>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clBedtime"
         android:layout_width="0dp"
         android:layout_height="135dp"
         android:background="@drawable/sleep_box1"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:padding="10dp"
         app:layout_constraintTop_toBottomOf="@id/tvBed"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@id/clWake"
         app:layout_constraintBottom_toTopOf="@id/cvSave">
         <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bedtime"
            android:textSize="17dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvBedtime"
            app:layout_constraintVertical_chainStyle="packed" />
         <TextView
            android:id="@+id/tvBedtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="0 : 0"
            android:textSize="30dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintEnd_toEndOf="@id/tv1"
            app:layout_constraintBottom_toBottomOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/clWake"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:background="@drawable/sleep_box2"
         android:layout_marginRight="30dp"
         android:padding="10dp"
         app:layout_constraintTop_toTopOf="@id/clBedtime"
         app:layout_constraintStart_toEndOf="@id/clBedtime"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="@id/clBedtime">
         <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waketime"
            android:textSize="17dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvWakeupTime"
            app:layout_constraintVertical_chainStyle="packed"/>
         <TextView
            android:id="@+id/tvWakeupTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="0 : 0"
            android:textSize="30dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv2"
            app:layout_constraintStart_toStartOf="@id/tv2"
            app:layout_constraintEnd_toEndOf="@id/tv2"
            app:layout_constraintBottom_toBottomOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.cardview.widget.CardView
         android:id="@+id/cvSave"
         android:layout_width="220dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_marginBottom="35dp"
         app:cardBackgroundColor="@color/light_purple"
         app:cardCornerRadius="35dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toStartOf="parent">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="9dp"
            android:paddingBottom="9dp">
            <TextView
               android:id="@+id/tvStart"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="저장"
               android:textColor="@color/white"
               android:textSize="16dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>