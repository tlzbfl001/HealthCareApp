<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/cl1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/sleep_background"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingLeft="25dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="24dp"
                   android:src="@drawable/arrow_back"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:tint="@color/white" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="나의 기상/취침 시간 기록"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/clBack"
                app:layout_constraintEnd_toEndOf="parent"/>
            <nl.joery.timerangepicker.TimeRangePicker
               android:id="@+id/picker"
               android:layout_width="240dp"
               android:layout_height="240dp"
               android:layout_marginTop="10dp"
               app:trp_thumbIconEnd="@drawable/sleep_icon1"
               app:trp_thumbIconStart="@drawable/sleep_icon2"
               app:trp_endTime="6:30"
               app:trp_startTime="00:00"
               app:trp_clockTickColor="@color/white"
               app:trp_clockLabelColor="@color/white"
               app:trp_sliderWidth="20dp"
               app:trp_sliderColor="#80FFFFFF"
               app:layout_constraintTop_toBottomOf="@id/clBack"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
               android:id="@+id/tvTotal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0h 0m"
               android:textSize="20dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               app:layout_constraintTop_toTopOf="@id/picker"
               app:layout_constraintStart_toStartOf="@id/picker"
               app:layout_constraintEnd_toEndOf="@id/picker"
               app:layout_constraintBottom_toBottomOf="@id/picker"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:text="수면 시간을 알려주세요"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/picker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <TextView
             android:id="@+id/tvBed"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="40dp"
             android:text="취침 시간"
             android:textSize="18dp"
             android:textColor="@color/black"
             android:textStyle="bold"
             app:layout_constraintTop_toBottomOf="@id/cl1"
             app:layout_constraintEnd_toEndOf="@id/clBedtime"
             app:layout_constraintStart_toStartOf="@id/clBedtime"
             app:layout_constraintBottom_toTopOf="@id/clBedtime"
             app:layout_constraintVertical_chainStyle="packed"/>
         <TextView
             android:id="@+id/tvWake"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="기상 시간"
             android:textSize="18dp"
             android:textColor="@color/black"
             android:textStyle="bold"
             app:layout_constraintTop_toTopOf="@id/tvBed"
             app:layout_constraintStart_toStartOf="@id/clWake"
             app:layout_constraintEnd_toEndOf="@id/clWake"
             app:layout_constraintBottom_toBottomOf="@id/tvBed"/>
         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/clBedtime"
             android:layout_width="0dp"
             android:layout_height="140dp"
             android:background="@drawable/sleep_box1"
             android:layout_marginTop="12dp"
             android:layout_marginLeft="25dp"
             android:padding="10dp"
             app:layout_constraintTop_toBottomOf="@id/tvBed"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toStartOf="@id/clWake"
             app:layout_constraintBottom_toTopOf="@id/view">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bedtime"
                android:textSize="16dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvBedtime"
                app:layout_constraintVertical_chainStyle="packed" />
            <TextView
                android:id="@+id/tvBedtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0 : 0"
                android:textSize="30dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                app:layout_constraintStart_toStartOf="@id/tv1"
                app:layout_constraintEnd_toEndOf="@id/tv1"
                app:layout_constraintBottom_toBottomOf="parent" />
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/clWake"
             android:layout_width="0dp"
             android:layout_height="140dp"
             android:background="@drawable/sleep_box2"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:padding="10dp"
             app:layout_constraintTop_toTopOf="@id/clBedtime"
             app:layout_constraintStart_toEndOf="@id/clBedtime"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="@id/clBedtime">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bedtime"
                android:textSize="16dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvWakeupTime"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tvWakeupTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0 : 0"
                android:textSize="30dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv2"
                app:layout_constraintStart_toStartOf="@id/tv2"
                app:layout_constraintEnd_toEndOf="@id/tv2"
                app:layout_constraintBottom_toBottomOf="parent" />
         </androidx.constraintlayout.widget.ConstraintLayout>
         <View
             android:id="@+id/view"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             app:layout_constraintBottom_toTopOf="@id/cvSave"/>
         <androidx.cardview.widget.CardView
             android:id="@+id/cvSave"
             android:layout_width="250dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginBottom="50dp"
             app:cardBackgroundColor="#9F98FF"
             app:cardCornerRadius="30dp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
               <TextView
                   android:id="@+id/tvStart"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="저장"
                   android:textColor="@color/white"
                   android:textSize="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>