<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   tools:context=".view.setting.Tab1Fragment"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white_black">
   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <TextView
         android:id="@+id/tvConnect"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/black_white"
         android:text="Connected"
         android:textSize="16dp"
         android:layout_marginTop="20sp"
         android:layout_marginLeft="20dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"/>
      <Button
         android:id="@+id/btnConnect"
         android:layout_width="136dp"
         android:layout_height="wrap_content"
         android:text="Connect"
         android:layout_marginRight="20dp"
         app:layout_constraintTop_toTopOf="@id/tvConnect"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="@id/tvConnect"/>
      <View
         android:id="@+id/view1"
         android:layout_width="match_parent"
         android:layout_height="0.7dp"
         android:background="#aaaaaa"
         android:layout_marginTop="10dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toBottomOf="@id/btnConnect"/>
      <Button
         android:id="@+id/btnInit"
         android:layout_width="136dp"
         android:layout_height="wrap_content"
         android:text="Initial"
         android:layout_marginTop="10dp"
         app:layout_constraintTop_toBottomOf="@id/view1"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>
      <View
         android:id="@+id/view2"
         android:layout_width="match_parent"
         android:layout_height="0.7dp"
         android:background="#aaaaaa"
         android:layout_marginTop="10dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toBottomOf="@id/btnInit"/>
      <TextView
         android:id="@+id/tvCount1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Door 1 Count : 0"
         android:textColor="@color/black_white"
         android:layout_marginLeft="20dp"
         app:layout_constraintTop_toTopOf="@id/btnDoor1"
         app:layout_constraintBottom_toBottomOf="@id/btnGetCount1"
         app:layout_constraintStart_toStartOf="parent"/>
      <Button
         android:id="@+id/btnDoor1"
         android:layout_width="136dp"
         android:layout_height="wrap_content"
         android:text="Init Door1"
         android:layout_marginTop="10dp"
         android:layout_marginRight="20dp"
         app:layout_constraintTop_toBottomOf="@id/view2"
         app:layout_constraintEnd_toEndOf="parent"/>
      <Button
         android:id="@+id/btnGetCount1"
         android:layout_width="136dp"
         android:layout_height="wrap_content"
         android:text="Get a count"
         app:layout_constraintTop_toBottomOf="@id/btnDoor1"
         app:layout_constraintEnd_toEndOf="@id/btnDoor1"/>
      <View
         android:id="@+id/view3"
         android:layout_width="match_parent"
         android:layout_height="0.7dp"
         android:background="#aaaaaa"
         android:layout_marginTop="10dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toBottomOf="@id/btnGetCount1"/>
      <TextView
         android:id="@+id/tvCount2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Door 2 Count : 0"
         android:textColor="@color/black_white"
         android:layout_marginLeft="20dp"
         app:layout_constraintTop_toTopOf="@id/btnDoor2"
         app:layout_constraintBottom_toBottomOf="@id/btnGetCount2"
         app:layout_constraintStart_toStartOf="parent"/>
      <Button
         android:id="@+id/btnDoor2"
         android:layout_width="136dp"
         android:layout_height="wrap_content"
         android:text="Init Door2"
         android:layout_marginTop="10dp"
         android:layout_marginRight="20dp"
         app:layout_constraintTop_toBottomOf="@id/view3"
         app:layout_constraintEnd_toEndOf="parent"/>
      <Button
         android:id="@+id/btnGetCount2"
         android:layout_width="136dp"
         android:layout_height="wrap_content"
         android:text="Get a count"
         app:layout_constraintTop_toBottomOf="@id/btnDoor2"
         app:layout_constraintEnd_toEndOf="@id/btnDoor2"/>
      <View
         android:id="@+id/view4"
         android:layout_width="match_parent"
         android:layout_height="0.7dp"
         android:background="#aaaaaa"
         android:layout_marginTop="10dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toBottomOf="@id/btnGetCount2"/>
      <TextView
         android:id="@+id/tvCount3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Door 3 Count : 0"
         android:textColor="@color/black_white"
         android:layout_marginLeft="20dp"
         app:layout_constraintTop_toTopOf="@id/btnDoor3"
         app:layout_constraintBottom_toBottomOf="@id/btnGetCount3"
         app:layout_constraintStart_toStartOf="parent"/>
      <Button
         android:id="@+id/btnDoor3"
         android:layout_width="136dp"
         android:layout_height="wrap_content"
         android:text="Init Door2"
         android:layout_marginTop="10dp"
         android:layout_marginRight="20dp"
         app:layout_constraintTop_toBottomOf="@id/view4"
         app:layout_constraintEnd_toEndOf="parent"/>
      <Button
         android:id="@+id/btnGetCount3"
         android:layout_width="136dp"
         android:layout_height="wrap_content"
         android:text="Get a count"
         app:layout_constraintTop_toBottomOf="@id/btnDoor3"
         app:layout_constraintEnd_toEndOf="@id/btnDoor3"/>
      <View
         android:id="@+id/view"
         android:layout_width="match_parent"
         android:layout_height="0.7dp"
         android:background="#aaaaaa"
         android:layout_marginTop="10dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toBottomOf="@id/btnGetCount3"/>
      <Button
         android:id="@+id/btnOnOff"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:visibility="gone"
         android:layout_marginTop="10dp"
         android:layout_marginRight="20dp"
         android:text="Light ON/OFF"
         app:layout_constraintTop_toBottomOf="@id/view"
         app:layout_constraintEnd_toEndOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>