<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white">
   <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true">
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
               android:layout_width="145dp"
               android:layout_height="145dp"
               android:background="@drawable/water_top"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingLeft="25dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
               <ImageView
                   android:layout_width="15dp"
                   android:layout_height="25dp"
                   android:src="@drawable/arrow_left"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
               android:id="@+id/ivLogo"
               android:layout_width="120dp"
               android:layout_height="13dp"
               android:src="@drawable/logo3"
               android:layout_marginTop="30dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.cardview.widget.CardView
               android:id="@+id/cvDate"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="17dp"
               app:cardBackgroundColor="#FBFAFA"
               app:cardCornerRadius="15dp"
               app:cardElevation="0dp"
               app:layout_constraintTop_toBottomOf="@id/ivLogo"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <ImageView
                     android:id="@+id/ivPrev"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/ic_left_triangle"
                     android:paddingLeft="5dp"
                     android:paddingRight="5dp"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toStartOf="@id/tvDate"/>
                  <TextView
                     android:id="@+id/tvDate"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="2023년 7월 23일"
                     android:textColor="@color/black"
                     android:textSize="15dp"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toStartOf="@id/ivNext"
                     app:layout_constraintStart_toEndOf="@id/ivPrev"/>
                  <ImageView
                     android:id="@+id/ivNext"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/ic_right_triangle"
                     android:paddingLeft="5dp"
                     android:paddingRight="5dp"
                     app:layout_constraintStart_toEndOf="@id/tvDate"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clBox1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/cvDate"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.cardview.widget.CardView
                  android:id="@+id/cvFood"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="17dp"
                  android:layout_marginBottom="17dp"
                  android:layout_marginRight="8dp"
                  android:layout_marginLeft="25dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardCornerRadius="6dp"
                  app:cardElevation="3dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toStartOf="@id/cvWater"
                  app:layout_constraintHorizontal_weight="3">
                  <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:paddingTop="6dp"
                     android:paddingBottom="6dp"
                     android:text="식단"
                     android:textSize="18dp"
                     android:textColor="#888888"/>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                  android:id="@+id/cvWater"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="8dp"
                  app:cardBackgroundColor="#4AC0F2"
                  app:cardCornerRadius="6dp"
                  app:cardElevation="3dp"
                  app:layout_constraintStart_toEndOf="@id/cvFood"
                  app:layout_constraintTop_toTopOf="@id/cvFood"
                  app:layout_constraintBottom_toBottomOf="@id/cvFood"
                  app:layout_constraintEnd_toStartOf="@id/cvExercise"
                  app:layout_constraintHorizontal_weight="2">
                  <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:paddingTop="6dp"
                     android:paddingBottom="6dp"
                     android:text="물"
                     android:textSize="18dp"
                     android:textColor="@color/white"/>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                  android:id="@+id/cvExercise"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="8dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardCornerRadius="6dp"
                  app:cardElevation="3dp"
                  app:layout_constraintStart_toEndOf="@id/cvWater"
                  app:layout_constraintTop_toTopOf="@id/cvWater"
                  app:layout_constraintBottom_toBottomOf="@id/cvWater"
                  app:layout_constraintEnd_toStartOf="@id/cvBody"
                  app:layout_constraintHorizontal_weight="3">
                  <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:paddingTop="6dp"
                     android:paddingBottom="6dp"
                     android:text="운동"
                     android:textSize="18dp"
                     android:textColor="#888888"/>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                  android:id="@+id/cvBody"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="8dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardCornerRadius="6dp"
                  app:cardElevation="3dp"
                  app:layout_constraintStart_toEndOf="@id/cvExercise"
                  app:layout_constraintTop_toTopOf="@id/cvExercise"
                  app:layout_constraintBottom_toBottomOf="@id/cvExercise"
                  app:layout_constraintEnd_toStartOf="@id/cvSleep"
                  app:layout_constraintHorizontal_weight="3">
                  <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:paddingTop="6dp"
                     android:paddingBottom="6dp"
                     android:text="신체"
                     android:textSize="18dp"
                     android:textColor="#888888"/>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                  android:id="@+id/cvSleep"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="8dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardCornerRadius="6dp"
                  app:cardElevation="3dp"
                  app:layout_constraintStart_toEndOf="@id/cvBody"
                  app:layout_constraintTop_toTopOf="@id/cvBody"
                  app:layout_constraintBottom_toBottomOf="@id/cvBody"
                  app:layout_constraintEnd_toStartOf="@id/cvDrug"
                  app:layout_constraintHorizontal_weight="3">
                  <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:paddingTop="6dp"
                     android:paddingBottom="6dp"
                     android:text="수면"
                     android:textSize="18dp"
                     android:textColor="#888888"/>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                  android:id="@+id/cvDrug"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="25dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardCornerRadius="6dp"
                  app:cardElevation="3dp"
                  app:layout_constraintStart_toEndOf="@id/cvSleep"
                  app:layout_constraintTop_toTopOf="@id/cvSleep"
                  app:layout_constraintBottom_toBottomOf="@id/cvSleep"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_weight="4">
                  <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:paddingTop="6dp"
                     android:paddingBottom="6dp"
                     android:text="약복용"
                     android:textSize="18dp"
                     android:textColor="#888888"/>
               </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clBox2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/clBox1"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/clLeft"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="25dp"
                  android:background="@drawable/rec_detail"
                  android:paddingTop="25dp"
                  android:paddingBottom="25dp"
                  app:layout_constraintEnd_toStartOf="@id/clRight"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintHorizontal_weight="5">
                  <androidx.constraintlayout.widget.ConstraintLayout
                     android:layout_width="120dp"
                     android:layout_height="120dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="parent">
                     <com.dinuscxj.progressbar.CircleProgressBar
                        android:id="@+id/pbWater"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:progress_background_color="#F0F7FD"
                        app:progress_end_color="#4AC0F2"
                        app:progress_start_color="#4AC0F2"
                        app:progress_start_degree="90"
                        app:progress_stroke_cap="round"
                        app:progress_stroke_width="12dp"
                        app:progress_style="solid_line" />
                     <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="18dp"
                        android:background="@drawable/oval_border_water">
                        <TextView
                           android:id="@+id/tvFood1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="섭취한 물"
                           android:textColor="@color/black"
                           android:textSize="13dp"
                           app:layout_constraintBottom_toTopOf="@id/tvIntake"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintVertical_chainStyle="packed" />
                        <TextView
                           android:id="@+id/tvIntake"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="0잔/0ml"
                           android:textColor="@color/black"
                           android:textSize="11dp"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toBottomOf="@id/tvFood1" />
                     </androidx.constraintlayout.widget.ConstraintLayout>
                  </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/clRight"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="25dp"
                  app:layout_constraintTop_toTopOf="@id/clLeft"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toEndOf="@id/clLeft"
                  app:layout_constraintHorizontal_weight="3">
                  <androidx.cardview.widget.CardView
                     android:id="@+id/cvGoal"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:layout_marginRight="5dp"
                     app:cardBackgroundColor="#F2F2F2"
                     app:cardCornerRadius="8dp"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintEnd_toEndOf="parent">
                     <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                        <ImageView
                           android:id="@+id/iv1"
                           android:layout_width="11dp"
                           android:layout_height="14dp"
                           android:src="@drawable/setting_goal"
                           app:tint="@color/black"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:paddingLeft="5dp"
                           android:text="목표설정"
                           android:textColor="@color/black"
                           android:textSize="14dp"
                           app:layout_constraintStart_toEndOf="@id/iv1"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintBottom_toBottomOf="parent"/>
                     </androidx.constraintlayout.widget.ConstraintLayout>
                  </androidx.cardview.widget.CardView>
                  <TextView
                     android:id="@+id/tv2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:text="컵 기준(1잔당)"
                     android:textColor="#999999"
                     android:textSize="12dp"
                     app:layout_constraintTop_toBottomOf="@id/cvGoal"
                     app:layout_constraintEnd_toEndOf="@id/cvGoal"/>
                  <TextView
                     android:id="@+id/tvVolume"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="200ml"
                     android:textColor="@color/black"
                     android:textSize="15dp"
                     app:layout_constraintTop_toBottomOf="@id/tv2"
                     app:layout_constraintEnd_toEndOf="@id/cvGoal"/>
                  <View
                     android:id="@+id/view1"
                     android:layout_width="0dp"
                     android:layout_height="1dp"
                     android:background="#DDDDDD"
                     android:layout_marginTop="4dp"
                     app:layout_constraintTop_toBottomOf="@id/tvVolume"
                     app:layout_constraintStart_toStartOf="@id/cvGoal"
                     app:layout_constraintEnd_toEndOf="@id/cvGoal"/>
                  <TextView
                     android:id="@+id/tv4"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="4dp"
                     android:text="목표 섭취물"
                     android:textColor="#999999"
                     android:textSize="12dp"
                     app:layout_constraintTop_toBottomOf="@id/view1"
                     app:layout_constraintEnd_toEndOf="@id/cvGoal" />
                  <TextView
                     android:id="@+id/tvGoal"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0잔/0ml"
                     android:textColor="@color/black"
                     android:textSize="15dp"
                     app:layout_constraintTop_toBottomOf="@id/tv4"
                     app:layout_constraintEnd_toEndOf="@id/cvGoal" />
                  <View
                     android:id="@+id/view2"
                     android:layout_width="0dp"
                     android:layout_height="1dp"
                     android:background="#DDDDDD"
                     android:layout_marginTop="4dp"
                     app:layout_constraintTop_toBottomOf="@id/tvGoal"
                     app:layout_constraintStart_toStartOf="@id/cvGoal"
                     app:layout_constraintEnd_toEndOf="@id/cvGoal"/>
                  <TextView
                     android:id="@+id/tv6"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="4dp"
                     android:text="남은 물"
                     android:textColor="#999999"
                     android:textSize="12dp"
                     app:layout_constraintTop_toBottomOf="@id/view2"
                     app:layout_constraintEnd_toEndOf="@id/cvGoal" />
                  <TextView
                     android:id="@+id/tvRemain"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0잔/0ml"
                     android:textColor="@color/black"
                     android:textSize="15dp"
                     app:layout_constraintTop_toBottomOf="@id/tv6"
                     app:layout_constraintEnd_toEndOf="@id/cvGoal" />
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="25dp"
                  android:text="하루 물섭취"
                  android:textColor="#777777"
                  android:textSize="16dp"
                  app:layout_constraintTop_toTopOf="@id/clRecord"
                  app:layout_constraintBottom_toBottomOf="@id/clRecord"
                  app:layout_constraintStart_toStartOf="parent"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/clRecord"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/detail_bar"
                  android:backgroundTint="#4AC0F2"
                  android:elevation="5dp"
                  android:layout_marginTop="20dp"
                  android:layout_marginBottom="15dp"
                  android:paddingLeft="7dp"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  android:paddingRight="40dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent">
                  <ImageView
                     android:id="@+id/iv2"
                     android:layout_width="18dp"
                     android:layout_height="18dp"
                     android:background="@drawable/oval"
                     android:src="@drawable/pencil"
                     android:padding="3.3dp"
                     app:tint="#4AC0F2"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent" />
                  <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="5dp"
                     android:text="물섭취 기록"
                     android:textColor="@color/white"
                     android:textSize="14dp"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintStart_toEndOf="@id/iv2"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:layout_marginBottom="30dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               app:cardBackgroundColor="#99D4FF"
               app:cardCornerRadius="15dp"
               app:cardElevation="10dp"
               app:layout_constraintTop_toBottomOf="@id/cl1"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent">
               <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
                  <androidx.constraintlayout.widget.ConstraintLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <ImageView
                        android:layout_width="15dp"
                        android:layout_height="14dp"
                        android:src="@drawable/water_drop_left"
                        app:layout_constraintBottom_toBottomOf="@id/tvTitle2"
                        app:layout_constraintEnd_toStartOf="@id/tvTitle2"/>
                     <TextView
                        android:id="@+id/tvTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="물 섭취량을 기록해 주세요"
                        android:textColor="#4E698A"
                        android:textSize="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                     <ImageView
                        android:layout_width="15dp"
                        android:layout_height="14dp"
                        android:src="@drawable/water_drop_right"
                        app:layout_constraintStart_toEndOf="@id/tvTitle2"
                        app:layout_constraintBottom_toBottomOf="@id/tvTitle2"/>
                     <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:background="@drawable/rec_alpha"
                        app:layout_constraintTop_toBottomOf="@id/tvTitle2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                           android:id="@+id/tvWaterCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="0"
                           android:textColor="@color/black"
                           android:textSize="22dp"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                           android:id="@+id/tvText1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="잔"
                           android:textColor="@color/black"
                           android:textSize="22dp"
                           app:layout_constraintStart_toEndOf="@id/tvWaterCount"
                           app:layout_constraintTop_toTopOf="@id/tvWaterCount"
                           app:layout_constraintBottom_toBottomOf="@id/tvWaterCount"/>
                        <TextView
                            android:id="@+id/tvText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="("
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            app:layout_constraintStart_toEndOf="@id/tvText1"
                            app:layout_constraintTop_toTopOf="@id/tvText1"
                            app:layout_constraintBottom_toBottomOf="@id/tvText1"/>
                        <TextView
                           android:id="@+id/tvWaterUnit"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="0"
                           android:textColor="@color/black"
                           android:textSize="12dp"
                           app:layout_constraintStart_toEndOf="@id/tvText2"
                           app:layout_constraintTop_toTopOf="@id/tvText2"
                           app:layout_constraintBottom_toBottomOf="@id/tvText2"/>
                        <TextView
