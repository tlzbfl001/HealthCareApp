<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:fillViewport="true"
   android:background="@color/white"
   app:layout_constraintTop_toTopOf="parent"
   app:layout_constraintStart_toStartOf="parent"
   app:layout_constraintEnd_toEndOf="parent"
   app:layout_constraintBottom_toBottomOf="parent">
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp">
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
               android:layout_width="16dp"
               android:layout_height="21dp"
               android:src="@drawable/setting_goal"
               app:tint="@color/black"
               android:layout_marginTop="1dp"
               app:layout_constraintTop_toTopOf="@id/tvSetting"
               app:layout_constraintBottom_toBottomOf="@id/tvSetting"
               app:layout_constraintEnd_toStartOf="@id/tvSetting"/>
            <TextView
               android:id="@+id/tvSetting"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="25dp"
               android:paddingLeft="3dp"
               android:text="목표설정"
               android:textColor="@color/black"
               android:textSize="15.4dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.dinuscxj.progressbar.CircleProgressBar
               android:id="@+id/pbWater"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:progress_background_color="#F0F7FD"
               app:progress_end_color="#4AC0F2"
               app:progress_start_color="#4AC0F2"
               app:progress_start_degree="280"
               app:progress_stroke_cap="round"
               app:progress_stroke_width="17dp"
               app:progress_style="solid_line" />
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="17dp"
               android:background="@drawable/oval">
               <TextView
                  android:id="@+id/tvFood1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="섭취한 물"
                  android:textColor="@color/black"
                  android:textSize="16.5dp"
                  android:textStyle="bold"
                  app:layout_constraintBottom_toTopOf="@id/tvIntake"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintVertical_chainStyle="packed" />
               <TextView
                  android:id="@+id/tvIntake"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0잔/0ml"
                  android:textColor="@color/black"
                  android:textSize="16.5dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/tvFood1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/cl2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view1"
            app:layout_constraintHorizontal_chainStyle="packed">
            <TextView
               android:id="@+id/tv1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="목표 섭취물"
               android:textSize="16.5dp"
               android:textStyle="bold"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toTopOf="@id/tvGoal"
               app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
               android:id="@+id/tvGoal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxWidth="100dp"
               android:text="0잔/0ml"
               android:textSize="16.5dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               android:maxLines="1"
               android:ellipsize="end"
               app:layout_constraintTop_toBottomOf="@id/tv1"
               app:layout_constraintStart_toStartOf="@id/tv1"
               app:layout_constraintEnd_toEndOf="@id/tv1"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/clText1"
            app:layout_constraintTop_toTopOf="@id/clText1"
            app:layout_constraintEnd_toStartOf="@id/clText2"
            app:layout_constraintBottom_toBottomOf="@id/clText1"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintEnd_toStartOf="@id/view2"
            app:layout_constraintBottom_toBottomOf="@id/view1">
            <TextView
               android:id="@+id/tv2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="남은 물"
               android:textSize="16.5dp"
               android:textStyle="bold"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toTopOf="@id/tvRemain"
               app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
               android:id="@+id/tvRemain"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxWidth="100dp"
               android:text="0잔/0ml"
               android:textSize="16.5dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               android:maxLines="1"
               android:ellipsize="end"
               app:layout_constraintTop_toBottomOf="@id/tv2"
               app:layout_constraintStart_toStartOf="@id/tv2"
               app:layout_constraintEnd_toEndOf="@id/tv2"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
         <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/clText2"
            app:layout_constraintTop_toTopOf="@id/clText2"
            app:layout_constraintEnd_toStartOf="@id/clText3"
            app:layout_constraintBottom_toBottomOf="@id/clText2"/>
         <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toTopOf="@id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/view2">
            <TextView
               android:id="@+id/tv3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="컵 기준"
               android:textSize="16.5dp"
               android:textStyle="bold"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toTopOf="@id/tvMl"
               app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
               android:id="@+id/tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="2dp"
               android:text="(1잔당)"
               android:textSize="13dp"
               android:textStyle="bold"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="@id/tv3"
               app:layout_constraintBottom_toBottomOf="@id/tv3"
               app:layout_constraintStart_toEndOf="@id/tv3"
               app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
               android:id="@+id/tvMl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxWidth="100dp"
               android:text="0ml"
               android:textSize="16.5dp"
               android:textColor="@color/black"
               android:textAlignment="center"
               android:maxLines="1"
               android:ellipsize="end"
               app:layout_constraintTop_toBottomOf="@id/tv3"
               app:layout_constraintStart_toStartOf="@id/tv3"
               app:layout_constraintEnd_toEndOf="@id/tv"
               app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <View
         android:id="@+id/viewBottom"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:background="@drawable/oval_water_bottom"
         android:backgroundTint="#DCEDF7"
         android:layout_marginTop="20dp"/>
      <LinearLayout
         android:id="@+id/cl3"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="-30dp"
         android:background="#DCEDF7"
         android:orientation="vertical">
         <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="25dp"
            android:text="하루 물섭취"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"/>
         <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="물 섭취량을 기록해주세요"
            android:textSize="14dp"
            android:textColor="@color/black"/>
         <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="60dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:padding="15dp">
               <ImageView
                  android:id="@+id/ivMinus"
                  android:layout_width="42dp"
                  android:layout_height="42dp"
                  android:background="@drawable/rec_10_border_gray"
                  android:src="@drawable/baseline_minus"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="5dp"
                  app:tint="#56B8FF"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toStartOf="@id/ivPlus"/>
               <ImageView
                  android:id="@+id/ivPlus"
                  android:layout_width="42dp"
                  android:layout_height="42dp"
                  android:background="@drawable/rec_10_border_gray"
                  android:backgroundTint="#56B8FF"
                  android:src="@drawable/baseline_add"
                  android:layout_marginLeft="13dp"
                  app:tint="@color/white"
                  app:layout_constraintStart_toEndOf="@id/ivMinus"
                  app:layout_constraintTop_toTopOf="@id/ivMinus"/>
               <ImageView
                  android:layout_width="35dp"
                  android:layout_height="35dp"
                  android:src="@drawable/baseline_water_drop"
                  android:layout_marginRight="1dp"
                  app:tint="#56B8FF"
                  app:layout_constraintTop_toTopOf="@id/ivMinus"
                  app:layout_constraintBottom_toBottomOf="@id/ivMinus"
                  app:layout_constraintEnd_toStartOf="@id/tvCount" />
               <TextView
                  android:id="@+id/tvCount"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="1dp"
                  android:text="0잔"
                  android:textSize="21dp"
                  android:textColor="@color/black"
                  app:layout_constraintEnd_toStartOf="@id/tvUnit"
                  app:layout_constraintTop_toTopOf="@id/ivMinus"
                  app:layout_constraintBottom_toBottomOf="@id/ivMinus"/>
               <TextView
                  android:id="@+id/tvUnit"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="6dp"
                  android:layout_marginRight="3dp"
                  android:text="(0ml)"
                  android:textSize="12dp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="@id/tvCount"
                  app:layout_constraintBottom_toBottomOf="@id/tvCount"
                  app:layout_constraintEnd_toEndOf="parent"/>
               <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rv"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  app:layout_constraintTop_toBottomOf="@id/ivMinus"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.cardview.widget.CardView>
      </LinearLayout>
   </LinearLayout>
</androidx.core.widget.NestedScrollView>