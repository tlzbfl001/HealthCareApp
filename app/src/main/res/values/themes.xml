<resources xmlns:tools="http://schemas.android.com/tools">
   <!-- Base application theme. -->
   <style name="Theme.HealthApp" parent="Theme.Material3.DayNight.NoActionBar">
      <!-- Primary brand color. -->
      <item name="colorPrimary">@color/purple_500</item>
      <item name="colorPrimaryVariant">@color/purple_700</item>
      <item name="colorOnPrimary">@color/white</item>
      <!-- Secondary brand color. -->
      <item name="colorSecondary">@color/teal_200</item>
      <item name="colorSecondaryVariant">@color/teal_700</item>
      <item name="colorOnSecondary">@color/black</item>
      <!-- Status bar color. -->
      <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
      <!-- Customize your theme here. -->
   </style>

   <style name="timePickerStyle" parent="Theme.AppCompat.Dialog.Alert">
      <item name="title">false</item>
      <item name="android:textColorPrimary">#000000</item>
      <item name="android:textColorSecondary">#eeeeee</item>
      <item name="android:textSize">14dp</item>
   </style>

   <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
      <item name="android:textSize">13dp</item>
   </style>
   <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
      <item name="android:textSize">14dp</item>
   </style>
</resources>