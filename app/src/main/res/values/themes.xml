<resources xmlns:tools="http://schemas.android.com/tools">
   <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
      <item name="android:windowIsTranslucent">true</item>
   </style>

   <style name="timePickerStyle" parent="Theme.AppCompat.Dialog.Alert">
      <item name="title">false</item>
      <item name="android:textColorPrimary">#000000</item>
      <item name="android:textColorSecondary">#eeeeee</item>
      <item name="android:textSize">14dp</item>
   </style>

   <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
      <item name="android:textSize">12dp</item>
   </style>
   <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
      <item name="android:textSize">13dp</item>
   </style>

   <style name="MySpinnerDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
      <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
      <item name="background">@drawable/rec_15</item>
      <item name="colorControlActivated">@color/design_default_color_primary</item>
      <item name="colorControlHighlight">@color/material_dynamic_primary30</item>
      <item name="android:textColor">@color/black</item>
   </style>

   <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
      <item name="android:datePickerMode">spinner</item>
   </style>
</resources>